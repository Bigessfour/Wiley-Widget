<UserControl
    x:Class="WileyWidget.Views.DashboardView"
    xmlns="using:Microsoft.UI.Xaml"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="using:Microsoft.UI.Xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Spacing="24" Margin="24">
            <TextBlock Text="Dashboard" Style="{ThemeResource TitleTextBlockStyle}" />
            <TextBlock Text="Financial metrics will appear here" Style="{ThemeResource BodyTextBlockStyle}" />
        </StackPanel>
    </Grid>
</UserControl>
