<UserControl
    x:Class="WileyWidget.Views.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Dashboard" Style="{ThemeResource TitleTextBlockStyle}" Margin="24,24,24,12" />
        
        <DataGrid Grid.Row="1" ItemsSource="{Binding Metrics}" AutoGenerateColumns="False" CanUserSortColumns="True" Margin="24">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Metric" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Value" Binding="{Binding Value, StringFormat='{}{0:N2}'}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
