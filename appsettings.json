{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.\\SQLEXPRESS;Database=WileyWidgetDev;Trusted_Connection=True;Encrypt=False;TrustServerCertificate=True;"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async",
      "Serilog.Sinks.Email",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Process",
      "Serilog.Enrichers.Thread"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning",
        "WileyWidget": "Debug"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      "WithEnvironmentName"
    ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/wiley-widget-.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 30,
                "fileSizeLimitBytes": 104857600,
                "rollOnFileSizeLimit": true,
                "shared": true,
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {MachineName} {ProcessId}:{ThreadId} {SourceContext} {CorrelationId} {Message:lj}{NewLine}{Exception}"
              }
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/errors-.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 90,
                "restrictedToMinimumLevel": "Warning",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {MachineName} {ProcessId}:{ThreadId} {SourceContext} {CorrelationId} {Message:lj}{NewLine}{Exception}"
              }
            }
          ]
        }
      },
      {
        "Name": "Email",
        "Args": {
          "connectionInfo": {
            "FromEmail": "${EMAIL_FROM_ADDRESS:errors@wileywidget.local}",
            "ToEmail": "${EMAIL_TO_ADDRESS:admin@wileywidget.local}",
            "MailServer": "${EMAIL_SMTP_SERVER:smtp.gmail.com}",
            "Port": "${EMAIL_SMTP_PORT:587}",
            "EnableSsl": true,
            "Credentials": {
              "UserName": "${EMAIL_USERNAME}",
              "Password": "${EMAIL_PASSWORD}"
            }
          },
          "restrictedToMinimumLevel": "Error",
          "batchPostingLimit": 10,
          "period": "00:00:30",
          "subject": "Wiley Widget Application Error - {MachineName}",
          "body": "An error occurred in Wiley Widget application:\n\nTimestamp: {Timestamp}\nMachine: {MachineName}\nProcess: {ProcessId}\nThread: {ThreadId}\nLevel: {Level}\n\nMessage: {Message}\n\nException: {Exception}\n\nCorrelation ID: {CorrelationId}"
        }
      }
    ]
  },
  "Database": {
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false,
    "CommandTimeout": 30,
    "MaxRetryCount": 3,
    "MaxRetryDelay": "00:00:10"
  },
  "HealthChecks": {
    "DefaultTimeout": "00:00:45",
    "DatabaseTimeout": "00:00:30",
    "ExternalServiceTimeout": "00:00:20",
    "MaxRetries": 3,
    "RetryDelay": "00:00:2",
    "CircuitBreakerThreshold": 5,
    "CircuitBreakerTimeout": "00:05:00",
    "ContinueOnFailure": true,
    "SkipServices": []
  },
  "QuickBooks": {
    "ClientId": "${QBO_CLIENT_ID}",
    "ClientSecret": "${QBO_CLIENT_SECRET}",
    "RedirectUri": "${QBO_REDIRECT_URI}",
    "Environment": "${QBO_ENVIRONMENT}"
  },
  "Syncfusion": {
    "LicenseKey": "${SYNCFUSION_LICENSE_KEY}"
  },
  "XAI": {
    "ApiKey": "${XAI_API_KEY}",
    "BaseUrl": "https://api.x.ai/v1/",
    "TimeoutSeconds": 15,
    "Model": "grok-4-0709"
  },
  "OpenAI": {
    "ApiKey": "${OPENAI_API_KEY}",
    "BaseUrl": "https://api.openai.com/v1/",
    "Model": "gpt-4"
  }
}
