{
  "exclude_patterns": [
    "^docs/",
    "^scripts/",
    "^tools/",
    "^config/",
    "^docker/",
    "^ci-logs/",
    "^sql/",
    "\\.md$",
    "\\.txt$",
    "\\.yml$",
    "\\.yaml$",
    "ai-fetchable-manifest\\.json$",
    "^tests/",
    "^src/legacy/",
    "packages\\.lock\\.json$",
    "Directory\\.(Build|Packages)\\.props$",
    "^signing/",
    "^secrets/",
    "^licenses/",
    "^\\.github/",
    "^\\.vscode/",
    "^\\.continue/",
    "^wwwroot/",
    "^schemas/"
  ],
  "focus_mode": false,
  "include_only_extensions": [".cs", ".csproj", ".sln", ".xaml"],
  "max_files": 1000,
  "emit_full_tree": false,
  "tree_max_depth": 4,
  "max_tree_entries_per_dir": 50,
  "test_file_summary_length": 5000,
  "max_summary_length": 1000
}
