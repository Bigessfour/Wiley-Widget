<Window x:Class="WileyWidget.Views.ActivateXaiDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:res="clr-namespace:WileyWidget.Resources"
    xmlns:svc="clr-namespace:WileyWidget.Services"
    mc:Ignorable="d"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Title="{x:Static res:Strings.ActivateDialogTitle}" Height="320" Width="520" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{x:Static res:Strings.ActivateDialogHeading}" FontSize="16" FontWeight="Bold"/>
    <TextBlock Grid.Row="1" TextWrapping="Wrap" Margin="0,8,0,12" Text="{Binding Path=GetXaiActivationGuidance, Mode=OneTime}" AutomationProperties.HelpText="{x:Static res:Strings.ActivateDialogHeading}"/>

        <StackPanel Grid.Row="2" Orientation="Vertical">
            <Label Content="{x:Static res:Strings.ApiKeyLabel}" Target="{Binding ElementName=ApiKeyBox}"/>
            <PasswordBox x:Name="ApiKeyBox" Width="Auto" Height="28" AutomationProperties.Name="{x:Static res:Strings.ApiKeyLabel}" svc:PasswordBoxHelper.BoundPassword="{Binding XaiApiKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <Button x:Name="OpenConsoleBtn" Content="{x:Static res:Strings.OpenConsole}" Width="100" Margin="0,0,8,0" AutomationProperties.Name="{x:Static res:Strings.OpenConsole}" Command="{Binding OpenActivateXaiDialogCommand}"/>
                <Button x:Name="ValidateBtn" Content="{x:Static res:Strings.Validate}" Width="100" Margin="0,0,8,0" AutomationProperties.Name="{x:Static res:Strings.Validate}" Command="{Binding ValidateXaiKeyCommand}" CommandParameter="{Binding XaiApiKey}"/>
                <Button x:Name="SaveBtn" Content="{x:Static res:Strings.Save}" Width="100" IsEnabled="{Binding IsXaiKeyValidated}" AutomationProperties.Name="{x:Static res:Strings.Save}" Command="{Binding ValidateAndSaveXaiKeyCommand}" CommandParameter="{Binding XaiApiKey}"/>
                <Button x:Name="CancelBtn" Content="{x:Static res:Strings.Cancel}" Width="80" Margin="8,0,0,0" AutomationProperties.Name="{x:Static res:Strings.Cancel}" Command="{Binding CloseCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
            </StackPanel>
            <TextBlock Margin="0,8,0,0" TextWrapping="Wrap" Foreground="Gray" FontSize="12" Text="{x:Static res:Strings.GuidanceNote}"/>
            <TextBlock x:Name="StatusBlock" Margin="0,12,0,0" Foreground="DarkRed" TextWrapping="Wrap" Text="{Binding XaiValidationMessage, Mode=OneWay}" AutomationProperties.LiveSetting="Polite"/>
        </StackPanel>

        <TextBlock Grid.Row="3" HorizontalAlignment="Right" Foreground="Gray" FontSize="11">{x:Static res:Strings.KeyStorageNotice}</TextBlock>
    </Grid>
</Window>
