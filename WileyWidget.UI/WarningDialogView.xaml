<UserControl x:Class="WileyWidget.Views.WarningDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:behaviors="clr-namespace:WileyWidget.UI.Behaviors"
             xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="400"
             prism:ViewModelLocator.AutoWireViewModel="True"
             syncfusionskin:SfSkinManager.VisualStyle="FluentDark"
             behaviors:MouseFocusBehavior.EnableOnClick="True"
             behaviors:MouseFocusBehavior.EnableOnFirstMove="True">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Warning Icon -->
        <TextBlock Grid.Row="0"
                   Text="⚠️"
                   FontSize="24"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- Message -->
        <TextBlock Grid.Row="1"
                   Text="{Binding Message}"
                   TextWrapping="Wrap"
                   Margin="0,0,0,20"
                   FontSize="14"
                   HorizontalAlignment="Center"/>

        <!-- OK Button -->
        <Button Grid.Row="2"
                Content="{Binding ButtonText}"
                Command="{Binding CloseCommand}"
                Width="80"
                Height="30"
                HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
