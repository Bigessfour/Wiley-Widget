<UserControl x:Class="WileyWidget.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:WileyWidget.Converters"
             xmlns:controls="clr-namespace:WileyWidget.UI.Controls"
             xmlns:behaviors="clr-namespace:WileyWidget.UI.Behaviors"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
             xmlns:notification="http://schemas.syncfusion.com/wpf"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <UserControl.InputBindings>
        <KeyBinding Key="S" Modifiers="Control" Command="{Binding SaveSettingsCommand}" />
        <KeyBinding Key="R" Modifiers="Control" Command="{Binding ResetSettingsCommand}" />
    </UserControl.InputBindings>
    <UserControl.Resources>
        <local:BooleanToVisibilityConverter x:Key="BoolToVis" />

        <!-- ZeroToVisibleConverter for empty state handling -->
        <local:ZeroToVisibleConverter x:Key="ZeroToVisibleConverter" />

        <Style x:Key="ValidationErrorBorder" TargetType="Control">
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.HasError)}" Value="True">
                    <Setter Property="BorderBrush" Value="Red" />
                    <Setter Property="BorderThickness" Value="2" />
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ValidationTextBox" TargetType="TextBox" BasedOn="{StaticResource ValidationErrorBorder}">
            <Setter Property="Margin" Value="0,0,0,2" />
        </Style>
        <Style x:Key="ValidationIntegerTextBox" TargetType="syncfusion:IntegerTextBox" BasedOn="{StaticResource ValidationErrorBorder}">
            <Setter Property="Margin" Value="0,0,0,2" />
        </Style>
        <Style x:Key="ValidationSfMaskedEdit" TargetType="syncfusion:SfMaskedEdit" BasedOn="{StaticResource ValidationErrorBorder}">
            <Setter Property="Margin" Value="0,0,0,2" />
        </Style>
    </UserControl.Resources>

    <DockPanel behaviors:FocusOnLoadBehavior.IsEnabled="True" behaviors:FocusOnLoadBehavior.TargetName="SettingsFocusAnchor">
        <Border x:Name="SettingsFocusAnchor" Focusable="True" Width="0" Height="0" Opacity="0" />
        <!-- Ribbon Toolbar -->
        <syncfusion:Ribbon DockPanel.Dock="Top" x:Name="SettingsRibbon">
            <syncfusion:RibbonTab Caption="Settings">
                <syncfusion:RibbonBar Header="Actions">
                    <syncfusion:RibbonButton Label="Save" SizeForm="Large" Command="{Binding SaveSettingsCommand}"
                                           ToolTip="Save all settings (Ctrl+S)" />
                    <syncfusion:RibbonButton Label="Reset" Command="{Binding ResetSettingsCommand}"
                                           ToolTip="Reset all settings to defaults (Ctrl+R)" />
                    <syncfusion:RibbonButton Label="Test Connection" Command="{Binding TestConnectionCommand}"
                                           ToolTip="Test database connection" />
                </syncfusion:RibbonBar>
                <syncfusion:RibbonBar Header="Search">
                    <TextBox Width="200"
                           Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           Margin="5"
                           ToolTip="Search settings by name or description" />
                </syncfusion:RibbonBar>
            </syncfusion:RibbonTab>
        </syncfusion:Ribbon>

        <!-- Main Content Area -->
        <TabControl x:Name="SettingsTabControl" Margin="8">
            <!-- Help Text -->
            <TabControl.Resources>
                <TextBlock x:Key="HelpText"
                         Text="* Required fields"
                         FontStyle="Italic"
                         Foreground="Gray"
                         Margin="0,0,0,8"
                         HorizontalAlignment="Right" />
            </TabControl.Resources>
            <!-- General Settings -->
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="8">
                        <StaticResource ResourceKey="HelpText" />
                        <GroupBox Header="Application Settings" Margin="0,0,0,8">
                            <StackPanel>
                                <Label Content="Theme:" />
                                <ComboBox ItemsSource="{Binding AvailableThemes}"
                                         SelectedItem="{Binding SelectedTheme, Mode=TwoWay}"
                                         Margin="0,0,0,8"
                                         IsEditable="False"
                                         ToolTip="Choose the visual theme for the application interface. Changes apply immediately to toggle between FluentDark and FluentLight themes." />

                                <!-- Quick Theme Toggle Control -->
                                <Label Content="Quick Theme Switch:" />
                                <controls:ThemeToggleControl Margin="0,4,0,12"
                                                           HorizontalAlignment="Left"
                                                           ToolTip="Toggle between Light and Dark themes instantly" />

                                <Label Content="Window Width:" />
                                <syncfusion:IntegerTextBox Value="{Binding WindowWidth, Mode=TwoWay, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                                                         MinValue="800"
                                                         MaxValue="3840"
                                                         Style="{DynamicResource ValidationIntegerTextBox}"
                                                         ToolTip="Set the default window width in pixels (800-3840)" />
                                <TextBlock Text="{Binding WindowWidthValidation}"
                                         Foreground="Red"
                                         FontSize="10"
                                         Margin="0,0,0,6" />

                                <Label Content="Window Height:" />
                                <syncfusion:IntegerTextBox Value="{Binding WindowHeight, Mode=TwoWay, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                                                         MinValue="600"
                                                         MaxValue="2160"
                                                         Style="{DynamicResource ValidationIntegerTextBox}"
                                                         ToolTip="Set the default window height in pixels (600-2160)" />
                                <TextBlock Text="{Binding WindowHeightValidation}"
                                         Foreground="Red"
                                         FontSize="10"
                                         Margin="0,0,0,8" />

                                <CheckBox Content="Maximize window on startup"
                                         IsChecked="{Binding MaximizeOnStartup, Mode=TwoWay}"
                                         Margin="0,0,0,8" />

                                <CheckBox Content="Show splash screen"
                                         IsChecked="{Binding ShowSplashScreen, Mode=TwoWay}"
                                         Margin="0,0,0,8" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Data Settings" Margin="0,0,0,8">
                            <StackPanel>
                                <Label Content="Database Connection:" />
                                <TextBox Text="{Binding DatabaseConnectionString, Mode=TwoWay}"
                                       IsReadOnly="True"
                                       Background="LightGray"
                                       Margin="0,0,0,8" />

                                <Label Content="Database Status:" />
                                <TextBlock Text="{Binding DatabaseStatus}"
                                         Foreground="{Binding DatabaseStatusColor}"
                                         Margin="0,0,0,8" />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Property Grid View (Syncfusion) -->
            <TabItem Header="Property Grid">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Help Text -->
                    <TextBlock Grid.Row="0"
                             Text="Use the Property Grid below to view and edit all settings organized by category"
                             FontStyle="Italic"
                             Foreground="Gray"
                             Margin="0,0,0,8"
                             HorizontalAlignment="Left" />

                    <!-- Settings Editor using standard WPF StackPanel -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="SettingsStackPanel" Margin="8">
                            <TextBlock Text="Application settings will be displayed here."
                                     FontSize="14"
                                     Margin="0,8,0,16" />

                            <!-- Settings controls will be added here programmatically or via binding -->
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- QuickBooks Integration -->
            <TabItem Header="QuickBooks Integration">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="8">
                        <GroupBox Header="OAuth2 Configuration" Margin="0,0,0,8">
                            <StackPanel>
                                <Label Content="Client ID:*" />
                                <syncfusion:SfMaskedEdit Mask="[A-Za-z0-9]*"
                                                       Value="{Binding QuickBooksClientId, Mode=TwoWay, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                                                       Style="{DynamicResource ValidationSfMaskedEdit}"
                                                       PromptChar=" "
                                                       ToolTip="Sandbox setup: Intuit Developer Portal → My Apps → (Your App) → Keys &amp; OAuth → Client ID.\nWe are integrating against Sandbox for now. Do not use production keys yet.\nQuick reference: docs/integrations/quickbooks-oauth-setup.md" />
                                <TextBlock Text="{Binding QuickBooksClientIdValidation}"
                                         Foreground="Red"
                                         FontSize="10"
                                         Margin="0,0,0,8" />

                                <Label Content="Client Secret:*" />
                                <syncfusion:SfMaskedEdit Mask="[A-Za-z0-9]*"
                                                       Value="{Binding QuickBooksClientSecret, Mode=TwoWay, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                                                       Style="{DynamicResource ValidationSfMaskedEdit}"
                                                       PromptChar=" "
                                                       ToolTip="Sandbox setup: Intuit Developer Portal → My Apps → (Your App) → Keys &amp; OAuth → Client Secret.\nStored via Secret Vault; keep this confidential.\nQuick reference: docs/integrations/quickbooks-oauth-setup.md" />
                                <TextBlock Text="{Binding QuickBooksClientSecretValidation}"
                                         Foreground="Red"
                                         FontSize="10"
                                         Margin="0,0,0,8" />

                                <Label Content="Redirect URI:*" />
                                <TextBox Text="{Binding QuickBooksRedirectUri, Mode=TwoWay, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                                       Style="{DynamicResource ValidationTextBox}"
                                       ToolTip="Use EXACTLY: http://localhost:8080/callback (must match Intuit → Keys &amp; OAuth → Redirect URIs).\nIf listener binding fails, run netsh URL ACL as admin. See quick reference doc." />
                                <TextBlock Text="{Binding QuickBooksRedirectUriValidation}"
                                         Foreground="Red"
                                         FontSize="10"
                                         Margin="0,0,0,8" />

                                <Label Content="Environment:" />
                                <syncfusion:ComboBoxAdv ItemsSource="{Binding QuickBooksEnvironments}"
                                                     SelectedItem="{Binding SelectedQuickBooksEnvironment, Mode=TwoWay}"
                                                     Margin="0,0,0,8"
                                                     ToolTip="Select Sandbox for development (recommended). Production should be used only with approved credentials." />

                                <TextBlock Text="Note: We are targeting a Sandbox integration first. Use the quick reference at docs/integrations/quickbooks-oauth-setup.md"
                                           Foreground="#888"
                                           FontStyle="Italic"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,8" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Connection Status" Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="{Binding QuickBooksConnectionStatus}"
                                         Foreground="{Binding QuickBooksStatusColor}"
                                         Margin="0,0,0,8" />

                                <Button Content="Test QuickBooks Connection"
                                       Command="{Binding TestQuickBooksConnectionCommand}"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,8,0" />

                                <Button Content="Connect to QuickBooks"
                                       Command="{Binding ConnectQuickBooksCommand}"
                                       HorizontalAlignment="Left" />

                <Separator Margin="0,8,0,8" />

                <TextBlock Text="OAuth Callback URL ACL"
                       FontWeight="Bold"
                       Margin="0,0,0,4" />
                <TextBlock Text="{Binding QuickBooksUrlAclStatus}"
                       Foreground="{Binding QuickBooksUrlAclStatusColor}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,8" />
                <Button Content="Check URL ACL"
                    Command="{Binding CheckQuickBooksUrlAclCommand}"
                    HorizontalAlignment="Left"
                    ToolTip="Checks if netsh URL ACL is configured for the redirect URI. If not, shows the exact command to run as Administrator." />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Syncfusion License -->
            <TabItem Header="Syncfusion License">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="8">
                        <GroupBox Header="License Information" Margin="0,0,0,8">
                            <StackPanel>
                                <Label Content="License Key:" />
                                <syncfusion:SfMaskedEdit Mask="[A-Za-z0-9\-=]*"
                                                       Value="{Binding SyncfusionLicenseKey, Mode=TwoWay}"
                                                       Margin="0,0,0,2"
                                                       Height="60"
                                                       PromptChar=" "
                                                       ToolTip="Enter your Syncfusion license key. Get your license from https://www.syncfusion.com/account/downloads" />
                                <TextBlock Text="{Binding SyncfusionLicenseKeyValidation}"
                                         Foreground="Red"
                                         FontSize="10"
                                         Margin="0,0,0,8" />

                                <Label Content="License Status:" />
                                <TextBlock Text="{Binding SyncfusionLicenseStatus}"
                                         Foreground="{Binding SyncfusionLicenseStatusColor}"
                                         Margin="0,0,0,8" />

                                <Button Content="Validate License"
                                       Command="{Binding ValidateLicenseCommand}"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,8" />

                                <TextBlock Text="Note: License key is stored securely in environment variables."
                                         FontStyle="Italic"
                                         Foreground="Gray" />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- XAI Settings -->
            <TabItem Header="XAI Integration">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="8">
                        <GroupBox Header="XAI Configuration" Margin="0,0,0,8">
                            <StackPanel>
                                <Label Content="API Key:*" />
                                <syncfusion:SfMaskedEdit Mask="xai-[A-Za-z0-9]*"
                                                       Value="{Binding XaiApiKey, Mode=TwoWay}"
                                                       Margin="0,0,0,2"
                                                       PromptChar=" "
                                                       ToolTip="Enter your XAI API key for AI functionality. Format: xai-xxxxxxxx. Stored securely in local vault." />
                                <TextBlock Text="{Binding XaiApiKeyValidation}"
                                         Foreground="Red"
                                         FontSize="10"
                                         Margin="0,0,0,8" />

                                <Label Content="Base URL:" />
                                <TextBox Text="{Binding XaiBaseUrl, Mode=TwoWay}"
                                       Margin="0,0,0,8"
                                       ToolTip="XAI API base URL (usually https://api.x.ai/v1/). Change only if using a custom endpoint." />

                                <Label Content="Model:" />
                                <syncfusion:ComboBoxAdv ItemsSource="{Binding AvailableModels}"
                                                     SelectedItem="{Binding XaiModel, Mode=TwoWay}"
                                                     Margin="0,0,0,8"

                                                     ToolTip="Select the AI model to use for responses. grok-4-0709 recommended for latest features." />

                                <Label Content="Timeout (seconds):" />
                                <syncfusion:IntegerTextBox Value="{Binding XaiTimeoutSeconds, Mode=TwoWay}"
                                                         MinValue="5"
                                                         MaxValue="300"
                                                         Margin="0,0,0,2"
                                                         ToolTip="Maximum time to wait for AI responses (5-300 seconds)" />
                                <TextBlock Text="{Binding XaiTimeoutValidation}"
                                         Foreground="Red"
                                         FontSize="10"
                                         Margin="0,0,0,8" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="AI Settings" Margin="0,0,0,8">
                            <StackPanel>
                                <Label Content="Response Style:" />
                                <syncfusion:ComboBoxAdv ItemsSource="{Binding AvailableResponseStyles}"
                                                     SelectedItem="{Binding ResponseStyle, Mode=TwoWay}"
                                                     Margin="0,0,0,8"

                                                     ToolTip="Choose how detailed and structured AI responses should be (Balanced recommended for general use)" />

                                <Label Content="Personality:" />
                                <syncfusion:ComboBoxAdv ItemsSource="{Binding AvailablePersonalities}"
                                                     SelectedItem="{Binding Personality, Mode=TwoWay}"
                                                     Margin="0,0,0,8"

                                                     ToolTip="Select the communication style for AI responses (Professional recommended for business use)" />

                                <Label Content="Context Window Size:" />
                                <syncfusion:IntegerTextBox Value="{Binding ContextWindowSize, Mode=TwoWay}"
                                                         MinValue="1024"
                                                         MaxValue="32768"
                                                         Margin="0,0,0,2"
                                                         ToolTip="Maximum tokens the AI can process (1024-32768, multiple of 1024)" />
                                <TextBlock Text="{Binding ContextWindowValidation}"
                                         Foreground="Red"
                                         FontSize="10"
                                         Margin="0,0,0,8" />

                                <CheckBox Content="Enable Safety Filters"
                                         IsChecked="{Binding EnableSafetyFilters, Mode=TwoWay}"
                                         Margin="0,0,0,8"
                                         ToolTip="Filter potentially harmful or inappropriate content" />

                                <Label Content="Temperature:" />
                                <syncfusion:DoubleTextBox Value="{Binding Temperature, Mode=TwoWay}"
                                                        MinValue="0.0"
                                                        MaxValue="2.0"
                                                        Margin="0,0,0,2"
                                                        ToolTip="Controls randomness in responses (0.0 = deterministic, 2.0 = very random)" />
                                <TextBlock Text="{Binding TemperatureValidation}"
                                         Foreground="Red"
                                         FontSize="10"
                                         Margin="0,0,0,8" />

                                <Label Content="Max Tokens:" />
                                <syncfusion:IntegerTextBox Value="{Binding MaxTokens, Mode=TwoWay}"
                                                         MinValue="1"
                                                         MaxValue="32768"
                                                         Margin="0,0,0,2"
                                                         ToolTip="Maximum tokens to generate in responses" />
                                <TextBlock Text="{Binding MaxTokensValidation}"
                                         Foreground="Red"
                                         FontSize="10"
                                         Margin="0,0,0,8" />

                                <CheckBox Content="Enable Streaming Responses"
                                         IsChecked="{Binding EnableStreaming, Mode=TwoWay}"
                                         Margin="0,0,0,8"
                                         ToolTip="Stream responses as they are generated (real-time)" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Connection Status" Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="{Binding XaiConnectionStatus}"
                                         Foreground="{Binding XaiStatusColor}"
                                         Margin="0,0,0,8" />

                                <Button Content="Test XAI Connection"
                                       Command="{Binding TestXaiConnectionCommand}"
                                       HorizontalAlignment="Left" />
                            </StackPanel>
                        </GroupBox>

                        <TextBlock Text="Note: API key is stored securely. Configure these settings to enable AI-powered features."
                                 FontStyle="Italic"
                                 Foreground="Gray"
                                 TextWrapping="Wrap" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Fiscal Year Settings -->
            <TabItem Header="Fiscal Year">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="8">
                        <GroupBox Header="Fiscal Year Configuration" Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="Configure when your organization's fiscal year begins."
                                         FontStyle="Italic"
                                         Foreground="Gray"
                                         Margin="0,0,0,8"
                                         TextWrapping="Wrap" />

                                <Label Content="Fiscal Year Start Month:" />
                                <syncfusion:ComboBoxAdv ItemsSource="{Binding FiscalYearMonths}"
                                                     SelectedValue="{Binding FiscalYearStartMonth, Mode=TwoWay}"
                                                     DisplayMemberPath="Name"
                                                     SelectedValuePath="Value"
                                                     Margin="0,0,0,8"

                                                     ToolTip="Select the month when your organization's fiscal year begins (July is common for municipalities)" />

                                <Label Content="Fiscal Year Start Day:" />
                                <syncfusion:IntegerTextBox Value="{Binding FiscalYearStartDay, Mode=TwoWay}"
                                                         MinValue="1"
                                                         MaxValue="31"
                                                         Margin="0,0,0,2" />
                                <TextBlock Text="{Binding FiscalYearDayValidation}"
                                         Foreground="Red"
                                         FontSize="10"
                                         Margin="0,0,0,8" />

                                <Separator Margin="0,8" />

                                <Label Content="Current Fiscal Year:" FontWeight="Bold" />
                                <TextBlock Text="{Binding CurrentFiscalYearDisplay}"
                                         FontSize="14"
                                         Foreground="#2196F3"
                                         Margin="0,0,0,8" />

                                <Label Content="Fiscal Year Period:" />
                                <TextBlock Text="{Binding FiscalYearPeriodDisplay}"
                                         Margin="0,0,0,8" />

                                <Label Content="Days Remaining in Fiscal Year:" />
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="{Binding DaysRemainingInFiscalYear}"
                                             FontWeight="Bold"
                                             FontSize="20"
                                             Foreground="#4CAF50" />
                                    <TextBlock Text=" days"
                                             VerticalAlignment="Bottom"
                                             Margin="4,0,0,4" />
                                </StackPanel>

                                <Separator Margin="0,8" />

                                <TextBlock FontWeight="Bold"
                                         Foreground="DarkOrange"
                                         TextWrapping="Wrap"
                                         Margin="0,0,0,4">
                                    ⚠️ Warning: Changing fiscal year settings affects:
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap"
                                         Foreground="Gray"
                                         Margin="16,0,0,8">
                                    • Budget period calculations<LineBreak/>
                                    • Financial reports and comparisons<LineBreak/>
                                    • Year-to-date (YTD) calculations<LineBreak/>
                                    • Historical data categorization
                                </TextBlock>

                                <Button Content="Save Fiscal Year Settings"
                                       Command="{Binding SaveFiscalYearSettingsCommand}"
                                       HorizontalAlignment="Left"
                                       Margin="0,8,0,0"
                                       Padding="16,8" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Fiscal Year Preview" Margin="0,0,0,8">
                            <StackPanel>
                                <Label Content="Available Fiscal Years:" />
                                <ListBox ItemsSource="{Binding AvailableFiscalYears}"
                                        Height="120"
                                        Margin="0,0,0,8" />

                                <TextBlock Text="Note: Budget periods and reports can filter by these fiscal years."
                                         FontStyle="Italic"
                                         Foreground="Gray" />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Advanced Settings -->
            <TabItem Header="Advanced">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="8">
                        <GroupBox Header="Performance Settings" Margin="0,0,0,8">
                            <StackPanel>
                                <CheckBox Content="Enable dynamic column generation"
                                         IsChecked="{Binding EnableDynamicColumns, Mode=TwoWay}"
                                         Margin="0,0,0,8" />

                                <CheckBox Content="Enable data caching"
                                         IsChecked="{Binding EnableDataCaching, Mode=TwoWay}"
                                         Margin="0,0,0,8" />

                                <Label Content="Cache expiration (minutes):" />
                                <syncfusion:IntegerTextBox Value="{Binding CacheExpirationMinutes, Mode=TwoWay}"
                                                         MinValue="1"
                                                         MaxValue="1440"
                                                         Margin="0,0,0,2" />
                                <TextBlock Text="{Binding CacheExpirationValidation}"
                                         Foreground="Red"
                                         FontSize="10"
                                         Margin="0,0,0,8" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Logging Settings" Margin="0,0,0,8">
                            <StackPanel>
                                <Label Content="Log Level:" />
                                <syncfusion:ComboBoxAdv ItemsSource="{Binding LogLevels}"
                                                     SelectedItem="{Binding SelectedLogLevel, Mode=TwoWay}"
                                                     Margin="0,0,0,8"

                                                     ToolTip="Set minimum log level (Debug for development, Information for production)" />

                                <CheckBox Content="Enable file logging"
                                         IsChecked="{Binding EnableFileLogging, Mode=TwoWay}"
                                         Margin="0,0,0,8" />

                                <Label Content="Log file path:" />
                                <TextBox Text="{Binding LogFilePath, Mode=TwoWay}"
                                       Margin="0,0,0,8" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="System Information" Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="{Binding SystemInfo}" TextWrapping="Wrap" />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Background="Transparent">
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Settings Status: "/><Run Text="{Binding SettingsStatus}" />
                </TextBlock>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Last Saved: "/><Run Text="{Binding LastSaved}" />
                </TextBlock>
            </StatusBarItem>
            <StatusBarItem>
                <notification:SfBusyIndicator IsBusy="{Binding IsBusy}"
                                           Header="{Binding BusyMessage, FallbackValue='Loading...'}"
                                           AnimationType="Windmill" />
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</UserControl>
