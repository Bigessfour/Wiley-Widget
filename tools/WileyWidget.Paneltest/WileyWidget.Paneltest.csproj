<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0-windows</TargetFramework>
    <LangVersion>14.0</LangVersion>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <NoWarn>$(NoWarn);CS8618;CS8602;CS8600;NU1701</NoWarn>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <Description>Panel Test Harness - Isolated panel rendering and testing for WileyWidget.WinForms</Description>
  </PropertyGroup>

  <ItemGroup>
    <!-- WileyWidget Project References -->
    <ProjectReference Include="..\..\src\WileyWidget.Models\WileyWidget.Models.csproj" />
    <ProjectReference Include="..\..\src\WileyWidget.Data\WileyWidget.Data.csproj" />
    <ProjectReference Include="..\..\src\WileyWidget.Business\WileyWidget.Business.csproj" />
    <ProjectReference Include="..\..\src\WileyWidget.Services\WileyWidget.Services.csproj" />
    <ProjectReference Include="..\..\src\WileyWidget.Services.Abstractions\WileyWidget.Services.Abstractions.csproj" />
    <ProjectReference Include="..\..\src\WileyWidget.Abstractions\WileyWidget.Abstractions.csproj" />
    <ProjectReference Include="..\..\src\WileyWidget.WinForms\WileyWidget.WinForms.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- Testing & Mocking -->
    <PackageReference Include="xunit" />
    <PackageReference Include="Xunit.StaFact" />
    <PackageReference Include="Moq" />
    <PackageReference Include="FluentAssertions" />
    
    <!-- Core Dependencies -->
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
    <PackageReference Include="Microsoft.Extensions.Logging" />
    <PackageReference Include="Microsoft.Extensions.Configuration" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" />
    <PackageReference Include="CommunityToolkit.Mvvm" />
    
    <!-- Logging -->
    <PackageReference Include="Serilog" />
    <PackageReference Include="Serilog.Sinks.Console" />
    <PackageReference Include="Serilog.Sinks.File" />
    
    <!-- Syncfusion -->
    <PackageReference Include="Syncfusion.Core.WinForms" />
    <PackageReference Include="Syncfusion.Licensing" />
    <PackageReference Include="Syncfusion.SfDataGrid.WinForms" />
    <PackageReference Include="Syncfusion.Chart.Windows" />
    <PackageReference Include="Syncfusion.Gauge.Windows" />
  </ItemGroup>

</Project>
