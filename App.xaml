<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="WileyWidget.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WileyWidget"
    xmlns:converters="using:WileyWidget.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Syncfusion WinUI Fluent Theme -->
                <ResourceDictionary Source="ms-appx:///Syncfusion.Themes.WinUI.WinUI/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Value Converters -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:BoolToVisibilityInverseConverter x:Key="InverseBoolToVisibilityConverter" />
            <converters:StringToBrushConverter x:Key="StringToBrushConverter" />
            <converters:NumberToColorConverter x:Key="NumberToColorConverter" />
            <converters:CurrencyConverter x:Key="CurrencyConverter" />
            <converters:PercentageConverter x:Key="PercentageConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
