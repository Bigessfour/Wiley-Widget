<Window x:Class="WileyWidget.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WileyWidget"
        xmlns:syncfusionskin ="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=FluentDark}"
        mc:Ignorable="d"
        Title="Wiley Widget"
        Height="400"
        Width="600"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        RenderOptions.EdgeMode="Aliased"
        RenderOptions.BitmapScalingMode="HighQuality">
    <Window.Resources>
        <Storyboard x:Key="LoadingAnimation" RepeatBehavior="Forever">
            <DoubleAnimation
                Storyboard.TargetName="ProgressBar"
                Storyboard.TargetProperty="Value"
                From="0"
                To="100"
                Duration="0:0:2"/>
        </Storyboard>

        <!-- Loading dots animation -->
        <Storyboard x:Key="LoadingDotsAnimation" RepeatBehavior="Forever">
            <DoubleAnimation
                Storyboard.TargetName="Dot1"
                Storyboard.TargetProperty="Opacity"
                From="0.2" To="1" Duration="0:0:0.6"
                BeginTime="0:0:0"/>
            <DoubleAnimation
                Storyboard.TargetName="Dot1"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                From="1" To="1.2" Duration="0:0:0.3"
                BeginTime="0:0:0"/>
    
            <DoubleAnimation
                Storyboard.TargetName="Dot2"
                Storyboard.TargetProperty="Opacity"
                From="0.2" To="1" Duration="0:0:0.6"
                BeginTime="0:0:0.2"/>
            <DoubleAnimation
                Storyboard.TargetName="Dot2"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                From="1" To="1.2" Duration="0:0:0.3"
                BeginTime="0:0:0.2"/>
    
            <DoubleAnimation
                Storyboard.TargetName="Dot3"
                Storyboard.TargetProperty="Opacity"
                From="0.2" To="1" Duration="0:0:0.6"
                BeginTime="0:0:0.4"/>
            <DoubleAnimation
                Storyboard.TargetName="Dot3"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                From="1" To="1.2" Duration="0:0:0.3"
                BeginTime="0:0:0.4"/>
        </Storyboard>

        <!-- Smooth progress transition -->
        <Storyboard x:Key="ProgressTransition">
            <DoubleAnimation
                Storyboard.TargetName="ProgressBar"
                Storyboard.TargetProperty="Value"
                Duration="0:0:0.8"/>
        </Storyboard>
    </Window.Resources>

    <Border CornerRadius="10" BorderBrush="#007ACC" BorderThickness="2">
        <Grid>
            <!-- Vector/Gradient Background (image removed) -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2D2D30" Offset="0"/>
                    <GradientStop Color="#003A66" Offset="0.5"/>
                    <GradientStop Color="#007ACC" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Slight dark overlay to reduce transparency and improve readability -->
            <Rectangle Fill="#55000000" />

            <!-- Content Overlay -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title with enhanced styling -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0">
                    <TextBlock x:Name="TitleTextBlock"
                              Text="Wiley Widget"
                              FontSize="42"
                              FontWeight="Light"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,0,0,10"/>

                    <!-- Subtitle -->
                    <TextBlock Text="Enterprise Business Solutions"
                              FontSize="16"
                              FontWeight="Normal"
                              Foreground="#CCCCCC"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,0,0,20"
                              Opacity="0.8"/>
                </StackPanel>

                <!-- Status Text with Loading Dots -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,10" Orientation="Horizontal">
                    <TextBlock x:Name="StatusTextBlock"
                              Text="Initializing application..."
                              FontSize="14"
                              Foreground="#CCCCCC"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>

                    <!-- Loading dots -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse x:Name="Dot1" Width="4" Height="4" Fill="#007ACC" Margin="2,0" Opacity="0.3">
                            <Ellipse.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse x:Name="Dot2" Width="4" Height="4" Fill="#007ACC" Margin="2,0" Opacity="0.3">
                            <Ellipse.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse x:Name="Dot3" Width="4" Height="4" Fill="#007ACC" Margin="2,0" Opacity="0.3">
                            <Ellipse.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                    </StackPanel>
                </StackPanel>

                <!-- Enhanced Progress Bar -->
                <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20">
                    <!-- WPF Progress Bar with Fluent Dark theme applied via SkinManager -->
                    <ProgressBar x:Name="ProgressBar"
                                Height="6"
                                Width="300"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,0,0,10"
                                Value="{Binding ProgressValue, Mode=OneWay}"
                                Maximum="100"
                                IsIndeterminate="{Binding IsIndeterminate, Mode=OneWay}">
                        <ProgressBar.Effect>
                            <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#007ACC" Opacity="0.3"/>
                        </ProgressBar.Effect>
                    </ProgressBar>

                    <!-- Progress percentage -->
                    <TextBlock x:Name="ProgressTextBlock"
                              Text="{Binding ProgressValue, StringFormat={}{0:0}%, Mode=OneWay}"
                              FontSize="12"
                              Foreground="#888888"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Professional Branding and System Info -->
                <StackPanel Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
                    <!-- Version and Build Info -->
                    <TextBlock Text="Version 1.0.0 • Build 2024.09.20"
                              FontSize="11"
                              Foreground="#888888"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,5"/>

                    <!-- System Info -->
                    <TextBlock Text=".NET 9.0 • Windows 11 • Enterprise Edition"
                              FontSize="10"
                              Foreground="#666666"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,5"
                              Opacity="0.7"/>

                    <!-- Copyright -->
                    <TextBlock Text="© 2024 Wiley Widget Corporation. All rights reserved."
                              FontSize="9"
                              Foreground="#555555"
                              HorizontalAlignment="Center"
                              Opacity="0.6"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>