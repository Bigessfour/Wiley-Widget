name: Grok Review

on:
  pull_request:
    types: [opened, synchronize, reopened]

jobs:
  grok-review:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup .NET
        uses: actions/setup-dotnet@v4
        with:
          dotnet-version: '8.0.x'

      - name: Restore dependencies
        run: dotnet restore

      - name: Build
        run: dotnet build --no-restore --configuration Release

      - name: Run tests (no-build)
        run: dotnet test --no-build --configuration Release --logger "console;verbosity=minimal"

      - name: Grok review placeholder
        run: |
          echo "Grok review placeholder: add policy checks or automation here"
