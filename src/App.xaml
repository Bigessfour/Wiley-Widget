<Application x:Class="WileyWidget.App"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:prism="http://prismlibrary.com/"
                        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                        xmlns:syncfusionClr="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
                        xmlns:syncfusionThemes="clr-namespace:Syncfusion.Themes.FluentLight.WPF;assembly=Syncfusion.Themes.FluentLight.WPF"
                        xmlns:converters="clr-namespace:WileyWidget.Converters;assembly=WileyWidget.UI"
                        xmlns:local="clr-namespace:WileyWidget"
                        prism:ViewModelLocator.AutoWireViewModel="True">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- ============================================================== -->
                <!-- Syncfusion Theme Integration using SfSkinManager (OFFICIAL)   -->
                <!-- Reference: https://help.syncfusion.com/wpf/themes/skin-manager -->
                <!-- ============================================================== -->
                <!--
                    IMPORTANT: Theme is set programmatically in App.xaml.cs via:
                    SfSkinManager.SetTheme(this, new Theme("FluentLight"));

                    Individual control theme dictionaries are loaded as needed below.
                    SfSkinManager will automatically apply themes to Syncfusion controls
                    at runtime when SetTheme is called.
                -->

                <!-- Syncfusion FluentLight theme dictionaries for specific controls -->
                <ResourceDictionary Source="/Syncfusion.Themes.FluentLight.WPF;component/MSControl/TextBox.xaml" />
                <ResourceDictionary Source="/Syncfusion.Themes.FluentLight.WPF;component/UpDown/UpDown.xaml" />

                <!-- Custom Wiley Widget theme overrides (must come AFTER Syncfusion themes) -->
                <!-- These extend/override Syncfusion theme resources with custom branding -->
                <ResourceDictionary Source="Themes/WileyTheme-Syncfusion.xaml" />

                <!-- Additional custom resources if needed -->
                <!-- <ResourceDictionary Source="Themes/CustomBrushes.xaml" /> -->
            </ResourceDictionary.MergedDictionaries>

            <!-- Inline resources (converters, etc.) -->
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
