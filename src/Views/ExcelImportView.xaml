<UserControl x:Class="WileyWidget.Views.ExcelImportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WileyWidget.Views"
             xmlns:behaviors="clr-namespace:WileyWidget.Behaviors"
             xmlns:converters="clr-namespace:WileyWidget"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             DataContext="{Binding ExcelImportViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800" xmlns:prism="http://prismlibrary.com/" prism:ViewModelLocator.AutoWireViewModel="True">
    <UserControl.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:BalanceColorConverter x:Key="BalanceColorConverter"/>
        <Style x:Key="CurrencyTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{Binding BudgetAmount, Converter={StaticResource BalanceColorConverter}}"/>
        </Style>
        <Style x:Key="VarianceTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{Binding Variance, Converter={StaticResource BalanceColorConverter}}"/>
        </Style>
        <Style x:Key="HeaderTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        </Style>

        <Style x:Key="SubHeaderTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        </Style>

        <Style x:Key="StatusTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20" behaviors:FocusOnLoadBehavior.IsEnabled="True" behaviors:FocusOnLoadBehavior.TargetName="ExcelImportFocusAnchor">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border x:Name="ExcelImportFocusAnchor" Focusable="True" Width="0" Height="0" Opacity="0" />

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Municipal Budget Import" Style="{StaticResource HeaderTextBlockStyle}"/>
            <TextBlock Text="Import budget data from Excel files (Town of Wiley and Wiley Sanitation District formats supported)"
                      Foreground="{DynamicResource SecondaryTextBrush}"
                      FontSize="12"/>
        </StackPanel>

        <!-- File Selection -->
        <GroupBox Grid.Row="1" Header="File Selection" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                        Text="{Binding SelectedFilePath, UpdateSourceTrigger=PropertyChanged}"
                        IsReadOnly="True"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                        ToolTip="{Binding SelectedFilePath}"/>

                <Button Grid.Column="1"
                        Content="Browse..."
                        Command="{Binding BrowseFileCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        Width="80"/>
            </Grid>
        </GroupBox>

        <!-- Import Options -->
        <GroupBox Grid.Row="2" Header="Import Options" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <CheckBox Content="Validate GASB Compliance"
                          IsChecked="{Binding ValidateGASBCompliance}"
                          Margin="0,0,0,8"
                          ToolTip="Validate imported data against Government Accounting Standards Board rules"/>

                <CheckBox Content="Create New Budget Period"
                          IsChecked="{Binding CreateNewBudgetPeriod}"
                          Margin="0,0,0,8"
                          ToolTip="Create a new budget period for the imported data"/>

                <CheckBox Content="Overwrite Existing Accounts"
                          IsChecked="{Binding OverwriteExistingAccounts}"
                          Margin="0,0,0,8"
                          ToolTip="Update existing accounts with imported data instead of creating duplicates"/>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Budget Year:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Text="{Binding BudgetYear, UpdateSourceTrigger=PropertyChanged}"
                            Width="80"
                            IsEnabled="{Binding CreateNewBudgetPeriod}"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Preview and Status -->
        <GroupBox Grid.Row="3" Header="Import Preview &amp; Status">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Preview Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Data Preview:" Style="{StaticResource SubHeaderTextBlockStyle}" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding PreviewRowCount, StringFormat=' ({0} rows found)'}"
                              Foreground="{DynamicResource SecondaryTextBrush}"
                              VerticalAlignment="Center"
                              Margin="10,0,20,0"/>

                    <!-- Filter Controls -->
                    <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                            Width="150"
                            VerticalAlignment="Center"
                            Margin="0,0,10,0"
                            ToolTip="Filter by account number, name, or department"/>

                    <TextBlock Text="Sort by:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox ItemsSource="{Binding SortOptions}"
                             SelectedItem="{Binding SelectedSortOption}"
                             DisplayMemberPath="DisplayName"
                             Width="120"
                             VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Preview SfSpreadsheet -->
                <syncfusion:SfSpreadsheet Grid.Row="1"
                                         x:Name="spreadsheet"
                                         MaxHeight="300"
                                         Margin="0,0,0,10">
                </syncfusion:SfSpreadsheet>

                <!-- SfSpreadsheet Ribbon -->
                <syncfusion:SfSpreadsheetRibbon Grid.Row="0"
                                               DataContext="{Binding ElementName=spreadsheet}"
                                               Margin="0,0,0,10"/>


                <!-- Status and Progress -->
                <StackPanel Grid.Row="2">
                    <!-- Progress Bar -->
                    <ProgressBar Value="{Binding ImportProgress}"
                                Height="20"
                                Margin="0,0,0,10"
                                Visibility="{Binding IsImporting, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <!-- Status Messages -->
                    <ItemsControl ItemsSource="{Binding StatusMessages}" Margin="0,0,0,10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=.}"
                                          Style="{StaticResource StatusTextBlockStyle}"
                                          Foreground="{Binding Path=., Converter={StaticResource StatusToColorConverter}}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Import Statistics -->
                    <Grid Visibility="{Binding ShowImportStats, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Accounts Imported:" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding ImportStats.AccountsImported}" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Errors:" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding ImportStats.Errors}" FontSize="18" FontWeight="Bold" Foreground="Red"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Warnings:" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding ImportStats.Warnings}" FontSize="18" FontWeight="Bold" Foreground="Orange"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Preview"
                    Command="{Binding PreviewCommand}"
                    IsEnabled="{Binding CanPreview}"
                    Style="{StaticResource ActionButtonStyle}"/>

            <Button Content="Import"
                    Command="{Binding ImportCommand}"
                    IsEnabled="{Binding CanImport}"
                    Style="{StaticResource ActionButtonStyle}"
                    Background="{DynamicResource AccentBrush}"
                    Foreground="White"/>

            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    IsEnabled="{Binding IsImporting}"
                    Style="{StaticResource ActionButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
