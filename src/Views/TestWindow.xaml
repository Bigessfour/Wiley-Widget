<Window x:Class="WileyWidget.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        mc:Ignorable="d"
        Title="WPF Rendering Test" Height="400" Width="600"
        WindowState="Normal"
        syncfusionskin:SfSkinManager.VisualStyle="FluentDark">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Test Header -->
        <Border Grid.Row="0" Background="#FF1976D2" Padding="20">
            <TextBlock Text="WPF Rendering Test - If you can see this, basic WPF is working"
                     Foreground="White" FontSize="16" FontWeight="Bold" />
        </Border>

        <!-- Test Content -->
        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock Text="Basic WPF Controls:" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" />

            <!-- Standard WPF Controls -->
            <Button Content="Standard WPF Button" Margin="0,0,0,10" Padding="10" />
            <TextBox Text="Standard WPF TextBox" Margin="0,0,0,10" Padding="5" />

            <TextBlock Text="Syncfusion Controls:" FontSize="14" FontWeight="Bold" Margin="0,20,0,10" />

            <!-- Syncfusion Controls -->
            <syncfusion:ButtonAdv Label="Syncfusion Button" Margin="0,0,0,10" />
            <syncfusion:SfDataGrid x:Name="TestGrid" Height="150" Margin="0,0,0,10"
                                 AutoGenerateColumns="False">
                <syncfusion:SfDataGrid.Columns>
                    <syncfusion:GridTextColumn HeaderText="Test Column" MappingName="TestData" />
                </syncfusion:SfDataGrid.Columns>
            </syncfusion:SfDataGrid>

            <TextBlock Text="If Syncfusion controls appear above, they are rendering correctly."
                     FontSize="12" Foreground="#666" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>