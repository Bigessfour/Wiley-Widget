<UserControl x:Class="WileyWidget.BudgetView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WileyWidget"
        xmlns:converters="clr-namespace:WileyWidget.Converters"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:notification="http://schemas.syncfusion.com/wpf"
    xmlns:chart="http://schemas.syncfusion.com/wpf"
        xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:behaviors="clr-namespace:WileyWidget.Behaviors"
        mc:Ignorable="d"
        d:DesignHeight="900" d:DesignWidth="1200"
        Loaded="BudgetView_Loaded" xmlns:prism="http://prismlibrary.com/" prism:ViewModelLocator.AutoWireViewModel="True">
    <!-- GASB-Compliant Municipal Budget Management UserControl -->
    <!-- DataContext set programmatically: {Binding BudgetViewModel} -->
    <!-- Theme: FluentDark with FluentLight fallback via SfSkinManager -->
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <local:BalanceColorConverter x:Key="BalanceColorConverter" />
        <converters:ZeroToVisibleConverter x:Key="ZeroToVisibleConverter" />
        <local:BudgetProgressConverter x:Key="BudgetProgressConverter" />

        <!-- Pie Chart Label Template -->
        <DataTemplate x:Key="PieChartLabelTemplate">
            <TextBlock Text="{Binding Percentage, StringFormat=P0}" 
                       FontWeight="Bold" 
                       Foreground="White" />
        </DataTemplate>

        <!-- Over-budget highlight style -->
        <Style x:Key="OverBudgetCellStyle" TargetType="syncfusion:TreeGridCell">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsOverBudget}" Value="True">
                    <Setter Property="Background" Value="#33FF0000" />
                    <Setter Property="Foreground" Value="#FFFF4444" />
                    <Setter Property="FontWeight" Value="Bold" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Grid enhancement resources -->
        <SolidColorBrush x:Key="GridFilterRowBackgroundBrush" Color="#FF1F2329" />
        <SolidColorBrush x:Key="GridFilterRowForegroundBrush" Color="#FFE9F3FF" />
        <SolidColorBrush x:Key="GridSelectionBrush" Color="#FF4F6BED" />
        <SolidColorBrush x:Key="GridSelectionForegroundBrush" Color="#FFFDFDFD" />
        <SolidColorBrush x:Key="GridHoverBrush" Color="#334F6BED" />
        <SolidColorBrush x:Key="TreeGridHeaderBrush" Color="#FF222832" />

        <Style x:Key="BudgetTreeGridHeaderStyle" TargetType="syncfusion:TreeGridHeaderCell">
            <Setter Property="Background" Value="{StaticResource TreeGridHeaderBrush}" />
            <Setter Property="Foreground" Value="#FFB0BCD6" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="8,4" />
        </Style>

        <Style x:Key="BudgetToolBarStyle" TargetType="ToolBar">
            <Setter Property="Background" Value="#FF2C3038" />
            <Setter Property="Foreground" Value="#FFDCE6F5" />
            <Setter Property="Padding" Value="8,4" />
        </Style>
    </UserControl.Resources>

    <Grid behaviors:FocusOnLoadBehavior.IsEnabled="True" behaviors:FocusOnLoadBehavior.TargetName="BudgetFocusAnchor">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /><!-- Toolbar -->
            <RowDefinition Height="*" /><!-- Tree Grid -->
            <RowDefinition Height="Auto" /><!-- Total Calculator -->
            <RowDefinition Height="250" /><!-- Charts -->
        </Grid.RowDefinitions>
        <Border x:Name="BudgetFocusAnchor" Focusable="True" Width="0" Height="0" Opacity="0" />

        <!-- Top Toolbar with Import/Export/Add functionality -->
        <ToolBar Grid.Row="0" 
                 Style="{StaticResource BudgetToolBarStyle}"
                 AutomationProperties.Name="Budget Management Toolbar">
            
                <syncfusion:ButtonAdv Label="Import Excel" 
                                      Command="{Binding ImportBudgetCommand}"
                                      ToolTip="Import from TOW/WSD Excel files (handles hierarchies like 410.1)"
                                      IconWidth="16" IconHeight="16">
                    <syncfusion:ButtonAdv.IconTemplate>
                        <DataTemplate>
                            <Path Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20M12,10L16,14H13.5V19H10.5V14H8L12,10Z" 
                                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=syncfusion:ButtonAdv}}" 
                                  Stretch="Uniform" 
                                  Width="16" Height="16" />
                        </DataTemplate>
                    </syncfusion:ButtonAdv.IconTemplate>
                </syncfusion:ButtonAdv>
                
                <syncfusion:ButtonAdv Label="Export Excel" 
                                      Command="{Binding ExportBudgetCommand}"
                                      ToolTip="Export budget to Excel with hierarchy preserved"
                                      IconWidth="16" IconHeight="16">
                    <syncfusion:ButtonAdv.IconTemplate>
                        <DataTemplate>
                            <Path Data="M14,2L20,8V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V4A2,2 0 0,1 6,2H14M18,20V9H13V4H6V20H18M12,19L8,15H10.5V12H13.5V15H16L12,19Z" 
                                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=syncfusion:ButtonAdv}}" 
                                  Stretch="Uniform" 
                                  Width="16" Height="16" />
                        </DataTemplate>
                    </syncfusion:ButtonAdv.IconTemplate>
                </syncfusion:ButtonAdv>
                
                <Separator />
                
                <syncfusion:ButtonAdv Label="Add Account" 
                                      Command="{Binding AddAccountCommand}"
                                      ToolTip="Add new budget account"
                                      IconWidth="16" IconHeight="16">
                    <syncfusion:ButtonAdv.IconTemplate>
                        <DataTemplate>
                            <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" 
                                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=syncfusion:ButtonAdv}}" 
                                  Stretch="Uniform" 
                                  Width="16" Height="16" />
                        </DataTemplate>
                    </syncfusion:ButtonAdv.IconTemplate>
                </syncfusion:ButtonAdv>
                
                <syncfusion:ButtonAdv Label="Delete Account" 
                                      Command="{Binding DeleteAccountCommand}"
                                      ToolTip="Delete selected account"
                                      IconWidth="16" IconHeight="16">
                    <syncfusion:ButtonAdv.IconTemplate>
                        <DataTemplate>
                            <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" 
                                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=syncfusion:ButtonAdv}}" 
                                  Stretch="Uniform" 
                                  Width="16" Height="16" />
                        </DataTemplate>
                    </syncfusion:ButtonAdv.IconTemplate>
                </syncfusion:ButtonAdv>
                
                <Separator />
                
                <syncfusion:ButtonAdv Label="Refresh" 
                                      Command="{Binding RefreshBudgetDataCommand}"
                                      ToolTip="Refresh budget data from database"
                                      IconWidth="16" IconHeight="16">
                    <syncfusion:ButtonAdv.IconTemplate>
                        <DataTemplate>
                            <Path Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z" 
                                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=syncfusion:ButtonAdv}}" 
                                  Stretch="Uniform" 
                                  Width="16" Height="16" />
                        </DataTemplate>
                    </syncfusion:ButtonAdv.IconTemplate>
                </syncfusion:ButtonAdv>
                
                <Separator />
                
                <TextBlock Text="Fiscal Year:" 
                           VerticalAlignment="Center" 
                           Margin="8,0,4,0" />
                <syncfusion:ComboBoxAdv Width="150" 
                                       ItemsSource="{Binding FiscalYears}"
                                       SelectedItem="{Binding SelectedFiscalYear, Mode=TwoWay}"
                                       ToolTip="Select fiscal year for budget view" 
                                       Margin="4,0" />
        </ToolBar>

        <!-- Central Hierarchical Budget Grid (SfTreeGrid) -->
        <Grid Grid.Row="1">
            <syncfusion:SfTreeGrid x:Name="BudgetTreeGrid"
                                   ItemsSource="{Binding BudgetAccounts, FallbackValue=Empty}"
                                   ChildPropertyName="Children"
                                   AutoGenerateColumns="False"
                                   AllowEditing="True"
                                   EditTrigger="OnTap"
                                   AllowSorting="True"
                                   AllowFiltering="True"
                                   AllowResizingColumns="True"
                                   ColumnSizer="AutoFillColumn"
                                   ExpanderColumn="AccountNumber"
                                   SelfRelationRootValue="-1"
                                   SelectionMode="Single"
                                   NavigationMode="Cell"
                                   LiveNodeUpdateMode="AllowDataShaping"
                                   GridValidationMode="InEdit"
                                   RowHeight="32"
                                   AutoExpandMode="RootNodesExpanded"
                                   Margin="8"
                                   CellToolTipOpening="BudgetTreeGrid_CellToolTipOpening"
                                   CurrentCellEndEdit="BudgetTreeGrid_CurrentCellEndEdit"
                                   AutomationProperties.Name="GASB-Compliant Hierarchical Budget Accounts">
            
            <syncfusion:SfTreeGrid.Columns>
                <!-- Account Number (Tree Column for hierarchy) -->
                <syncfusion:TreeGridTextColumn HeaderText="Account Number" 
                                               MappingName="AccountNumber" 
                                               Width="200"
                                               AllowEditing="False"
                                               HeaderStyle="{StaticResource BudgetTreeGridHeaderStyle}" />
                
                <!-- Description -->
                <syncfusion:TreeGridTextColumn HeaderText="Description" 
                                               MappingName="Description" 
                                               Width="300"
                                               AllowEditing="True"
                                               HeaderStyle="{StaticResource BudgetTreeGridHeaderStyle}"
                                               ToolTipService.ToolTip="Double-click to edit (GASB rules applied)" />
                
                <!-- Fund Type with Dropdown Editor -->
                <syncfusion:TreeGridComboBoxColumn HeaderText="Fund Type" 
                                                   MappingName="FundType" 
                                                   Width="150"
                                                   ItemsSource="{Binding FundTypes}"
                                                   DisplayMemberPath="Name"
                                                   SelectedValuePath="Code"
                                                   ToolTipService.ToolTip="Select fund category (General, Special Revenue, Capital, etc.)"
                                                   HeaderStyle="{StaticResource BudgetTreeGridHeaderStyle}" />
                
                <!-- Budget Amount (Currency formatting) -->
                <syncfusion:TreeGridCurrencyColumn HeaderText="Budgeted Amount" 
                                                   MappingName="BudgetAmount" 
                                                   Width="150"
                                                   CurrencyDecimalDigits="2"
                                                   CurrencySymbol="$"
                                                   AllowEditing="True"
                                                   TextAlignment="Right"
                                                   ToolTipService.ToolTip="Approved budget amount (must be positive)"
                                                   HeaderStyle="{StaticResource BudgetTreeGridHeaderStyle}" />
                
                <!-- Actuals (Currency formatting) -->
                <syncfusion:TreeGridCurrencyColumn HeaderText="Actual Expenses" 
                                                   MappingName="ActualAmount" 
                                                   Width="150"
                                                   CurrencyDecimalDigits="2"
                                                   CurrencySymbol="$"
                                                   AllowEditing="True"
                                                   TextAlignment="Right"
                                                   ToolTipService.ToolTip="Year-to-date actual spending"
                                                   HeaderStyle="{StaticResource BudgetTreeGridHeaderStyle}" />
                
                <!-- Variance (Calculated, conditional styling) -->
                <syncfusion:TreeGridCurrencyColumn HeaderText="Variance" 
                                                   MappingName="Variance" 
                                                   Width="150"
                                                   CurrencyDecimalDigits="2"
                                                   CurrencySymbol="$"
                                                   AllowEditing="False"
                                                   TextAlignment="Right"
                                                   ToolTipService.ToolTip="Budget vs Actual (negative = over budget)"
                                                   CellStyle="{StaticResource OverBudgetCellStyle}"
                                                   HeaderStyle="{StaticResource BudgetTreeGridHeaderStyle}" />
                
                <!-- Percentage Used -->
                <syncfusion:TreeGridPercentColumn HeaderText="% Used" 
                                                  MappingName="PercentageUsed" 
                                                  Width="100"
                                                  PercentEditMode="PercentMode"
                                                  AllowEditing="False"
                                                  TextAlignment="Right"
                                                  ShowToolTip="True"
                                                  HeaderStyle="{StaticResource BudgetTreeGridHeaderStyle}">
                    <syncfusion:TreeGridPercentColumn.ToolTipTemplate>
                        <DataTemplate>
                            <TextBlock Text="Percentage of budget consumed" />
                        </DataTemplate>
                    </syncfusion:TreeGridPercentColumn.ToolTipTemplate>
                </syncfusion:TreeGridPercentColumn>
                </syncfusion:SfTreeGrid.Columns>
            </syncfusion:SfTreeGrid>

            <!-- Empty State Message -->
            <TextBlock Text="No budget data available. Click 'Refresh' to load budgets for the selected fiscal year."
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="#FF9E9E9E"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="20"
                       Visibility="{Binding BudgetAccounts.Count, Converter={StaticResource ZeroToVisibleConverter}}" />
        </Grid>        <!-- Footer with Total Calculations -->
        <Border Grid.Row="2" 
                Background="#FF2C3038" 
                BorderBrush="#FF3D4451" 
                BorderThickness="0,1,0,0" 
                Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Total Budget:" 
                           FontWeight="SemiBold" 
                           Foreground="#FFDCE6F5" 
                           VerticalAlignment="Center" 
                           Margin="0,0,8,0" />
                
                <TextBlock Grid.Column="1" 
                           Text="{Binding TotalBudget, Mode=OneWay, StringFormat=C2}" 
                           Width="180"
                           FontWeight="Bold"
                           Foreground="#FF4CAF50"
                           ToolTipService.ToolTip="Sum of all budgeted amounts" />
                
                <TextBlock Grid.Column="3" 
                           Text="Total Actual:" 
                           FontWeight="SemiBold" 
                           Foreground="#FFDCE6F5" 
                           VerticalAlignment="Center" 
                           Margin="16,0,8,0" />
                
                <TextBlock Grid.Column="4" 
                           Text="{Binding TotalActual, Mode=OneWay, StringFormat=C2}" 
                           Width="180"
                           FontWeight="Bold"
                           Foreground="{Binding TotalVariance, Converter={StaticResource BalanceColorConverter}}"
                           ToolTipService.ToolTip="Sum of all actual expenses" />
            </Grid>
        </Border>

        <!-- Charts Section with Budget Visualizations -->
        <Grid Grid.Row="3" Margin="8,0,8,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Budget Distribution Pie Chart -->
            <GroupBox Grid.Column="0" 
                      Header="Budget Distribution by Fund" 
                      Margin="0,0,4,0" 
                      Padding="8"
                      Foreground="#FFDCE6F5">
                <chart:SfChart>
                    <chart:SfChart.Legend>
                        <chart:ChartLegend DockPosition="Right" />
                    </chart:SfChart.Legend>
                    
                    <chart:PieSeries ItemsSource="{Binding BudgetDistributionData}"
                                     XBindingPath="FundType"
                                     YBindingPath="Amount"
                                     EnableAnimation="True"
                                     EnableSmartLabels="True"
                                     LabelPosition="Inside"
                                     Palette="Metro">
                        <chart:PieSeries.AdornmentsInfo>
                            <chart:ChartAdornmentInfo 
                                ShowLabel="True" 
                                LabelTemplate="{StaticResource PieChartLabelTemplate}"
                                LabelPosition="Auto" />
                        </chart:PieSeries.AdornmentsInfo>
                        
                        <chart:PieSeries.TooltipTemplate>
                            <DataTemplate>
                                <Border Background="#FF2C3038" 
                                        BorderBrush="#FF4F6BED" 
                                        BorderThickness="1" 
                                        CornerRadius="4" 
                                        Padding="8">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Item.FundType}" 
                                                   FontWeight="Bold" 
                                                   Foreground="White" />
                                        <TextBlock Foreground="White">
                                            <Run Text="Amount: " />
                                            <Run Text="{Binding Item.Amount, StringFormat=C2}" FontWeight="Bold" />
                                        </TextBlock>
                                        <TextBlock Foreground="White">
                                            <Run Text="Percentage: " />
                                            <Run Text="{Binding Item.Percentage, StringFormat=P1}" FontWeight="Bold" />
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </chart:PieSeries.TooltipTemplate>
                    </chart:PieSeries>
                </chart:SfChart>
            </GroupBox>

            <!-- Budget vs Actual Bar Chart -->
            <GroupBox Grid.Column="1" 
                      Header="Budget vs Actual by Category" 
                      Margin="4,0,0,0" 
                      Padding="8"
                      Foreground="#FFDCE6F5">
                <chart:SfChart>
                    <chart:SfChart.PrimaryAxis>
                        <chart:CategoryAxis LabelRotationAngle="-45" />
                    </chart:SfChart.PrimaryAxis>
                    
                    <chart:SfChart.SecondaryAxis>
                        <chart:NumericalAxis LabelFormat="C0" />
                    </chart:SfChart.SecondaryAxis>
                    
                    <chart:SfChart.Legend>
                        <chart:ChartLegend DockPosition="Top" />
                    </chart:SfChart.Legend>
                    
                    <!-- Budgeted amounts -->
                    <chart:ColumnSeries ItemsSource="{Binding BudgetComparisonData}"
                                        XBindingPath="Category"
                                        YBindingPath="BudgetAmount"
                                        Label="Budgeted"
                                        Interior="#FF4CAF50"
                                        EnableAnimation="True">
                        <chart:ColumnSeries.AdornmentsInfo>
                            <chart:ChartAdornmentInfo 
                                ShowLabel="True" 
                                LabelPosition="Inner"
                                SegmentLabelFormat="C0" />
                        </chart:ColumnSeries.AdornmentsInfo>
                    </chart:ColumnSeries>
                    
                    <!-- Actual amounts -->
                    <chart:ColumnSeries ItemsSource="{Binding BudgetComparisonData}"
                                        XBindingPath="Category"
                                        YBindingPath="ActualAmount"
                                        Label="Actual"
                                        Interior="#FFF44336"
                                        EnableAnimation="True">
                        <chart:ColumnSeries.AdornmentsInfo>
                            <chart:ChartAdornmentInfo 
                                ShowLabel="True" 
                                LabelPosition="Inner"
                                SegmentLabelFormat="C0" />
                        </chart:ColumnSeries.AdornmentsInfo>
                    </chart:ColumnSeries>
                </chart:SfChart>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
