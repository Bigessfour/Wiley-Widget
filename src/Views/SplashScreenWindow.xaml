<Window x:Class="WileyWidget.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WileyWidget"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:syncProgress="clr-namespace:Syncfusion.UI.Xaml.ProgressBar;assembly=Syncfusion.SfProgressBar.WPF"
        xmlns:syncfusionskin ="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        mc:Ignorable="d"
        Title="Wiley Widget"
        Height="400"
        Width="600"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        RenderOptions.EdgeMode="Aliased"
        RenderOptions.BitmapScalingMode="HighQuality" xmlns:prism="http://prismlibrary.com/" prism:ViewModelLocator.AutoWireViewModel="True">
    <Window.Resources>
        <!-- Smooth progress transition with enhanced easing -->
        <Storyboard x:Key="ProgressTransition">
            <DoubleAnimation
                Storyboard.TargetName="ProgressBar"
                Storyboard.TargetProperty="Value"
                Duration="0:0:1.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Border CornerRadius="10" BorderBrush="#007ACC" BorderThickness="2">
        <Grid>
            <!-- Vector/Gradient Background (image removed) -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2D2D30" Offset="0"/>
                    <GradientStop Color="#003A66" Offset="0.5"/>
                    <GradientStop Color="#007ACC" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Slight dark overlay to reduce transparency and improve readability -->
            <Rectangle Fill="#55000000" />

            <!-- Content Overlay -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title with enhanced styling -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0">
                    <TextBlock x:Name="TitleTextBlock"
                              Text="{Binding Title}"
                              FontSize="42"
                              FontWeight="Light"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,0,0,10"/>

                    <!-- Subtitle -->
                    <TextBlock Text="{Binding Subtitle}"
                              FontSize="16"
                              FontWeight="Normal"
                              Foreground="#CCCCCC"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,0,0,20"
                              Opacity="0.8"/>
                </StackPanel>

                <!-- Syncfusion Busy Indicator -->
                <syncfusion:SfBusyIndicator Grid.Row="1"
                                          IsBusy="{Binding IsLoading}"
                                          AnimationType="Gear"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="0,20,0,10"
                                          Foreground="#007ACC"
                                          FontSize="14">
                    <TextBlock Text="{Binding StatusText}"
                              FontSize="14"
                              Foreground="#CCCCCC"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </syncfusion:SfBusyIndicator>

                <!-- Syncfusion Progress Bar -->
                <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20">
                    <syncProgress:SfLinearProgressBar x:Name="ProgressBar"
                                             Height="8"
                                             Width="350"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             Margin="0,0,0,15"
                                             Progress="{Binding Progress}"
                                             Maximum="100"
                                             Background="#333333"
                                             Foreground="#007ACC"
                                             BorderBrush="#007ACC"
                                             BorderThickness="1"
                                             IndicatorCornerRadius="4">
                        <syncProgress:SfLinearProgressBar.Effect>
                            <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#007ACC" Opacity="0.2"/>
                        </syncProgress:SfLinearProgressBar.Effect>
                    </syncProgress:SfLinearProgressBar>

                    <!-- Progress percentage with enhanced styling -->
                    <TextBlock x:Name="ProgressTextBlock"
                              Text="{Binding Progress, StringFormat={}{0:0}%, Mode=OneWay}"
                              FontSize="13"
                              FontWeight="SemiBold"
                              Foreground="#CCCCCC"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Opacity="0.9"/>
                </StackPanel>

                <!-- Professional Branding and System Info -->
                <StackPanel Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
                    <!-- Version and Build Info -->
                    <TextBlock Text="{Binding VersionInfo}"
                              FontSize="11"
                              Foreground="#888888"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,5"/>

                    <!-- System Info -->
                    <TextBlock Text="{Binding SystemInfo}"
                              FontSize="10"
                              Foreground="#666666"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,5"
                              Opacity="0.7"/>

                    <!-- Copyright -->
                    <TextBlock Text="{Binding CopyrightText}"
                              FontSize="9"
                              Foreground="#555555"
                              HorizontalAlignment="Center"
                              Opacity="0.6"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
