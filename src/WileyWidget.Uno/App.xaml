<prism:PrismApplication x:Class="WileyWidget.Uno.App"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:prism="using:Prism.DryIoc.Uno">

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- Load WinUI resources -->
        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
        <!-- Load Uno.UI.Toolkit resources -->
        <ToolkitResources xmlns="using:Uno.Toolkit.UI" />
        <!-- App theme and strings -->
        <ResourceDictionary Source="ms-appx:///Themes/Generic.xaml" />
        <ResourceDictionary Source="ms-appx:///Strings.xaml" />
      </ResourceDictionary.MergedDictionaries>

      <!-- Add resources here -->

    </ResourceDictionary>
  </Application.Resources>

</prism:PrismApplication>
