<Window
    x:Class="WileyWidget.Uno.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WileyWidget.Uno.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <NavigationView>
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Dashboard" Tag="Dashboard" Icon="Home"/>
                <NavigationViewItem Content="Manage" Tag="Manage" Icon="Document"/>
                <NavigationViewItem Content="Reports" Tag="Reports" Icon="DocumentReport"/>
                <NavigationViewItem Content="Settings" Tag="Settings" Icon="Setting"/>
            </NavigationView.MenuItems>
            
            <Frame x:Name="ContentFrame"/>
        </NavigationView>
    </Grid>
</Window>
