<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:prism="http://prismlibrary.com/"
                    xmlns:syncfusion="http://schemas.syncfusion.com/wpf">
    <!-- Override Syncfusion styles -->
    <SolidColorBrush x:Key="CustomBackground" Color="#1E1E1E" />  <!-- Dark theme example -->
    <Style TargetType="syncfusion:ButtonAdv" BasedOn="{StaticResource {x:Type syncfusion:ButtonAdv}}">
        <Setter Property="Background" Value="{DynamicResource CustomBackground}" />
    </Style>
</ResourceDictionary>
