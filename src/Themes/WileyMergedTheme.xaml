<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:prism="http://prismlibrary.com/"
                    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                    xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
                    xmlns:converters="clr-namespace:WileyWidget.Converters;assembly=WileyWidget">

    <!--
    ====================================================================================
    Wiley Merged Theme - Syncfusion Official Theming Implementation
    ====================================================================================

    CRITICAL: Uses Syncfusion SfSkinManager for ALL Syncfusion controls.
    Per official documentation: https://help.syncfusion.com/wpf/themes/skin-manager

    Global Application: Set SfSkinManager.VisualStyle="FluentLight" as default in App.xaml
    Switching Logic: Use converter to map theme strings to VisualStyles (e.g., "Light" -> FluentLight)

    Prism Integration: Bind to IThemeService.CurrentTheme property for theme toggle.

    Version: Syncfusion WPF (Latest version as per project packages)
    See docs/SYNCFUSION_THEMING_OFFICIAL_GUIDE.md for full implementation details.
    ====================================================================================
    -->

    <!-- ====================================================================== -->
    <!-- SYNCFUSION FLUENT THEME DYNAMIC BRUSHES                               -->
    <!-- FluentDark and FluentLight theme support only                         -->
    <!-- All brushes reference Syncfusion's built-in theme resource keys      -->
    <!-- Source: https://help.syncfusion.com/wpf/themes/skin-manager#theme-resources -->
    <!-- ====================================================================== -->

    <!-- ====================================================================== -->
    <!-- PRIMARY BRAND COLORS (Dynamic)                                        -->
    <!-- ====================================================================== -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{syncfusionskin:ThemeResource Key=PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="{syncfusionskin:ThemeResource Key=PrimaryForeground}" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{syncfusionskin:ThemeResource Key=PrimaryLight}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{syncfusionskin:ThemeResource Key=PrimaryDark}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{syncfusionskin:ThemeResource Key=PrimaryColor}" />

    <!-- ====================================================================== -->
    <!-- BACKGROUND COLORS (Dynamic)                                           -->
    <!-- ====================================================================== -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=ContentBackground}" />
    <SolidColorBrush x:Key="ApplicationBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=ContentBackground}" />
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=ContentBackground}" />
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=ContentBackground}" />
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=ContentBackground}" />
    <SolidColorBrush x:Key="ContentBackgroundAlt1Brush" Color="{syncfusionskin:ThemeResource Key=ContentBackgroundAlt1}" />
    <SolidColorBrush x:Key="ContentBackgroundAlt2Brush" Color="{syncfusionskin:ThemeResource Key=ContentBackgroundAlt2}" />
    <SolidColorBrush x:Key="ContentBackgroundAlt3Brush" Color="{syncfusionskin:ThemeResource Key=ContentBackgroundAlt3}" />
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=PrimaryBackground}" />
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=SecondaryBackground}" />

    <!-- Header and Title Backgrounds -->
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=HeaderBackground}" />
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=HeaderBackground}" />

    <!-- Hover and Selection Backgrounds -->
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=HoverBackground}" />
    <SolidColorBrush x:Key="SelectedBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=SelectedBackground}" />
    <SolidColorBrush x:Key="PressedBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=PressedBackground}" />

    <!-- ====================================================================== -->
    <!-- FOREGROUND/TEXT COLORS (Dynamic)                                      -->
    <!-- ====================================================================== -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{syncfusionskin:ThemeResource Key=ContentForeground}" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="{syncfusionskin:ThemeResource Key=ContentForeground}" />
    <SolidColorBrush x:Key="ContentForegroundBrush" Color="{syncfusionskin:ThemeResource Key=ContentForeground}" />

    <!-- Alternative Text Colors -->
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{syncfusionskin:ThemeResource Key=ContentForegroundAlt1}" />
    <SolidColorBrush x:Key="TertiaryTextBrush" Color="{syncfusionskin:ThemeResource Key=ContentForegroundAlt2}" />
    <SolidColorBrush x:Key="QuaternaryTextBrush" Color="{syncfusionskin:ThemeResource Key=ContentForegroundAlt3}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{syncfusionskin:ThemeResource Key=ContentForegroundAlt3}" />

    <!-- State-based Text Colors -->
    <SolidColorBrush x:Key="DisabledTextBrush" Color="{syncfusionskin:ThemeResource Key=DisabledForeground}" />
    <SolidColorBrush x:Key="DisabledForegroundBrush" Color="{syncfusionskin:ThemeResource Key=DisabledForeground}" />
    <SolidColorBrush x:Key="HoverForegroundBrush" Color="{syncfusionskin:ThemeResource Key=HoverForeground}" />
    <SolidColorBrush x:Key="SelectedForegroundBrush" Color="{syncfusionskin:ThemeResource Key=SelectedForeground}" />
    <SolidColorBrush x:Key="PressedForegroundBrush" Color="{syncfusionskin:ThemeResource Key=PressedForeground}" />
    <SolidColorBrush x:Key="MutedForegroundBrush" Color="{syncfusionskin:ThemeResource Key=MutedForeground}" />

    <!-- ====================================================================== -->
    <!-- BORDER COLORS (Dynamic)                                               -->
    <!-- ====================================================================== -->
    <SolidColorBrush x:Key="BorderBrush" Color="{syncfusionskin:ThemeResource Key=BorderAlt}" />
    <SolidColorBrush x:Key="BorderAltBrush" Color="{syncfusionskin:ThemeResource Key=BorderAlt}" />
    <SolidColorBrush x:Key="CardBorderBrush" Color="{syncfusionskin:ThemeResource Key=BorderAlt}" />
    <SolidColorBrush x:Key="SeparatorBrush" Color="{syncfusionskin:ThemeResource Key=BorderAlt}" />
    <SolidColorBrush x:Key="DividerBrush" Color="{syncfusionskin:ThemeResource Key=BorderAlt}" />

    <!-- Focus and Hover Borders -->
    <SolidColorBrush x:Key="FocusBorderBrush" Color="{syncfusionskin:ThemeResource Key=PrimaryColor}" />
    <SolidColorBrush x:Key="HoverBorderBrush" Color="{syncfusionskin:ThemeResource Key=HoverBorder}" />
    <SolidColorBrush x:Key="InnerBorderBrush" Color="{syncfusionskin:ThemeResource Key=InnerBorder}" />

    <!-- ====================================================================== -->
    <!-- CONTROL-SPECIFIC COLORS (Dynamic)                                     -->
    <!-- ====================================================================== -->

    <!-- Button Colors -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=ContentBackground}" />
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="{syncfusionskin:ThemeResource Key=ContentForeground}" />
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=HoverBackground}" />
    <SolidColorBrush x:Key="ButtonPressedBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=PressedBackground}" />
    <SolidColorBrush x:Key="ButtonDisabledBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=DisabledBackground}" />
    <SolidColorBrush x:Key="ButtonDisabledForegroundBrush" Color="{syncfusionskin:ThemeResource Key=DisabledForeground}" />

    <!-- Input Control Colors -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=ContentBackground}" />
    <SolidColorBrush x:Key="InputForegroundBrush" Color="{syncfusionskin:ThemeResource Key=ContentForeground}" />
    <SolidColorBrush x:Key="InputBorderBrush" Color="{syncfusionskin:ThemeResource Key=BorderAlt}" />
    <SolidColorBrush x:Key="InputFocusBorderBrush" Color="{syncfusionskin:ThemeResource Key=PrimaryColor}" />
    <SolidColorBrush x:Key="InputDisabledBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=DisabledBackground}" />

    <!-- Menu and Popup Colors -->
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=ContentBackground}" />
    <SolidColorBrush x:Key="MenuForegroundBrush" Color="{syncfusionskin:ThemeResource Key=ContentForeground}" />
    <SolidColorBrush x:Key="MenuHoverBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=HoverBackground}" />
    <SolidColorBrush x:Key="PopupBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=ContentBackground}" />
    <SolidColorBrush x:Key="PopupBorderBrush" Color="{syncfusionskin:ThemeResource Key=BorderAlt}" />

    <!-- Toolbar Colors -->
    <SolidColorBrush x:Key="ToolbarBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=HeaderBackground}" />
    <SolidColorBrush x:Key="ToolbarForegroundBrush" Color="{syncfusionskin:ThemeResource Key=ContentForeground}" />

    <!-- StatusBar Colors -->
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=HeaderBackground}" />
    <SolidColorBrush x:Key="StatusBarForegroundBrush" Color="{syncfusionskin:ThemeResource Key=ContentForeground}" />

    <!-- Scrollbar Colors -->
    <SolidColorBrush x:Key="ScrollBarBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=ContentBackgroundAlt1}" />
    <SolidColorBrush x:Key="ScrollBarThumbBrush" Color="{syncfusionskin:ThemeResource Key=ContentForegroundAlt2}" />
    <SolidColorBrush x:Key="ScrollBarThumbHoverBrush" Color="{syncfusionskin:ThemeResource Key=HoverBackground}" />

    <!-- ====================================================================== -->
    <!-- CONTROL-SPECIFIC STYLES                                               -->
    <!-- ====================================================================== -->

    <!-- ScrollViewer Style -->
    <Style x:Key="WileyScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="Background" Value="{syncfusionskin:ThemeResource Key=ContentBackground}" />
        <Setter Property="BorderBrush" Value="{syncfusionskin:ThemeResource Key=BorderAlt}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- ProgressBar Style -->
    <Style x:Key="WileyProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Background" Value="{syncfusionskin:ThemeResource Key=ContentBackgroundAlt1}" />
        <Setter Property="Foreground" Value="{syncfusionskin:ThemeResource Key=PrimaryColor}" />
        <Setter Property="BorderBrush" Value="{syncfusionskin:ThemeResource Key=BorderAlt}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- ====================================================================== -->
    <!-- SEMANTIC/STATUS COLORS (Dynamic where possible)                       -->
    <!-- ====================================================================== -->

    <!-- Success Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{syncfusionskin:ThemeResource Key=SuccessBackground}" />
    <SolidColorBrush x:Key="SuccessBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=SuccessBackground}" />
    <SolidColorBrush x:Key="SuccessForegroundBrush" Color="{syncfusionskin:ThemeResource Key=SuccessForeground}" />

    <!-- Warning Colors -->
    <SolidColorBrush x:Key="WarningBrush" Color="{syncfusionskin:ThemeResource Key=WarningBackground}" />
    <SolidColorBrush x:Key="WarningBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=WarningBackground}" />
    <SolidColorBrush x:Key="WarningForegroundBrush" Color="{syncfusionskin:ThemeResource Key=WarningForeground}" />

    <!-- Error Colors -->
    <SolidColorBrush x:Key="ErrorBrush" Color="{syncfusionskin:ThemeResource Key=ErrorBackground}" />
    <SolidColorBrush x:Key="ErrorBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=ErrorBackground}" />
    <SolidColorBrush x:Key="ErrorForegroundBrush" Color="{syncfusionskin:ThemeResource Key=ErrorForeground}" />

    <!-- Info Colors -->
    <SolidColorBrush x:Key="InfoBrush" Color="{syncfusionskin:ThemeResource Key=InfoBackground}" />
    <SolidColorBrush x:Key="InfoBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=InfoBackground}" />
    <SolidColorBrush x:Key="InfoForegroundBrush" Color="{syncfusionskin:ThemeResource Key=InfoForeground}" />
    <SolidColorBrush x:Key="ValidationErrorForegroundBrush" Color="{syncfusionskin:ThemeResource Key=ValidationErrorForeground}" />

    <!-- ====================================================================== -->
    <!-- FLUENT PALETTE COLORS (Dynamic)                                       -->
    <!-- ====================================================================== -->
    <SolidColorBrush x:Key="BlueBrush" Color="{syncfusionskin:ThemeResource Key=FluentPalette.Blue}" />
    <SolidColorBrush x:Key="GreenBrush" Color="{syncfusionskin:ThemeResource Key=FluentPalette.Green}" />
    <SolidColorBrush x:Key="RedBrush" Color="{syncfusionskin:ThemeResource Key=FluentPalette.Red}" />
    <SolidColorBrush x:Key="YellowBrush" Color="{syncfusionskin:ThemeResource Key=FluentPalette.Yellow}" />
    <SolidColorBrush x:Key="PurpleBrush" Color="{syncfusionskin:ThemeResource Key=FluentPalette.Purple}" />
    <SolidColorBrush x:Key="OrangeBrush" Color="{syncfusionskin:ThemeResource Key=FluentPalette.Orange}" />
    <SolidColorBrush x:Key="OverlayBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=OverlayBackground}" Opacity="0.5" />
    <SolidColorBrush x:Key="ModalBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=ContentBackground}" />
    <SolidColorBrush x:Key="DialogBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=ContentBackground}" />

    <!-- ====================================================================== -->
    <!-- CHART AND VISUALIZATION COLORS (Dynamic)                              -->
    <!-- ====================================================================== -->
    <SolidColorBrush x:Key="ChartBackgroundBrush" Color="{syncfusionskin:ThemeResource Key=ContentBackground}" />
    <SolidColorBrush x:Key="ChartGridLineBrush" Color="{syncfusionskin:ThemeResource Key=BorderAlt}" />
    <SolidColorBrush x:Key="ChartAxisBrush" Color="{syncfusionskin:ThemeResource Key=ContentForeground}" />

    <!-- ====================================================================== -->
    <!-- SPECIAL CASE: FALLBACK STATIC COLORS                                  -->
    <!-- Only used when Syncfusion theme is not initialized                    -->
    <!-- ====================================================================== -->
    <Color x:Key="FallbackPrimaryColor">#0078D4</Color>
    <Color x:Key="FallbackContentBackground">#FFFFFF</Color>
    <Color x:Key="FallbackContentForeground">#212121</Color>
    <Color x:Key="FallbackBorderAlt">#E0E0E0</Color>
    <Color x:Key="FallbackPrimaryBackground">#F3F3F3</Color>
    <Color x:Key="FallbackSecondaryBackground">#E8E8E8</Color>
    <Color x:Key="FallbackMutedForeground">#666666</Color>
    <Color x:Key="FallbackInnerBorder">#CCCCCC</Color>
    <Color x:Key="FallbackValidationErrorForeground">#D32F2F</Color>

    <!-- ====================================================================== -->
    <!-- CONVERTERS                                                            -->
    <!-- ====================================================================== -->
    <converters:StringToVisualStyleConverter x:Key="StringToVisualStyleConverter" />
    <converters:GreaterThanConverter x:Key="GreaterThanConverter" />
    <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
    <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
    <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

    <!-- Window Style -->
    <Style x:Key="WileyWindowStyle" TargetType="Window">
        <Setter Property="Background" Value="{syncfusionskin:ThemeResource Key=ContentBackground}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{syncfusionskin:ThemeResource Key=ContentForeground}" />
    </Style>

    <!-- Card Style -->
    <Style x:Key="WileyCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{syncfusionskin:ThemeResource Key=ContentBackground}" />
        <Setter Property="BorderBrush" Value="{syncfusionskin:ThemeResource Key=BorderAlt}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="8" />
    </Style>

    <!-- Header Text Style -->
    <Style x:Key="WileyHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{syncfusionskin:ThemeResource Key=PrimaryColor}" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <!-- Subheader Text Style -->
    <Style x:Key="WileySubHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{syncfusionskin:ThemeResource Key=ContentForegroundAlt1}" />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>

    <!-- Body Text Style -->
    <Style x:Key="WileyBodyStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{syncfusionskin:ThemeResource Key=ContentForeground}" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Margin" Value="0,0,0,2" />
    </Style>

    <!-- Button Styles -->
    <Style x:Key="WileyPrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{syncfusionskin:ThemeResource Key=PrimaryColor}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#1565C0" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#0D47A1" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="{syncfusionskin:ThemeResource Key=DisabledForeground}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="WileySecondaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{syncfusionskin:ThemeResource Key=PrimaryColor}" />
        <Setter Property="BorderBrush" Value="{syncfusionskin:ThemeResource Key=PrimaryColor}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E3F2FD" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#BBDEFB" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{syncfusionskin:ThemeResource Key=DisabledForeground}" />
                            <Setter Property="BorderBrush" Value="{syncfusionskin:ThemeResource Key=DisabledForeground}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ====================================================================== -->
    <!-- SYNCFUSION CONTROLS: DO NOT STYLE HERE                                -->
    <!-- ====================================================================== -->
    <!--
    Per Syncfusion Official Documentation:
    "DO NOT create custom ControlTemplates or Styles for Syncfusion controls."

    All Syncfusion controls (ButtonAdv, SfDataGrid, SfBusyIndicator, etc.)
    are themed automatically via SfSkinManager.

    Apply themes using:
    1. Application-wide: SfSkinManager.SetTheme(Application.Current, new Theme("FluentDark"));
    2. Control-level: syncfusionskin:SfSkinManager.VisualStyle="FluentDark"

    Reference: https://help.syncfusion.com/wpf/themes/skin-manager
    See: docs/SYNCFUSION_THEMING_OFFICIAL_GUIDE.md
    ====================================================================== -->

    <!-- GroupBox Style -->
    <Style x:Key="WileyGroupBoxStyle" TargetType="GroupBox">
        <Setter Property="BorderBrush" Value="{syncfusionskin:ThemeResource Key=BorderAlt}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Margin" Value="0,0,0,8" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{syncfusionskin:ThemeResource Key=ContentBackground}"
                            CornerRadius="4">
                        <DockPanel>
                            <Border DockPanel.Dock="Top"
                                    Background="{syncfusionskin:ThemeResource Key=HeaderBackground}"
                                    BorderBrush="{syncfusionskin:ThemeResource Key=BorderAlt}"
                                    BorderThickness="0,0,0,1"
                                    CornerRadius="4,4,0,0">
                                <TextBlock Text="{TemplateBinding Header}"
                                         FontWeight="Bold"
                                         Foreground="{syncfusionskin:ThemeResource Key=PrimaryColor}"
                                         Margin="8,4" />
                            </Border>
                            <ContentPresenter Margin="{TemplateBinding Padding}" />
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- TextBox Style -->
    <Style x:Key="WileyTextBoxStyle" TargetType="TextBox">
        <Setter Property="BorderBrush" Value="{syncfusionskin:ThemeResource Key=BorderAlt}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Background" Value="{syncfusionskin:ThemeResource Key=ContentBackground}" />
        <Setter Property="Margin" Value="0,0,0,4" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="BorderBrush" Value="{syncfusionskin:ThemeResource Key=PrimaryColor}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Label Style -->
    <Style x:Key="WileyLabelStyle" TargetType="Label">
        <Setter Property="Foreground" Value="{syncfusionskin:ThemeResource Key=ContentForeground}" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>

    <!-- Status Bar Style -->
    <Style x:Key="WileyStatusBarStyle" TargetType="StatusBar">
        <Setter Property="Background" Value="{syncfusionskin:ThemeResource Key=HeaderBackground}" />
        <Setter Property="BorderBrush" Value="{syncfusionskin:ThemeResource Key=BorderAlt}" />
        <Setter Property="BorderThickness" Value="0,1,0,0" />
        <Setter Property="Padding" Value="8" />
    </Style>

    <!-- DataGrid Style -->
    <Style x:Key="WileyDataGridStyle" TargetType="DataGrid">
        <Setter Property="Background" Value="{syncfusionskin:ThemeResource Key=ContentBackground}" />
        <Setter Property="BorderBrush" Value="{syncfusionskin:ThemeResource Key=BorderAlt}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="GridLinesVisibility" Value="Horizontal" />
        <Setter Property="AlternationCount" Value="2" />
        <Setter Property="AlternatingRowBackground" Value="#F9F9F9" />
        <Setter Property="RowHeight" Value="32" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="HeadersVisibility" Value="Column" />
        <Setter Property="ColumnHeaderStyle">
            <Setter.Value>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="{syncfusionskin:ThemeResource Key=HeaderBackground}" />
                    <Setter Property="Foreground" Value="{syncfusionskin:ThemeResource Key=ContentForeground}" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="BorderBrush" Value="{syncfusionskin:ThemeResource Key=BorderAlt}" />
                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                    <Setter Property="Padding" Value="8,4" />
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ListBox Style -->
    <Style x:Key="WileyListBoxStyle" TargetType="ListBox">
        <Setter Property="Background" Value="{syncfusionskin:ThemeResource Key=ContentBackground}" />
        <Setter Property="BorderBrush" Value="{syncfusionskin:ThemeResource Key=BorderAlt}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{syncfusionskin:ThemeResource Key=ContentForeground}" />
        <Setter Property="Padding" Value="4" />
    </Style>

    <!-- ComboBox Style -->
    <Style x:Key="WileyComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="{syncfusionskin:ThemeResource Key=ContentBackground}" />
        <Setter Property="BorderBrush" Value="{syncfusionskin:ThemeResource Key=BorderAlt}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{syncfusionskin:ThemeResource Key=ContentForeground}" />
        <Setter Property="Padding" Value="4" />
    </Style>

</ResourceDictionary>
