  <sys:String x:Key="AccountsGrid_AccessibleName">Accounts Data Grid</sys:String>
  <sys:String x:Key="AccountsGrid_AccessibleHelp">Tabular view of municipal accounts with filtering and grouping.</sys:String>
  <sys:String x:Key="Col_AccountNumber">Account #</sys:String>
  <sys:String x:Key="Col_AccountName">Account Name</sys:String>
  <sys:String x:Key="Tip_AccountName">Account name or description</sys:String>
