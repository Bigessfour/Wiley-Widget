  <sys:String x:Key="Navigation_Header">Navigation</sys:String>
  <sys:String x:Key="Btn_Back">Back</sys:String>
  <sys:String x:Key="Tip_Back">Return to main dashboard</sys:String>
  <sys:String x:Key="Btn_Export">Export</sys:String>
  <sys:String x:Key="Tip_Export">Export account data to Excel</sys:String>
  <sys:String x:Key="Btn_Print">Print</sys:String>
  <sys:String x:Key="Tip_Print">Print account report</sys:String>

  <!-- Content header -->
  <sys:String x:Key="MunicipalAccounts_Header">Municipal Accounts</sys:String>

