<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:prism="http://prismlibrary.com/"
                    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
  <!-- Accessibility names/help -->
  <sys:String x:Key="MunicipalAccounts_AccessibleName">Municipal Accounts View</sys:String>
  <sys:String x:Key="MunicipalAccounts_AccessibleHelp">Review, filter, and manage municipal accounts.</sys:String>
  <sys:String x:Key="Ribbon_AccessibleName">Account Management Ribbon</sys:String>

  <!-- Ribbon -->
  <sys:String x:Key="Ribbon_Tab_Accounts">Account Management</sys:String>
  <sys:String x:Key="Btn_LoadAccounts">Load Accounts</sys:String>
  <sys:String x:Key="Tip_LoadAccounts">Load all municipal accounts from database</sys:String>
  <sys:String x:Key="Btn_SyncQuickBooks">Sync QuickBooks</sys:String>
  <sys:String x:Key="Tip_SyncQuickBooks">Synchronize accounts from QuickBooks Online</sys:String>
  <sys:String x:Key="Btn_BudgetAnalysis">Budget Analysis</sys:String>
  <sys:String x:Key="Tip_BudgetAnalysis">Load budget analysis data</sys:String>
  <sys:String x:Key="Btn_Refresh">Refresh</sys:String>
  <sys:String x:Key="Tip_Refresh">Refresh account data</sys:String>

  <!-- Filters -->
  <sys:String x:Key="Filters_Header">Filters</sys:String>
  <sys:String x:Key="Search_Label">Search Accounts</sys:String>
  <sys:String x:Key="Search_Tip">Search by account name, number, fund, type, notes, or department</sys:String>
  <sys:String x:Key="FundType_Label">Fund Type</sys:String>
