  <sys:String x:Key="Tip_ApplyFilters">Apply selected filters to account list</sys:String>
  <sys:String x:Key="Btn_ClearFilters">Clear</sys:String>
  <sys:String x:Key="Tip_ClearFilters">Clear all filters and show all accounts</sys:String>

