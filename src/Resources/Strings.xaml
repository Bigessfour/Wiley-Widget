  <sys:String x:Key="AdvancedFilters_Header">Advanced Filters</sys:String>
  <sys:String x:Key="BalanceRange_Label">Balance Range</sys:String>
  <sys:String x:Key="MinBalance_Label">Minimum balance</sys:String>
