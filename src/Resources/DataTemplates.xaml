<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:prism="http://prismlibrary.com/"
                    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                    xmlns:vm="clr-namespace:WileyWidget.ViewModels;assembly=WileyWidget.UI"
                    xmlns:vmMain="clr-namespace:WileyWidget.ViewModels.Main;assembly=WileyWidget.UI"
                    xmlns:views="clr-namespace:WileyWidget.Views.Main;assembly=WileyWidget.UI"
                    xmlns:panels="clr-namespace:WileyWidget.Views.Main;assembly=WileyWidget.UI">

    <!--
    DataTemplates for Prism Navigation
    These templates associate ViewModels with their corresponding Views
    for automatic view resolution by Prism's RegionManager.
    -->

    <!-- DashboardViewModel → DashboardView -->
    <DataTemplate DataType="{x:Type vmMain:DashboardViewModel}">
        <views:DashboardView />
    </DataTemplate>

    <!-- MunicipalAccountViewModel → MunicipalAccountView -->
    <DataTemplate DataType="{x:Type vmMain:MunicipalAccountViewModel}">
        <panels:MunicipalAccountView />
    </DataTemplate>

    <!-- BudgetViewModel → BudgetView -->
    <DataTemplate DataType="{x:Type vmMain:BudgetViewModel}">
        <views:BudgetView />
    </DataTemplate>

    <!-- EnterpriseViewModel → EnterpriseView -->
    <DataTemplate DataType="{x:Type vmMain:EnterpriseViewModel}">
        <views:EnterpriseView />
    </DataTemplate>

    <!-- SettingsViewModel → SettingsView -->
    <DataTemplate DataType="{x:Type vmMain:SettingsViewModel}">
        <views:SettingsView />
    </DataTemplate>

    <!-- AnalyticsViewModel → AnalyticsView -->
    <DataTemplate DataType="{x:Type vmMain:AnalyticsViewModel}">
        <views:AnalyticsView />
    </DataTemplate>

    <!-- AIAssistViewModel → AIAssistView -->
    <DataTemplate DataType="{x:Type vmMain:AIAssistViewModel}">
        <views:AIAssistView />
    </DataTemplate>

    <!-- QuickBooksViewModel → QuickBooksView -->
    <DataTemplate DataType="{x:Type vmMain:QuickBooksViewModel}">
        <views:QuickBooksView />
    </DataTemplate>

    <!-- ReportsViewModel → ReportsView -->
    <DataTemplate DataType="{x:Type vmMain:ReportsViewModel}">
        <views:ReportsView />
    </DataTemplate>

    <!-- UtilityCustomerViewModel → UtilityCustomerView -->
    <DataTemplate DataType="{x:Type vmMain:UtilityCustomerViewModel}">
        <views:UtilityCustomerView />
    </DataTemplate>

</ResourceDictionary>
