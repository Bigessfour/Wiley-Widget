<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0-windows10.0.26100.0</TargetFramework>
    <LangVersion>14.0</LangVersion>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>WileyWidget.WinForms-12345678-1234-1234-1234-123456789012</UserSecretsId>
    <NoWarn>$(NoWarn);WFO5001;NU1701;CS8618;NU1902;NU1903;CS8602;CS8600</NoWarn>
  </PropertyGroup>

  <!-- Binding redirect for WindowsBase: WebView2 (net5.0) expects v5.0.0.0 but .NET 10 provides v4.0.0.0 -->
  <ItemGroup>
    <RuntimeHostConfigurationOption Include="System.Runtime.Versioning.RuntimeConfiguration.AppContext.TryGetSwitch" Value="false" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="WileyWidget.WinForms.Tests" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\WileyWidget.Abstractions\WileyWidget.Abstractions.csproj" />
    <ProjectReference Include="..\WileyWidget.Business\WileyWidget.Business.csproj" />
    <ProjectReference Include="..\WileyWidget.Data\WileyWidget.Data.csproj" />
    <ProjectReference Include="..\WileyWidget.Services\WileyWidget.Services.csproj" />
    <ProjectReference Include="..\WileyWidget.Services.Abstractions\WileyWidget.Services.Abstractions.csproj" />
    <ProjectReference Include="..\WileyWidget.Models\WileyWidget.Models.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FastReport.OpenSource" />
    <PackageReference Include="Microsoft.Extensions.Hosting" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
    <!-- FastReport Open Source WinForms viewer -->
    <PackageReference Include="Serilog.Extensions.Hosting" />
    <PackageReference Include="CommunityToolkit.Mvvm" />
    <PackageReference Include="Microsoft.ApplicationInsights" />
    <PackageReference Include="OpenTelemetry.Instrumentation.Runtime" />
    <PackageReference Include="OpenTelemetry" />
    <PackageReference Include="OpenTelemetry.Exporter.OpenTelemetryProtocol" />
    <PackageReference Include="OpenTelemetry.Extensions.Hosting" />
    <PackageReference Include="Polly.RateLimiting" />
    <PackageReference Include="Polly.Extensions.Http" />
    <PackageReference Include="Microsoft.Extensions.Http.Resilience" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Tools">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Data.SqlClient" />
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" />
    <PackageReference Include="Microsoft.Extensions.Configuration.UserSecrets" />
    <PackageReference Include="DotNetEnv" />
    <PackageReference Include="Microsoft.SemanticKernel" />
    <PackageReference Include="Microsoft.SemanticKernel.Connectors.OpenAI" />
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" />
    <PackageReference Include="Microsoft.Extensions.Http" />
    <PackageReference Include="Serilog" />
    <PackageReference Include="Serilog.Enrichers.Environment" />
    <PackageReference Include="Serilog.Enrichers.Process" />
    <PackageReference Include="Serilog.Enrichers.Thread" />
    <PackageReference Include="Serilog.Settings.Configuration" />
    <PackageReference Include="Serilog.Sinks.Async" />
    <PackageReference Include="Serilog.Sinks.Email" />
    <PackageReference Include="Serilog.Sinks.File" />
    <PackageReference Include="FluentValidation" />
    <PackageReference Include="ExcelDataReader" />
    <PackageReference Include="ExcelDataReader.DataSet" />

    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks.ResourceUtilization" />
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks.Common" />
    <PackageReference Include="System.Management" />
    <PackageReference Include="Polly" />

    <PackageReference Include="IppDotNetSdkForQuickBooksApiV3" />
    <!-- Syncfusion WinForms UI controls -->
    <PackageReference Include="Syncfusion.Core.WinForms" />
    <PackageReference Include="Syncfusion.Licensing" />
    <PackageReference Include="Syncfusion.Shared.Base" />
    <PackageReference Include="Syncfusion.Tools.Windows" />
    <PackageReference Include="Syncfusion.Chart.Windows" />
    <PackageReference Include="Syncfusion.Gauge.Windows" />
    <PackageReference Include="Syncfusion.SfDataGrid.WinForms" />
    <PackageReference Include="Syncfusion.DataGridExport.WinForms" />
    <PackageReference Include="Syncfusion.Office2019Theme.WinForms" />
    <PackageReference Include="CsvHelper" />
    <PackageReference Include="microsoft.winforms.designer.sdk">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <!-- FastReport Open Source WinForms viewer -->
    <!-- Force Microsoft.CodeAnalysis.Common to 4.8.0 to resolve version conflict -->
    <PackageReference Include="Microsoft.CodeAnalysis.Common" />
    <!-- Blazor WebView for Windows Forms -->
    <PackageReference Include="Microsoft.AspNetCore.Components.WebView.WindowsForms" />
    <!-- Syncfusion Blazor Interactive Chat -->
    <PackageReference Include="Syncfusion.Blazor.InteractiveChat" />
    <PackageReference Include="Syncfusion.Blazor.Core" />
    <PackageReference Include="Syncfusion.Blazor.Themes" />
    <PackageReference Include="Syncfusion.Blazor.SmartComponents" />
  </ItemGroup>

  <ItemGroup>
    <!-- Explicitly declare Razor components for compilation -->
    <Compile Remove="BlazorComponents/**" />
    <RazorComponent Include="BlazorComponents/**/*.razor" />
  </ItemGroup>

  <ItemGroup>
    <!-- Blazor Web assets (wwwroot) -->
    <Content Include="wwwroot\\**\\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Reports\\**\\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="logs\" />
  </ItemGroup>

</Project>
