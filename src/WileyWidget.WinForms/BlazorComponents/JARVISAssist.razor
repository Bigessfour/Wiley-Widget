@namespace WileyWidget.WinForms.BlazorComponents
@page "/"
@using System.Text.Json
@using WileyWidget.Services.Abstractions
@using WileyWidget.WinForms.Services.AI
@using Microsoft.JSInterop
@implements IAsyncDisposable
@inject IChatBridgeService ChatBridge
@inject ILogger<JARVISAssist> Logger
@inject IJSRuntime JS

<div class="jarvis-container">
    <div class="chat-header">
        <h1>JARVIS Assistant</h1>
        <p class="subtitle">Ask me anything about your municipality</p>
    </div>

    <div class="chat-messages" @ref="messagesContainer">
        @foreach (var message in _messages)
        {
            <div class="message @message.SenderClass">
                <div class="message-content">
                    @if (message.IsMarkdown)
                    {
                        <div class="markdown-content">@((MarkupString)message.HtmlContent)</div>
                    }
                    else
                    {
                        <p>@message.Content</p>
                    }
                </div>
            </div>
        }

        @if (_isStreaming && !string.IsNullOrEmpty(_currentStreamingText))
        {
            <div class="message assistant">
                <div class="message-content">
                    <div class="markdown-content">@((MarkupString)_currentStreamingHtml)</div>
                    <span class="typing-indicator">
                        <span></span><span></span><span></span>
                    </span>
                </div>
            </div>
        }
    </div>

    <div class="chat-input-area">
        <div class="input-group">
            <input
                type="text"
                class="chat-input"
                placeholder="Ask JARVIS a question..."
                @bind="_userInput"
                @onkeyup="HandleKeyUp"
                disabled="@_isStreaming"
                @ref="inputField"
            />
            <button
                class="send-button"
                @onclick="SendMessage"
                disabled="@(_isStreaming || string.IsNullOrWhiteSpace(_userInput))"
                title="Send message (Enter)"
            >
                âž¤ Send
            </button>
        </div>
    </div>
</div>

@code {
    private List<ChatMessage> _messages = new();
    private string _userInput = string.Empty;
    private bool _isStreaming = false;
    private string _currentStreamingText = string.Empty;
    private string _currentStreamingHtml = string.Empty;
    private ElementReference messagesContainer;
    private ElementReference inputField;

    protected override async Task OnInitializedAsync()
    {
        Logger?.LogInformation("[JARVIS-BLAZOR] JARVISAssist component initializing");

        // Subscribe to chat bridge events
        ChatBridge.OnMessageReceived += HandleMessageReceived;
        ChatBridge.ResponseChunkReceived += HandleResponseChunk;
        ChatBridge.ResponseCompleted += HandleResponseCompleted;

        await Task.CompletedTask;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            Logger?.LogInformation("[JARVIS-BLAZOR] Component first render, focusing input");
            try
            {
                await inputField.FocusAsync();
            }
            catch (Exception ex)
            {
                Logger?.LogWarning(ex, "[JARVIS-BLAZOR] Failed to focus input element");
            }
        }

        // Scroll to bottom when messages update
        if (_messages.Count > 0 || _isStreaming)
        {
            try
            {
                await ScrollToBottom();
            }
            catch (Exception ex)
            {
                Logger?.LogWarning(ex, "[JARVIS-BLAZOR] Failed to scroll to bottom");
            }
        }

        await base.OnAfterRenderAsync(firstRender);
    }

    private async Task ScrollToBottom()
    {
        try
        {
            await JS.InvokeVoidAsync("scrollToBottom", messagesContainer);
        }
        catch (Exception ex)
        {
            Logger?.LogDebug(ex, "[JARVIS-BLAZOR] Scroll to bottom failed");
        }
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(_userInput) || _isStreaming)
            return;

        var userMessage = _userInput.Trim();
        _userInput = string.Empty;

        // Add user message to display
        _messages.Add(new ChatMessage
        {
            Content = userMessage,
            Sender = "user",
            SenderClass = "user",
            IsMarkdown = false
        });

        StateHasChanged();
        await ScrollToBottom();

        Logger?.LogInformation("[JARVIS-BLAZOR] Sending user message: {Length} chars", userMessage.Length);
        _isStreaming = true;

        try
        {
            await ChatBridge.RequestExternalPromptAsync(userMessage);
        }
        catch (Exception ex)
        {
            Logger?.LogError(ex, "[JARVIS-BLAZOR] Error sending prompt");
            _messages.Add(new ChatMessage
            {
                Content = $"Error: {ex.Message}",
                Sender = "system",
                SenderClass = "system",
                IsMarkdown = false
            });
            _isStreaming = false;
        }
    }

    private void HandleKeyUp(KeyboardEventArgs args)
    {
        if (args.Key == "Enter" && !_isStreaming)
        {
            _ = SendMessage();
        }
    }

    private void HandleMessageReceived(object? sender, dynamic msg)
    {
        _messages.Add(new ChatMessage
        {
            Content = msg.Content,
            Sender = "assistant",
            SenderClass = "assistant",
            IsMarkdown = true,
            HtmlContent = MarkdownToHtml(msg.Content)
        });

        _isStreaming = false;
        _currentStreamingText = string.Empty;
        _currentStreamingHtml = string.Empty;

        Logger?.LogDebug("[JARVIS-BLAZOR] Full message received");
        StateHasChanged();
        _ = ScrollToBottom();
    }

    private void HandleResponseChunk(object? sender, dynamic args)
    {
        if (args?.Chunk != null)
        {
            _currentStreamingText += (string)args.Chunk;
            _currentStreamingHtml = MarkdownToHtml(_currentStreamingText);

            Logger?.LogDebug("[JARVIS-BLAZOR] Streaming chunk received, total: {Length} chars", _currentStreamingText.Length);
            StateHasChanged();
            _ = ScrollToBottom();
        }
    }

    private void HandleResponseCompleted(object? sender, dynamic args)
    {
        if (!string.IsNullOrEmpty(_currentStreamingText))
        {
            _messages.Add(new ChatMessage
            {
                Content = _currentStreamingText,
                Sender = "assistant",
                SenderClass = "assistant",
                IsMarkdown = true,
                HtmlContent = _currentStreamingHtml
            });
        }

        _isStreaming = false;
        _currentStreamingText = string.Empty;
        _currentStreamingHtml = string.Empty;

        Logger?.LogInformation("[JARVIS-BLAZOR] Response stream completed");
        StateHasChanged();
        _ = ScrollToBottom();
    }

    private string MarkdownToHtml(string markdown)
    {
        if (string.IsNullOrEmpty(markdown))
            return string.Empty;

        // Simple markdown to HTML conversion for common patterns
        var html = System.Net.WebUtility.HtmlEncode(markdown);

        // Convert line breaks
        html = html.Replace("\n", "<br/>");

        // Convert **bold** to <strong>bold</strong>
        html = System.Text.RegularExpressions.Regex.Replace(html, @"\*\*(.+?)\*\*", "<strong>$1</strong>");

        // Convert *italic* to <em>italic</em>
        html = System.Text.RegularExpressions.Regex.Replace(html, @"\*(.+?)\*", "<em>$1</em>");

        // Convert `code` to <code>code</code>
        html = System.Text.RegularExpressions.Regex.Replace(html, @"`(.+?)`", "<code>$1</code>");

        return html;
    }

    private class ChatMessage
    {
        public string Content { get; set; } = string.Empty;
        public string Sender { get; set; } = string.Empty;
        public string SenderClass { get; set; } = string.Empty;
        public bool IsMarkdown { get; set; }
        public string HtmlContent { get; set; } = string.Empty;
    }

    async ValueTask IAsyncDisposable.DisposeAsync()
    {
        ChatBridge.OnMessageReceived -= HandleMessageReceived;
        ChatBridge.ResponseChunkReceived -= HandleResponseChunk;
        ChatBridge.ResponseCompleted -= HandleResponseCompleted;
        await ValueTask.CompletedTask;
    }
}

<style>
    .jarvis-container {
