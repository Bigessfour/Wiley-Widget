@using Microsoft.AspNetCore.Components.Web
@using Microsoft.JSInterop
@using WileyWidget.Models
@using WileyWidget.Services.Abstractions
@using static WileyWidget.Models.ChatMessage
@using Syncfusion.Blazor
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.InteractiveChat
@using CommunityToolkit.Mvvm.Input
@implements IDisposable

@* Diagnostic: Show initialization status visibly *@
@if (!string.IsNullOrEmpty(_errorMessage))
{
    <div style="padding: 20px; background: #fee; border: 2px solid red; color: #c00; font-size: 16px; font-weight: bold;">
        <h3>‚ö†Ô∏è JARVIS Initialization Error</h3>
        <p>@_errorMessage</p>
        <p><small>Check Debug Output/Console for details</small></p>
    </div>
}
else if (!_isInitialized)
{
    <div style="padding: 20px; background: #ffc; border: 2px solid #fc0; color: #660; font-size: 16px;">
        <h3>üîÑ JARVIS Initializing...</h3>
        <p>Component loaded, waiting for OnInitializedAsync to complete</p>
    </div>
}

@* ShowClearButton is a property of AssistView (child), not SfAIAssistView (parent)
   See: https://help.syncfusion.com/cr/aspnetcore-js2/Syncfusion.Blazor.InteractiveChat.SfAIAssistView.html *@
<div class="jarvis-container" role="region" aria-label="JARVIS AI Assistant">
    <SfAIAssistView @ref="AssistViewRef"
                    CssClass="custom-ai-assist"
                    Prompts="@_prompts"
                    PromptPlaceholder="Ask me anything about Wiley Widget..."
                    PromptSuggestions="@_suggestions"
                    PromptIconCss="e-icons e-user-avatar"
                    ResponseIconCss="e-icons e-ai-assist"
                    AttachmentSettings="@_attachmentSettings"
                    Width="100%"
                    Height="100%"
                    PromptRequested="HandlePromptRequestedAsync">
        <ChildContent>
            <AssistViews>
                <AssistView @key="@_currentViewId"
                            Header="@_currentViewHeader"
                            IconCss="e-icons e-ai-assist">
                    <BannerTemplate>
                        <div class="assist-banner">
                            <div class="assist-banner-icon e-icons e-ai-assist"></div>
                            <div class="assist-banner-content">
                                <div class="assist-banner-title">@_bannerTitle</div>
                                <div class="assist-banner-subtitle">@_bannerSubtitle</div>
                            </div>
                        </div>
                    </BannerTemplate>
                    <PromptItemTemplate>
                        <div class="custom-prompt-item" role="article" aria-label="User prompt">
                            <div class="prompt-header">
                                <span class="prompt-icon e-icons e-user-avatar" aria-hidden="true"></span>
                                <span class="prompt-author">@GetUserDisplayName()</span>
                            </div>
                            <div class="prompt-content">@context.Prompt</div>
                        </div>
                    </PromptItemTemplate>
                    <ResponseItemTemplate>
                        <div class="custom-response-item" role="article" aria-label="Assistant response">
                            <div class="response-header">
                                <span class="response-icon e-icons e-ai-assist" aria-hidden="true"></span>
                                <span class="response-author">JARVIS</span>
                                @if (_isThinking && string.IsNullOrEmpty(context.Response))
                                {
                                    <span class="thinking-indicator" aria-live="polite" aria-label="Thinking">
                                        <span class="dot"></span>
                                        <span class="dot"></span>
                                        <span class="dot"></span>
                                    </span>
                                }
                            </div>
                            <div class="response-content">
                                @if (!string.IsNullOrEmpty(context.Response))
                                {
                                    @((MarkupString)FormatMarkdownResponse(context.Response))
                                }
                                else if (_isThinking)
                                {
                                    <span class="processing-text">Processing your request...</span>
                                }
                            </div>
                            @if (!string.IsNullOrEmpty(context.Response))
                            {
                                <div class="response-actions">
                                    <SfButton CssClass="e-small e-flat" IconCss="e-icons e-copy" @onclick="() => CopyToClipboard(context.Response)" aria-label="Copy response">Copy</SfButton>
                                    <SfButton CssClass="e-small e-flat" IconCss="e-icons e-refresh" @onclick="() => RegenerateResponse(context.Prompt)" aria-label="Regenerate response">Regenerate</SfButton>
                                    <SfButton CssClass="e-small e-flat" IconCss="@_audioIconCss" @onclick="() => ToggleAudioPlaybackAsync(context.Response)" aria-label="@_audioTooltip">@(_isPlayingAudio ? "Stop" : "Read")</SfButton>
                                    <SfButton CssClass="e-small e-flat" IconCss="e-icons e-like" @onclick="() => HandleResponseFeedbackAsync(context.Response, true)" aria-label="Like response">Like</SfButton>
                                    <SfButton CssClass="e-small e-flat" IconCss="e-icons e-dislike" @onclick="() => HandleResponseFeedbackAsync(context.Response, false)" aria-label="Dislike response">Dislike</SfButton>
                                </div>
                            }
                        </div>
                    </ResponseItemTemplate>
                    <FooterTemplate>
                        <div class="assist-footer" role="contentinfo">
                            @if (!string.IsNullOrEmpty(_errorMessage))
                            {
                                <div class="error-banner" role="alert" aria-live="assertive">
                                    <span class="e-icons e-error" aria-hidden="true"></span>
                                    <span class="error-text">@_errorMessage</span>
                                    <SfButton CssClass="e-small e-flat" IconCss="e-icons e-close" @onclick="ClearError" aria-label="Dismiss error"></SfButton>
                                </div>
                            }
                            else
                            {
                                <div class="footer-info">
                                    <span class="footer-icon e-icons e-info" aria-hidden="true"></span>
                                    <span class="footer-text">Powered by Grok AI ‚Ä¢ Session: @GetConversationId()</span>
                                    <span class="token-usage" title="Token Usage">
                                        <span class="e-icons e-data-usage" aria-hidden="true"></span>
                                        @_tokensUsed / @_tokenLimit tokens
                                    </span>
                                </div>
                            }
                        </div>
                    </FooterTemplate>
                </AssistView>
            </AssistViews>
        </ChildContent>
    </SfAIAssistView>
    <div class="toolbar-actions" role="toolbar">
        <SfButton CssClass="e-small e-flat" IconCss="e-icons e-settings" @onclick="ShowSettingsAsync" aria-label="Settings" title="Settings">Settings</SfButton>
        <SfButton CssClass="e-small e-flat" IconCss="e-icons e-refresh" @onclick="ClearConversationAsync" aria-label="Clear conversation" title="Clear Conversation">Clear</SfButton>
        <SfButton CssClass="e-small e-flat" IconCss="e-icons e-check" @onclick="RunConnectionTestsAsync" aria-label="Test connections" title="Test Connections">Test</SfButton>
    </div>
</div>

@* Settings Dialog *@
@if (_showSettingsDialog)
{
    <div class="settings-overlay" @onclick="CloseSettingsDialogAsync">
        <div class="settings-dialog" @onclick:stopPropagation="true" role="dialog" aria-labelledby="settings-title" aria-modal="true">
            <div class="dialog-header">
                <h3 id="settings-title">JARVIS Settings</h3>
                <SfButton CssClass="e-small e-flat" IconCss="e-icons e-close" @onclick="CloseSettingsDialogAsync" aria-label="Close dialog"></SfButton>
            </div>
            <div class="dialog-content">
                <div class="setting-group">
                    <label for="model-select">AI Model</label>
                    <select id="model-select" class="setting-input" @bind="_selectedModel">
                        <option value="grok-4-1-fast">Grok 4.1 Fast (Latest - Optimized for agentic tool calling)</option>
                        <option value="grok-4">Grok 4 (Reasoning model)</option>
                        <option value="grok-3">Grok 3 (Stable)</option>
                        <option value="grok-3-mini">Grok 3 Mini (Fast & efficient)</option>
                    </select>
                </div>
                <div class="setting-group">
                    <label for="temperature-input">Temperature (Creativity): @_temperature.ToString("F1")</label>
                    <input id="temperature-input" type="range" min="0" max="2" step="0.1" class="setting-slider" @bind="_temperature" />
                    <small>Lower = More focused, Higher = More creative</small>
                </div>
                <div class="setting-group">
                    <label for="max-tokens-input">Max Tokens: @_maxTokens</label>
                    <input id="max-tokens-input" type="range" min="100" max="4000" step="100" class="setting-slider" @bind="_maxTokens" />
                    <small>Maximum length of AI responses</small>
                </div>
                <div class="setting-group">
                    <label for="theme-select">Theme</label>
                    <select id="theme-select" class="setting-input" @bind="_selectedTheme">
                        <option value="Office2019Colorful">Office 2019 Colorful</option>
                        <option value="HighContrastBlack">High Contrast Black</option>
                        <option value="FluentDark">Fluent Dark</option>
                        <option value="MaterialDark">Material Dark</option>
                    </select>
                </div>
                <div class="setting-group">
                    <label>Token Usage</label>
                    <div class="token-stats">
                        <div class="stat-item">
                            <span class="stat-label">Session:</span>
                            <span class="stat-value">@_tokensUsed / @_tokenLimit</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Prompt:</span>
                            <span class="stat-value">@_promptTokens</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Completion:</span>
                            <span class="stat-value">@_completionTokens</span>
                        </div>
                    </div>
                    <SfButton CssClass="e-small e-flat" IconCss="e-icons e-refresh" @onclick="ResetTokenUsage">Reset Counter</SfButton>
                </div>
            </div>
            <div class="dialog-footer">
                <SfButton CssClass="e-primary" @onclick="SaveSettingsAsync">Save</SfButton>
                <SfButton CssClass="e-flat" @onclick="CloseSettingsDialogAsync">Cancel</SfButton>
            </div>
        </div>
    </div>
}

<style>
    .jarvis-container {
        height: 100%;
        width: 100%;
        display: flex;
        flex-direction: column;
        box-sizing: border-box;
    }

    /* Banner Styling */
    .assist-banner {
        display: flex;
        align-items: center;
        padding: 24px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 8px 8px 0 0;
    }

    .assist-banner-icon {
        font-size: 48px;
        margin-right: 16px;
        opacity: 0.9;
    }

    .assist-banner-content {
        flex: 1;
    }

    .assist-banner-title {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 4px;
    }

    .assist-banner-subtitle {
        font-size: 14px;
        opacity: 0.9;
    }

    /* Custom Prompt/Response Items */
    .custom-prompt-item,
    .custom-response-item {
        padding: 16px;
        margin-bottom: 12px;
        border-radius: 8px;
        animation: fadeIn 0.3s ease-in;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .custom-prompt-item {
        background: rgba(102, 126, 234, 0.1);
        border-left: 3px solid #667eea;
    }

    .custom-response-item {
        background: rgba(118, 75, 162, 0.05);
        border-left: 3px solid #764ba2;
    }

    .prompt-header,
    .response-header {
        display: flex;
        align-items: center;
        margin-bottom: 8px;
        font-weight: 600;
    }

    .prompt-icon,
    .response-icon {
        font-size: 20px;
        margin-right: 8px;
    }

    .prompt-content,
    .response-content {
        line-height: 1.6;
        color: var(--text-color, #333);
    }

    /* Thinking Indicator */
    .thinking-indicator {
        display: inline-flex;
        gap: 4px;
        margin-left: 8px;
    }

    .thinking-indicator .dot {
        width: 6px;
        height: 6px;
        border-radius: 50%;
        background-color: #667eea;
        animation: bounce 1.4s infinite ease-in-out both;
    }

    .thinking-indicator .dot:nth-child(1) { animation-delay: -0.32s; }
    .thinking-indicator .dot:nth-child(2) { animation-delay: -0.16s; }

    @@keyframes bounce {
        0%, 80%, 100% { transform: scale(0); }
        40% { transform: scale(1); }
    }

    .processing-text {
        font-style: italic;
        color: #888;
    }

    /* Response Actions */
    .response-actions {
        display: flex;
        gap: 8px;
        margin-top: 12px;
        padding-top: 12px;
        border-top: 1px solid rgba(0,0,0,0.1);
    }

    /* Footer Styling */
    .assist-footer {
        padding: 12px 16px;
        background: rgba(0,0,0,0.02);
        border-top: 1px solid rgba(0,0,0,0.1);
    }

    .error-banner {
        display: flex;
        align-items: center;
        padding: 8px 12px;
        background: #fee;
        border: 1px solid #fcc;
        border-radius: 4px;
        color: #c33;
    }

    .error-banner .e-error {
        margin-right: 8px;
    }

    .error-text {
        flex: 1;
        font-size: 13px;
    }

    .footer-info {
        display: flex;
        align-items: center;
        font-size: 12px;
        color: #666;
    }

    .footer-icon {
        margin-right: 6px;
    }

    .footer-text {
        flex: 1;
    }

    .token-usage {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        margin-left: 12px;
        padding: 4px 8px;
        background: rgba(102, 126, 234, 0.1);
        border-radius: 4px;
        font-size: 11px;
        font-weight: 600;
    }

    /* Toolbar Actions */
    .toolbar-actions {
        display: flex;
        gap: 8px;
        padding: 8px 16px;
        background: rgba(0,0,0,0.02);
        border-top: 1px solid rgba(0,0,0,0.1);
    }

    /* Compact prompt box */
    .jarvis-container .e-assistview-input {
        min-height: 48px;
        max-height: 120px;
    }

    /* Markdown formatting */
    .response-content code {
        background: rgba(0,0,0,0.05);
        padding: 2px 6px;
        border-radius: 3px;
        font-family: 'Consolas', 'Monaco', monospace;
        font-size: 0.9em;
    }

    .response-content pre {
        background: rgba(0,0,0,0.05);
        padding: 12px;
        border-radius: 6px;
        overflow-x: auto;
    }

    .response-content pre code {
        background: transparent;
        padding: 0;
    }

    /* Settings Dialog Styles */
    .settings-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10000;
        animation: fadeIn 0.2s ease-in;
    }

    .settings-dialog {
        background: white;
        border-radius: 8px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        width: 90%;
        max-width: 500px;
        max-height: 80vh;
        display: flex;
        flex-direction: column;
        animation: slideUp 0.3s ease-out;
    }

    @@keyframes slideUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .dialog-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 16px 20px;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }

    .dialog-header h3 {
        margin: 0;
        font-size: 18px;
        font-weight: 600;
        color: #333;
    }

    .dialog-content {
        flex: 1;
        overflow-y: auto;
        padding: 20px;
    }

    .setting-group {
        margin-bottom: 20px;
    }

    .setting-group label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: #333;
        font-size: 14px;
    }

    .setting-group small {
        display: block;
        margin-top: 4px;
        color: #666;
        font-size: 12px;
    }

    .setting-input,
    .setting-slider {
        width: 100%;
        padding: 8px 12px;
        border: 1px solid rgba(0, 0, 0, 0.2);
        border-radius: 4px;
        font-size: 14px;
        font-family: inherit;
    }

    .setting-slider {
        padding: 0;
        height: 6px;
