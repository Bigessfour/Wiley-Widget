<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:WileyWidget.WinUI.Converters">

    <!-- Shared converters for the WinUI app -->
    <converters:StringFormatConverter x:Key="StringFormatConverter" />
    <!-- Boolean visibility converters (keys provide friendly aliases used across XAML) -->
    <converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    <converters:BooleanToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />

</ResourceDictionary>