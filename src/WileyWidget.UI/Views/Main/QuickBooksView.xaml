<UserControl x:Class="WileyWidget.Views.Main.QuickBooksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:converters="clr-namespace:WileyWidget.Converters"
             xmlns:behaviors="clr-namespace:WileyWidget.UI.Behaviors"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="StatusTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Foreground" Value="{DynamicResource ContentForegroundBrush}"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="syncfusion:ButtonAdv">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
        </Style>

        <!-- Converters -->
        <converters:BooleanToBrushConverter x:Key="BooleanToBrushConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="20" behaviors:FocusOnLoadBehavior.IsEnabled="True" behaviors:FocusOnLoadBehavior.TargetName="QuickBooksFocusAnchor">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Focus anchor for accessibility -->
        <TextBox x:Name="QuickBooksFocusAnchor" Visibility="Collapsed" Width="0" Height="0"/>

        <!-- Connection Status Section -->
        <GroupBox Header="QuickBooks Connection" Grid.Row="0" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Status:" Grid.Column="0" Style="{StaticResource StatusTextBlockStyle}"
                             AutomationProperties.Name="Connection status label"/>
                    <TextBlock Text="{Binding ConnectionStatus}" Grid.Column="1" Style="{StaticResource StatusTextBlockStyle}"
                             Foreground="{Binding IsConnected, Converter={StaticResource BooleanToBrushConverter}}"
                             AutomationProperties.Name="Current connection status"/>
                    <syncfusion:ButtonAdv Content="Refresh" Grid.Column="2" Command="{Binding RefreshStatusCommand}"
                                        Style="{StaticResource ActionButtonStyle}" SizeMode="Small"
                                        AutomationProperties.Name="Refresh connection status"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Company:" Grid.Column="0" Style="{StaticResource StatusTextBlockStyle}"
                             AutomationProperties.Name="Company name label"/>
                    <TextBlock Text="{Binding CompanyName, FallbackValue='Not connected'}" Grid.Column="1"
                             Style="{StaticResource StatusTextBlockStyle}" Foreground="{DynamicResource ContentForegroundBrush}"
                             AutomationProperties.Name="Connected company name"/>
                    <syncfusion:ButtonAdv Content="Connect" Grid.Column="2" Command="{Binding ConnectCommand}"
                                        Style="{StaticResource ActionButtonStyle}" SizeMode="Small"
                                        Background="{DynamicResource SuccessBackgroundBrush}" Foreground="{DynamicResource SuccessForegroundBrush}"
                                        AutomationProperties.Name="Connect to QuickBooks"/>
                    <syncfusion:ButtonAdv Content="Disconnect" Grid.Column="3" Command="{Binding DisconnectCommand}"
                                        Style="{StaticResource ActionButtonStyle}" SizeMode="Small"
                                        Background="{DynamicResource ErrorBackgroundBrush}" Foreground="{DynamicResource ErrorForegroundBrush}"
                                        AutomationProperties.Name="Disconnect from QuickBooks"/>
                </Grid>

                <!-- Connection Validation Message -->
                <TextBlock Grid.Row="2" Text="{Binding ConnectionValidationMessage}" Margin="5"
                         Foreground="{DynamicResource ErrorForegroundBrush}" FontSize="12" FontWeight="SemiBold"
                         Visibility="{Binding ConnectionValidationMessage, Converter={StaticResource StringToVisibilityConverter}}"
                         AutomationProperties.Name="Connection validation message"/>
            </Grid>
        </GroupBox>

        <!-- Sync Status Section -->
        <GroupBox Header="Synchronization Status" Grid.Row="1" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Last Sync:" Grid.Column="0" Style="{StaticResource StatusTextBlockStyle}"
                             AutomationProperties.Name="Last sync time label"/>
                    <TextBlock Grid.Column="1" Style="{StaticResource StatusTextBlockStyle}"
                             AutomationProperties.Name="Last synchronization timestamp">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0:yyyy-MM-dd HH:mm:ss}">
                                <Binding Path="LastSyncTime"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Status:" Grid.Column="0" Style="{StaticResource StatusTextBlockStyle}"
                             AutomationProperties.Name="Sync status label"/>
                    <TextBlock Text="{Binding SyncStatus, FallbackValue='Ready'}" Grid.Column="1"
                             Style="{StaticResource StatusTextBlockStyle}" Foreground="{DynamicResource SuccessForegroundBrush}"
                             AutomationProperties.Name="Current sync status"/>
                    <syncfusion:ButtonAdv Content="Sync Now" Grid.Column="2" Command="{Binding SyncNowCommand}"
                                        Style="{StaticResource ActionButtonStyle}" SizeMode="Small"
                                        Background="{DynamicResource PrimaryBrush}" Foreground="{DynamicResource PrimaryForegroundBrush}"
                                        AutomationProperties.Name="Start synchronization"/>
                    <syncfusion:ButtonAdv Content="Cancel" Grid.Column="3" Command="{Binding CancelCommand}"
                                        Style="{StaticResource ActionButtonStyle}" SizeMode="Small"
                                        Background="{DynamicResource WarningBackgroundBrush}" Foreground="{DynamicResource WarningForegroundBrush}"
                                        AutomationProperties.Name="Cancel synchronization"/>
                </Grid>

                <!-- Sync Validation Message -->
                <TextBlock Grid.Row="2" Text="{Binding SyncValidationMessage}" Margin="5"
                         Foreground="{DynamicResource ErrorForegroundBrush}" FontSize="12" FontWeight="SemiBold"
                         Visibility="{Binding SyncValidationMessage, Converter={StaticResource StringToVisibilityConverter}}"
                         AutomationProperties.Name="Sync validation message"/>
            </Grid>
        </GroupBox>

        <!-- Sync History Section -->
        <GroupBox Header="Sync History" Grid.Row="2" Margin="0,0,0,15">
            <ListBox ItemsSource="{Binding SyncHistory}" Margin="10" Height="150"
                    Background="{DynamicResource ContentBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                    AutomationProperties.Name="Synchronization history log">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontFamily="Consolas" FontSize="11" Margin="2"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <!-- Progress Indicator -->
        <ContentControl Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <syncfusion:SfBusyIndicator IsBusy="{Binding IsBusy}" AnimationType="Gear" Header="{Binding BusyMessage}"
                                      AutomationProperties.Name="Operation progress indicator">
                <TextBlock Text="Please wait..." FontSize="14" FontWeight="SemiBold"/>
            </syncfusion:SfBusyIndicator>
        </ContentControl>
    </Grid>
</UserControl>

