<Window
    x:Class="WileyWidget.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WileyWidget.WinUI"
    xmlns:prism="using:Prism.Regions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar / Header Area -->
        <Border Grid.Row="0" Background="{ThemeResource SystemAccentColor}" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Wiley Widget - Municipal Budget Management" 
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <TextBlock x:Name="StatusText"
                               Text="Initializing..."
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area with Prism Region -->
        <Border Grid.Row="1" Background="{ThemeResource LayerFillColorDefaultBrush}">
            <!-- Prism Region for dynamic content loading -->
            <!-- This will be the main navigation region for views -->
            <Frame x:Name="ContentFrame" 
                   prism:RegionManager.RegionName="ContentRegion"/>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}" 
                Padding="16,8"
                BorderThickness="0,1,0,0"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="StatusBarText"
                           Text="Ready"
                           VerticalAlignment="Center"
                           FontSize="12"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16">
                    <TextBlock x:Name="LicenseStatusText"
                               Text="License: Checking..."
                               FontSize="12"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="ConnectionStatusText"
                               Text="Database: Disconnected"
                               FontSize="12"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
