<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:converters="clr-namespace:WileyWidget.Converters;assembly=WileyWidget.UI"
    xmlns:controls="clr-namespace:WileyWidget.Controls"
    xmlns:root="clr-namespace:WileyWidget;assembly=WileyWidget.UI">

  <!-- ====================================================================== -->
  <!-- CUSTOM CONTROL STYLES                                                  -->
  <!-- Default styles for custom controls (required for DefaultStyleKey)     -->
  <!-- ====================================================================== -->

  <!-- PolishHost Control Default Style -->
  <Style TargetType="{x:Type controls:PolishHost}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type controls:PolishHost}">
          <ContentPresenter />
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- ====================================================================== -->
  <!-- BASE TEXT STYLES (Typography Foundation)                               -->
  <!-- These provide consistent typography across the application            -->
  <!-- NOTE: SfSkinManager will apply theme colors to these automatically    -->
  <!-- ====================================================================== -->

  <!-- Base Header Style -->
  <Style
      x:Key="WileyHeaderStyle"
      TargetType="TextBlock">
    <Setter
        Property="FontFamily"
        Value="Segoe UI" />
    <Setter
        Property="FontSize"
        Value="24" />
    <Setter
        Property="FontWeight"
        Value="SemiBold" />
    <Setter
        Property="Foreground"
        Value="#000000" />
    <Setter
        Property="Margin"
        Value="0,0,0,8" />
  </Style>

  <!-- Base Sub-Header Style -->
  <Style
      x:Key="WileySubHeaderStyle"
      TargetType="TextBlock">
    <Setter
        Property="FontFamily"
        Value="Segoe UI" />
    <Setter
        Property="FontSize"
        Value="18" />
    <Setter
        Property="FontWeight"
        Value="SemiBold" />
    <Setter
        Property="Foreground"
        Value="#000000" />
    <Setter
        Property="Margin"
        Value="0,0,0,4" />
  </Style>

  <!-- Base Body Text Style -->
  <Style
      x:Key="WileyBodyStyle"
      TargetType="TextBlock">
    <Setter
        Property="FontFamily"
        Value="Segoe UI" />
    <Setter
        Property="FontSize"
        Value="14" />
    <Setter
        Property="FontWeight"
        Value="Normal" />
    <Setter
        Property="Foreground"
        Value="#000000" />
    <Setter
        Property="LineHeight"
        Value="20" />
    <Setter
        Property="TextWrapping"
        Value="Wrap" />
  </Style>

  <!-- ====================================================================== -->
  <!-- VALUE CONVERTERS (Centralized)                                        -->
  <!-- All converters should be defined here for reuse across views         -->
  <!-- ====================================================================== -->

  <!-- Boolean Converters -->
  <converters:BooleanToVisibilityConverter x:Key="BoolToVis" />
  <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
  <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis" />
  <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
  <converters:NullToVisibilityConverter x:Key="NullToVis" />
  <converters:NullToBoolConverter x:Key="NullToBool" />
  <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
  <converters:StringToVisibilityConverter x:Key="StringToVis" />
  <converters:ZeroToVisibleConverter x:Key="ZeroToVisible" />
  <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
  <converters:EmptyStringToVisibilityConverter x:Key="EmptyStringToVisibilityConverter" />

  <!-- Other Converters -->
  <converters:BalanceColorConverter x:Key="BalanceColorConverter" />
  <root:CurrencyFormatConverter x:Key="CurrencyFormatConverter" />
  <converters:ComparisonConverter x:Key="ComparisonConverter" />
  <converters:GreaterThanConverter x:Key="GreaterThanConverter" />
  <converters:StringEqualsConverter x:Key="StringEqualsConverter" />
  <converters:BooleanToBrushConverter x:Key="BooleanToBrushConverter" />
  <converters:StatusColorConverter x:Key="StatusColorConverter" />
  <converters:StatusColorConverter x:Key="StatusToColorConverter" />
  <converters:UniqueDepartmentsConverter x:Key="UniqueDepartmentsConverter" />

  <!-- Chat/AI Converters -->
  <converters:AuthorAlignmentConverter x:Key="MessageAlignmentConverter" />
  <converters:AuthorBackgroundConverter x:Key="MessageBackgroundConverter" />

  <!-- Budget Converters -->
  <converters:BudgetProgressConverter x:Key="BudgetProgressConverter" />

  <!-- ====================================================================== -->
  <!-- SEMANTIC COLORS (Application-Specific, Static)                        -->
  <!-- These are custom to Wiley Widget and don't come from Syncfusion       -->
  <!-- ====================================================================== -->

  <!-- Data Visualization Brushes -->
  <SolidColorBrush
      x:Key="PositiveBrush"
      Color="#4CAF50" />
  <SolidColorBrush
      x:Key="NegativeBrush"
      Color="#F44336" />
  <SolidColorBrush
      x:Key="EmphasisBrush"
      Color="#2196F3" />

  <!-- Accent Brushes (Brand Colors) -->
  <SolidColorBrush
      x:Key="AccentBlueBrush"
      Color="#2196F3" />
  <SolidColorBrush
      x:Key="AccentGreenBrush"
      Color="#4CAF50" />
  <SolidColorBrush
      x:Key="AccentPurpleBrush"
      Color="#9C27B0" />
  <SolidColorBrush
      x:Key="AccentOrangeBrush"
      Color="#FF9800" />

  <!-- ====================================================================== -->
  <!-- SPACING SYSTEM (Layout Consistency)                                   -->
  <!-- ====================================================================== -->

  <!-- ====================================================================== -->
  <!-- BRUSH RESOURCES                                                        -->
  <!-- Critical brushes for Syncfusion theme and application styling         -->
  <!-- ====================================================================== -->

  <!-- Syncfusion Critical Brushes -->
  <SolidColorBrush
      x:Key="InfoBrush"
      Color="#1976D2" />
  <SolidColorBrush
      x:Key="ErrorBrush"
      Color="#D32F2F" />
  <SolidColorBrush
      x:Key="SuccessBrush"
      Color="#388E3C" />
  <SolidColorBrush
      x:Key="WarningBrush"
      Color="#F57C00" />
  <SolidColorBrush
      x:Key="PrimaryBackground"
      Color="#FFFFFF" />
  <SolidColorBrush
      x:Key="SecondaryBackground"
      Color="#F5F5F5" />
  <SolidColorBrush
      x:Key="ContentBackground"
      Color="#FFFFFF" />
  <SolidColorBrush
      x:Key="PrimaryForeground"
      Color="#000000" />
  <SolidColorBrush
      x:Key="SecondaryForeground"
      Color="#666666" />
  <SolidColorBrush
      x:Key="AppBorderBrush"
      Color="#CCCCCC" />
  <SolidColorBrush
      x:Key="AppAccentBrush"
      Color="#1976D2" />
  <SolidColorBrush
      x:Key="AppHoverBrush"
      Color="#E3F2FD" />
  <SolidColorBrush
      x:Key="AppPressedBrush"
      Color="#BBDEFB" />
  <SolidColorBrush
      x:Key="AppDisabledBrush"
      Color="#BDBDBD" />

  <SolidColorBrush
      x:Key="SecondaryTextBrush2"
      Color="#888888" />

  <!-- Status-specific Brushes -->
  <SolidColorBrush
      x:Key="SuccessForegroundBrush"
      Color="#388E3C" />
  <SolidColorBrush
      x:Key="WarningBackgroundBrush"
      Color="#FFF3E0" />
  <SolidColorBrush
      x:Key="ErrorBackgroundBrush"
      Color="#FFEBEE" />

  <!-- Content and UI Brushes -->
  <SolidColorBrush
      x:Key="ContentForegroundBrush"
      Color="#000000" />
  <SolidColorBrush
      x:Key="PrimaryForegroundBrush"
      Color="#000000" />
  <SolidColorBrush
      x:Key="AppSecondaryBrush"
      Color="#666666" />
  <SolidColorBrush
      x:Key="PressedBackgroundBrush"
      Color="#E0E0E0" />

  <!-- Alternative Border Brush -->
  <SolidColorBrush
      x:Key="BorderAltBrush"
      Color="#DDDDDD" />
  <SolidColorBrush
      x:Key="BorderAlt"
      Color="#DDDDDD" />

  <!-- Content Background Alternatives -->
  <SolidColorBrush
      x:Key="ContentBackgroundAlt1"
      Color="#FAFAFA" />
  <SolidColorBrush
      x:Key="ContentBackgroundAlt2Brush"
      Color="#F5F5F5" />

  <!-- Hover and Selection Brushes -->
  <SolidColorBrush
      x:Key="HoverBackgroundBrush"
      Color="#F0F0F0" />

  <!-- Grid Enhancement Brushes (Centralized from BudgetView/BudgetPanel conflicts) -->
  <SolidColorBrush
      x:Key="GridFilterRowBackgroundBrush"
      Color="#FF1F2329" />
  <SolidColorBrush
      x:Key="GridFilterRowForegroundBrush"
      Color="#FFE9F3FF" />
  <SolidColorBrush
      x:Key="GridSelectionBrush"
      Color="#FF4F6BED" />
  <SolidColorBrush
      x:Key="GridSelectionForegroundBrush"
      Color="#FFFDFDFD" />
  <SolidColorBrush
      x:Key="GridHoverBrush"
      Color="#334F6BED" />
  <SolidColorBrush
      x:Key="GridGroupDropAreaBackgroundBrush"
      Color="#FF131B2B" />
  <SolidColorBrush
      x:Key="GridGroupDropAreaForegroundBrush"
      Color="#FFC7D2FE" />
  <SolidColorBrush
      x:Key="GridSummaryBackgroundBrush"
      Color="#FF182030" />
  <SolidColorBrush
      x:Key="GridSummaryForegroundBrush"
      Color="#FFE0E6F0" />
  <SolidColorBrush
      x:Key="GridSearchHighlightBrush"
      Color="#55FACC15" />
  <SolidColorBrush
      x:Key="TreeGridHeaderBrush"
      Color="#FF222832" />

  <!-- Window and Button Brushes -->
  <SolidColorBrush
      x:Key="WindowBackgroundBrush"
      Color="#FFFFFF" />
  <SolidColorBrush
      x:Key="ButtonBackgroundBrush"
      Color="#FFFFFF" />
  <SolidColorBrush
      x:Key="ButtonForegroundBrush"
      Color="#000000" />

  <!-- Header Background -->
  <SolidColorBrush
      x:Key="HeaderBackgroundBrush"
      Color="#F8F8F8" />

  <!-- ====================================================================== -->
  <!-- CENTRALIZED TEXT STYLES (From View Conflicts)                         -->
  <!-- Styles moved from BudgetAnalysisView/ExcelImportView conflicts        -->
  <!-- ====================================================================== -->

  <!-- Header Text Styles -->
  <Style
      x:Key="HeaderTextBlockStyle"
      TargetType="TextBlock">
    <Setter
        Property="FontSize"
        Value="16" />
    <Setter
        Property="FontWeight"
        Value="SemiBold" />
    <Setter
        Property="Margin"
        Value="0,0,0,10" />
    <Setter
        Property="Foreground"
        Value="{DynamicResource PrimaryTextBrush}" />
  </Style>

  <Style
      x:Key="SubHeaderTextBlockStyle"
      TargetType="TextBlock">
    <Setter
        Property="FontSize"
        Value="14" />
    <Setter
        Property="FontWeight"
        Value="SemiBold" />
    <Setter
        Property="Margin"
        Value="0,10,0,5" />
    <Setter
        Property="Foreground"
        Value="{DynamicResource PrimaryTextBrush}" />
  </Style>

  <Style
      x:Key="StatusTextBlockStyle"
      TargetType="TextBlock">
    <Setter
        Property="FontSize"
        Value="12" />
    <Setter
        Property="Margin"
        Value="0,2,0,2" />
    <Setter
        Property="TextWrapping"
        Value="Wrap" />
  </Style>

  <!-- Action Button Style -->
  <Style
      x:Key="ActionButtonStyle"
      TargetType="Button">
    <Setter
        Property="Height"
        Value="35" />
    <Setter
        Property="Padding"
        Value="15,5" />
    <Setter
        Property="Margin"
        Value="5,0" />
    <Setter
        Property="FontSize"
        Value="13" />
    <Setter
        Property="FontWeight"
        Value="SemiBold" />
  </Style>

  <!-- ====================================================================== -->
  <!-- SYNCFUSION CONTROL STYLES                                             -->
  <!-- Base styles for Syncfusion controls (optional theme overrides)        -->
  <!-- ====================================================================== -->

  <!-- Default font and sizing resources -->
  <FontFamily x:Key="DefaultFontFamily">Segoe UI</FontFamily>
  <system:Double x:Key="DefaultFontSize">14</system:Double>
  <Thickness x:Key="ControlBorderThickness">1</Thickness>

  <!-- Base TextBox Style (Syncfusion-compatible) -->
  <Style
      x:Key="TextBoxStyle"
      TargetType="TextBox"
      BasedOn="{StaticResource {x:Type TextBox}}">
    <Setter
        Property="FontFamily"
        Value="{StaticResource DefaultFontFamily}" />
    <Setter
        Property="FontSize"
        Value="{StaticResource DefaultFontSize}" />
    <Setter
        Property="Padding"
        Value="8,4" />
  </Style>

  <!-- Base Button Style (Syncfusion-compatible) -->
  <Style
      x:Key="ButtonStyle"
      TargetType="Button"
      BasedOn="{StaticResource {x:Type Button}}">
    <Setter
        Property="FontFamily"
        Value="{StaticResource DefaultFontFamily}" />
    <Setter
        Property="FontSize"
        Value="{StaticResource DefaultFontSize}" />
    <Setter
        Property="Padding"
        Value="16,8" />
  </Style>

  <!-- Base ComboBox Style (Syncfusion-compatible) -->
  <Style
      x:Key="ComboBoxStyle"
      TargetType="ComboBox"
      BasedOn="{StaticResource {x:Type ComboBox}}">
    <Setter
        Property="FontFamily"
        Value="{StaticResource DefaultFontFamily}" />
    <Setter
        Property="FontSize"
        Value="{StaticResource DefaultFontSize}" />
    <Setter
        Property="Padding"
        Value="8,4" />
  </Style>

  <!-- Base DataGrid Style (WPF standard) -->
  <Style
      x:Key="DataGridStyle"
      TargetType="DataGrid"
      BasedOn="{StaticResource {x:Type DataGrid}}">
    <Setter
        Property="FontFamily"
        Value="{StaticResource DefaultFontFamily}" />
    <Setter
        Property="FontSize"
        Value="{StaticResource DefaultFontSize}" />
    <Setter
        Property="AutoGenerateColumns"
        Value="False" />
  </Style>

  <!-- Syncfusion SfDataGrid Style (theme-applied, base reference only) -->
  <Style
      x:Key="CustomSfDataGridStyle"
      TargetType="syncfusion:SfDataGrid">
    <Setter
        Property="FontFamily"
        Value="{StaticResource DefaultFontFamily}" />
    <Setter
        Property="FontSize"
        Value="{StaticResource DefaultFontSize}" />
  </Style>

  <!-- Syncfusion SfChart Style (theme-applied, base reference only) -->
  <Style
      x:Key="CustomSfChartStyle"
      TargetType="syncfusion:SfChart">
    <Setter
        Property="FontFamily"
        Value="{StaticResource DefaultFontFamily}" />
  </Style>

  <!-- Syncfusion SfRibbon Style (theme-applied, base reference only) -->
  <Style
      x:Key="SfRibbonStyle"
      TargetType="syncfusion:Ribbon">
    <Setter
        Property="FontFamily"
        Value="{StaticResource DefaultFontFamily}" />
    <Setter
        Property="FontSize"
        Value="{StaticResource DefaultFontSize}" />
  </Style>

  <!-- ====================================================================== -->
  <!-- SPACING AND LAYOUT RESOURCES                                          -->
  <!-- ====================================================================== -->

  <system:Double x:Key="SpacingXS">4</system:Double>
  <system:Double x:Key="SpacingS">8</system:Double>
  <system:Double x:Key="SpacingM">16</system:Double>
  <system:Double x:Key="SpacingL">24</system:Double>
  <system:Double x:Key="SpacingXL">32</system:Double>

  <Thickness x:Key="ThicknessXS">4</Thickness>
  <Thickness x:Key="ThicknessS">8</Thickness>
  <Thickness x:Key="ThicknessM">16</Thickness>
  <Thickness x:Key="ThicknessL">24</Thickness>
  <Thickness x:Key="ThicknessXL">32</Thickness>

  <Thickness x:Key="CardMargin">8</Thickness>
  <Thickness x:Key="CardPadding">16</Thickness>
  <Thickness x:Key="SectionMargin">16</Thickness>
  <Thickness x:Key="SectionSpacing">0,0,0,24</Thickness>

  <!-- Shared Chart Templates -->
  <DataTemplate x:Key="PieChartLabelTemplate">
    <TextBlock Text="{Binding Percentage, StringFormat=P0}"
               FontWeight="Bold"
               Foreground="White" />
  </DataTemplate>

</ResourceDictionary>
