<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:converters="clr-namespace:WileyWidget.Converters;assembly=WileyWidget.UI"
    xmlns:controls="clr-namespace:WileyWidget.Controls"
    xmlns:root="clr-namespace:WileyWidget;assembly=WileyWidget.UI">

  <!-- ====================================================================== -->
  <!-- CUSTOM CONTROL STYLES                                                  -->
  <!-- Default styles for custom controls (required for DefaultStyleKey)     -->
  <!-- ====================================================================== -->

  <!-- PolishHost Control Default Style -->
  <Style TargetType="{x:Type controls:PolishHost}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type controls:PolishHost}">
          <ContentPresenter />
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- ====================================================================== -->
  <!-- BASE TEXT STYLES (Typography Foundation)                               -->
  <!-- These provide consistent typography across the application            -->
  <!-- NOTE: SfSkinManager will apply theme colors to these automatically    -->
  <!-- ====================================================================== -->

  <!-- Base Header Style -->
  <Style
      x:Key="WileyHeaderStyle"
      TargetType="TextBlock">
    <Setter
        Property="FontFamily"
        Value="Segoe UI" />
    <Setter
        Property="FontSize"
        Value="24" />
    <Setter
        Property="FontWeight"
        Value="SemiBold" />
    <Setter
        Property="Foreground"
        Value="#000000" />
    <Setter
        Property="Margin"
        Value="0,0,0,8" />
  </Style>

  <!-- Base Sub-Header Style -->
  <Style
      x:Key="WileySubHeaderStyle"
      TargetType="TextBlock">
    <Setter
        Property="FontFamily"
        Value="Segoe UI" />
    <Setter
        Property="FontSize"
        Value="18" />
    <Setter
        Property="FontWeight"
        Value="SemiBold" />
    <Setter
        Property="Foreground"
        Value="#000000" />
    <Setter
        Property="Margin"
        Value="0,0,0,4" />
  </Style>

  <!-- Base Body Text Style -->
  <Style
      x:Key="WileyBodyStyle"
      TargetType="TextBlock">
    <Setter
        Property="FontFamily"
        Value="Segoe UI" />
    <Setter
        Property="FontSize"
        Value="14" />
    <Setter
        Property="FontWeight"
        Value="Normal" />
    <Setter
        Property="Foreground"
        Value="#000000" />
    <Setter
        Property="LineHeight"
        Value="20" />
    <Setter
        Property="TextWrapping"
        Value="Wrap" />
  </Style>

  <!-- ====================================================================== -->
  <!-- VALUE CONVERTERS (Centralized)                                        -->
  <!-- All converters should be defined here for reuse across views         -->
  <!-- ====================================================================== -->

  <!-- Boolean Converters -->
  <converters:BooleanToVisibilityConverter x:Key="BoolToVis" />
  <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
  <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis" />
  <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
  <converters:NullToVisibilityConverter x:Key="NullToVis" />
  <converters:NullToBoolConverter x:Key="NullToBool" />
  <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
  <converters:StringToVisibilityConverter x:Key="StringToVis" />
  <converters:ZeroToVisibleConverter x:Key="ZeroToVisible" />
  <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
  <converters:EmptyStringToVisibilityConverter x:Key="EmptyStringToVisibilityConverter" />

  <!-- Other Converters -->
  <converters:BalanceColorConverter x:Key="BalanceColorConverter" />
  <root:CurrencyFormatConverter x:Key="CurrencyFormatConverter" />
  <converters:ComparisonConverter x:Key="ComparisonConverter" />
  <converters:GreaterThanConverter x:Key="GreaterThanConverter" />
  <converters:StringEqualsConverter x:Key="StringEqualsConverter" />
  <converters:BooleanToBrushConverter x:Key="BooleanToBrushConverter" />
  <converters:StatusColorConverter x:Key="StatusColorConverter" />
  <converters:StatusColorConverter x:Key="StatusToColorConverter" />
  <converters:UniqueDepartmentsConverter x:Key="UniqueDepartmentsConverter" />

  <!-- Chat/AI Converters -->
  <converters:AuthorAlignmentConverter x:Key="MessageAlignmentConverter" />
  <converters:AuthorBackgroundConverter x:Key="MessageBackgroundConverter" />

  <!-- Budget Converters -->
  <converters:BudgetProgressConverter x:Key="BudgetProgressConverter" />

  <!-- ====================================================================== -->
  <!-- SEMANTIC COLORS (Application-Specific, Static)                        -->
  <!-- These are custom to Wiley Widget and don't come from Syncfusion       -->
  <!-- ====================================================================== -->

  <!-- Data Visualization Brushes -->
  <SolidColorBrush
      x:Key="PositiveBrush"
      Color="#4CAF50" />
  <SolidColorBrush
      x:Key="NegativeBrush"
      Color="#F44336" />
  <SolidColorBrush
      x:Key="EmphasisBrush"
      Color="#2196F3" />

  <!-- Accent Brushes (Brand Colors) -->
  <SolidColorBrush
      x:Key="AccentBlueBrush"
      Color="#2196F3" />
  <SolidColorBrush
      x:Key="AccentGreenBrush"
      Color="#4CAF50" />
  <SolidColorBrush
      x:Key="AccentPurpleBrush"
      Color="#9C27B0" />
  <SolidColorBrush
      x:Key="AccentOrangeBrush"
      Color="#FF9800" />

  <!-- ====================================================================== -->
  <!-- SPACING SYSTEM (Layout Consistency)                                   -->
  <!-- ====================================================================== -->

  <!-- ====================================================================== -->
  <!-- BRUSH RESOURCES                                                        -->
  <!-- Critical brushes for Syncfusion theme and application styling         -->
  <!-- ====================================================================== -->

  <!-- Syncfusion Critical Brushes -->
  <SolidColorBrush
      x:Key="InfoBrush"
      Color="#1976D2" />
  <SolidColorBrush
      x:Key="ErrorBrush"
      Color="#D32F2F" />
  <SolidColorBrush
      x:Key="SuccessBrush"
      Color="#388E3C" />
  <SolidColorBrush
      x:Key="WarningBrush"
      Color="#F57C00" />
  <SolidColorBrush
      x:Key="PrimaryBackground"
      Color="#FFFFFF" />
  <SolidColorBrush
      x:Key="SecondaryBackground"
      Color="#F5F5F5" />
  <SolidColorBrush
      x:Key="ContentBackground"
      Color="#FFFFFF" />
  <SolidColorBrush
      x:Key="PrimaryForeground"
      Color="#000000" />
  <SolidColorBrush
      x:Key="SecondaryForeground"
      Color="#666666" />
  <SolidColorBrush
      x:Key="BorderBrush"
      Color="#CCCCCC" />
  <SolidColorBrush
      x:Key="AccentBrush"
      Color="#1976D2" />
  <SolidColorBrush
      x:Key="HoverBrush"
      Color="#E3F2FD" />
  <SolidColorBrush
      x:Key="PressedBrush"
      Color="#BBDEFB" />
  <SolidColorBrush
      x:Key="DisabledBrush"
      Color="#BDBDBD" />

  <!-- Application-specific Brushes -->
  <SolidColorBrush
      x:Key="ContentBackgroundBrush"
      Color="#FFFFFF" />

  <!-- ====================================================================== -->
  <!-- SYNCFUSION CONTROL STYLES                                             -->
  <!-- Base styles for Syncfusion controls (optional theme overrides)        -->
  <!-- ====================================================================== -->

  <!-- Default font and sizing resources -->
  <FontFamily x:Key="DefaultFontFamily">Segoe UI</FontFamily>
  <system:Double x:Key="DefaultFontSize">14</system:Double>
  <Thickness x:Key="ControlBorderThickness">1</Thickness>

  <!-- Base TextBox Style (Syncfusion-compatible) -->
  <Style
      x:Key="TextBoxStyle"
      TargetType="TextBox"
      BasedOn="{StaticResource {x:Type TextBox}}">
    <Setter
        Property="FontFamily"
        Value="{StaticResource DefaultFontFamily}" />
    <Setter
        Property="FontSize"
        Value="{StaticResource DefaultFontSize}" />
    <Setter
        Property="Padding"
        Value="8,4" />
  </Style>

  <!-- Base Button Style (Syncfusion-compatible) -->
  <Style
      x:Key="ButtonStyle"
      TargetType="Button"
      BasedOn="{StaticResource {x:Type Button}}">
    <Setter
        Property="FontFamily"
        Value="{StaticResource DefaultFontFamily}" />
    <Setter
        Property="FontSize"
        Value="{StaticResource DefaultFontSize}" />
    <Setter
        Property="Padding"
        Value="16,8" />
  </Style>

  <!-- Base ComboBox Style (Syncfusion-compatible) -->
  <Style
      x:Key="ComboBoxStyle"
      TargetType="ComboBox"
      BasedOn="{StaticResource {x:Type ComboBox}}">
    <Setter
        Property="FontFamily"
        Value="{StaticResource DefaultFontFamily}" />
    <Setter
        Property="FontSize"
        Value="{StaticResource DefaultFontSize}" />
    <Setter
        Property="Padding"
        Value="8,4" />
  </Style>

  <!-- Base DataGrid Style (WPF standard) -->
  <Style
      x:Key="DataGridStyle"
      TargetType="DataGrid"
      BasedOn="{StaticResource {x:Type DataGrid}}">
    <Setter
        Property="FontFamily"
        Value="{StaticResource DefaultFontFamily}" />
    <Setter
        Property="FontSize"
        Value="{StaticResource DefaultFontSize}" />
    <Setter
        Property="AutoGenerateColumns"
        Value="False" />
  </Style>

  <!-- Syncfusion SfDataGrid Style (theme-applied, base reference only) -->
  <Style
      x:Key="SfDataGridStyle"
      TargetType="syncfusion:SfDataGrid">
    <Setter
        Property="FontFamily"
        Value="{StaticResource DefaultFontFamily}" />
    <Setter
        Property="FontSize"
        Value="{StaticResource DefaultFontSize}" />
  </Style>

  <!-- Syncfusion SfChart Style (theme-applied, base reference only) -->
  <Style
      x:Key="SfChartStyle"
      TargetType="syncfusion:SfChart">
    <Setter
        Property="FontFamily"
        Value="{StaticResource DefaultFontFamily}" />
  </Style>

  <!-- Syncfusion SfRibbon Style (theme-applied, base reference only) -->
  <Style
      x:Key="SfRibbonStyle"
      TargetType="syncfusion:Ribbon">
    <Setter
        Property="FontFamily"
        Value="{StaticResource DefaultFontFamily}" />
    <Setter
        Property="FontSize"
        Value="{StaticResource DefaultFontSize}" />
  </Style>

  <!-- ====================================================================== -->
  <!-- SPACING AND LAYOUT RESOURCES                                          -->
  <!-- ====================================================================== -->

  <system:Double x:Key="SpacingXS">4</system:Double>
  <system:Double x:Key="SpacingS">8</system:Double>
  <system:Double x:Key="SpacingM">16</system:Double>
  <system:Double x:Key="SpacingL">24</system:Double>
  <system:Double x:Key="SpacingXL">32</system:Double>

  <Thickness x:Key="ThicknessXS">4</Thickness>
  <Thickness x:Key="ThicknessS">8</Thickness>
  <Thickness x:Key="ThicknessM">16</Thickness>
  <Thickness x:Key="ThicknessL">24</Thickness>
  <Thickness x:Key="ThicknessXL">32</Thickness>

  <Thickness x:Key="CardMargin">8</Thickness>
  <Thickness x:Key="CardPadding">16</Thickness>
  <Thickness x:Key="SectionMargin">16</Thickness>
  <Thickness x:Key="SectionSpacing">0,0,0,24</Thickness>

</ResourceDictionary>
