<Window x:Class="WileyWidget.Views.Windows.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Wiley Widget"
        Height="300"
        Width="500"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White"
        AllowsTransparency="True"
        Topmost="True">
    <Grid>
        <Border BorderBrush="#007ACC" BorderThickness="2" CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#007ACC" CornerRadius="8,8,0,0">
                    <TextBlock Text="Wiley Widget"
                             Foreground="White"
                             FontSize="18"
                             FontWeight="Bold"
                             HorizontalAlignment="Center"
                             Margin="20,10"/>
                </Border>

                <!-- Content -->
                <StackPanel Grid.Row="1" Margin="20" VerticalAlignment="Center">
                    <TextBlock x:Name="StatusTextBlock"
                             Text="Initializing..."
                             FontSize="14"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,20"/>
                    <ProgressBar x:Name="ProgressBar"
                               Height="20"
                               IsIndeterminate="True"/>
                </StackPanel>

                <!-- Footer -->
                <TextBlock Grid.Row="2"
                          Text="Please wait..."
                          FontSize="12"
                          Foreground="Gray"
                          HorizontalAlignment="Center"
                          Margin="20"/>
            </Grid>
        </Border>
    </Grid>
</Window>