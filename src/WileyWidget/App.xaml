<prism:PrismApplication
    x:Class="WileyWidget.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:syncfusionClr="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:converters="clr-namespace:WileyWidget.Converters;assembly=WileyWidget.UI"
    xmlns:local="clr-namespace:WileyWidget"
    prism:ViewModelLocator.AutoWireViewModel="False">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- ============================================================== -->
        <!-- Syncfusion Theme Integration using SfSkinManager v31.1.17     -->
        <!-- Reference: https://help.syncfusion.com/wpf/themes/skin-manager -->
        <!-- ============================================================== -->
        <!--
                    IMPORTANT: Theme is set programmatically in App.xaml.cs via:
                    SfSkinManager.ApplyThemeAsDefaultStyle = true;
                    SfSkinManager.ApplicationTheme = new Theme("FluentLight");

                    This is the OFFICIAL Syncfusion v31.1.17 approach. DO NOT manually
                    load theme resource dictionaries via URI - SfSkinManager handles
                    all theme loading automatically.

                    Individual control theme dictionaries below are REMOVED as they
                    are no longer needed with SfSkinManager automatic theme application.
                -->

        <!-- Custom Wiley Widget resources -->
        <!-- Generic.xaml contains base styles, converters, and custom control templates -->
        <ResourceDictionary Source="/WileyWidget;component/Themes/Generic.xaml" />

        <!-- NOTE: Syncfusion theme is applied programmatically via SfSkinManager in App.xaml.cs -->
        <!-- SfSkinManager.ApplyThemeAsDefaultStyle = true applies theme to ALL controls
        automatically -->
        <!-- DO NOT manually load Syncfusion theme dictionaries here - let SfSkinManager handle it -->
      </ResourceDictionary.MergedDictionaries>


      <!-- Inline resources (converters, etc.) -->
      <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

      <!-- Critical brushes for CoreModule views -->
      <SolidColorBrush
          x:Key="InfoBrush"
          Color="#0078D4" />
      <SolidColorBrush
          x:Key="ErrorBrush"
          Color="#E81123" />
      <SolidColorBrush
          x:Key="ContentBackgroundBrush"
          Color="#FFFFFF" />
    </ResourceDictionary>
  </Application.Resources>
</prism:PrismApplication>
