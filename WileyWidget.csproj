<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <!-- Nullable enabled for better null safety and code quality -->
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <LangVersion>latest</LangVersion>
    <NoWarn>$(NoWarn);NETSDK1206;NU1605;NU1008;CS7022;CS8600;CS8601;CS8602;CS8603;CS8604;CS8618;CS8620;CS8622;CS8625;CS8632;CS8613;CS1061;CS1929;CA1416</NoWarn>
    <WarningsNotAsErrors>NU1008</WarningsNotAsErrors>
    <RuntimeIdentifiers>win-x64;win-x86</RuntimeIdentifiers>
  <StartupObject>WileyWidget.Program</StartupObject>

    <!-- XAML Debugging Configuration -->
    <XamlDebuggingInformation>true</XamlDebuggingInformation>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>

    <!-- Enable binary logging for XAML diagnostics -->
    <MSBuildDebugPathEnabled>true</MSBuildDebugPathEnabled>

    <!-- Performance optimizations for startup -->
    <PublishReadyToRun>true</PublishReadyToRun>
    <PublishTrimmed>false</PublishTrimmed>
    <TieredCompilation>true</TieredCompilation>
    <TieredPGO>true</TieredPGO>
    <IlcOptimizationPreference>Speed</IlcOptimizationPreference>

  <!-- Avoid WPF temp project (wpftmp) to prevent missing references during XAML compile -->
  <GenerateTemporaryTargetAssembly>false</GenerateTemporaryTargetAssembly>

    <!-- Enable ReadyToRun for Debug builds to improve startup performance -->
    <PublishReadyToRun Condition="'$(Configuration)' == 'Debug'">false</PublishReadyToRun>

    <!-- Performance optimizations for startup -->
    <PublishReadyToRun>true</PublishReadyToRun>
    <PublishTrimmed>false</PublishTrimmed>
    <TieredCompilation>true</TieredCompilation>
    <TieredPGO>true</TieredPGO>
    <IlcOptimizationPreference>Speed</IlcOptimizationPreference>

  <!-- Signing placeholders (provide actual .snk and enable when ready) -->
  <SignAssembly>false</SignAssembly>
  <AssemblyOriginatorKeyFile>signing\WileyWidget.snk</AssemblyOriginatorKeyFile>
  <DelaySign>false</DelaySign>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
  </PropertyGroup>

