  <!-- Design-time/XAML compile workaround: Ensure Prism assemblies are available
       for temporary wpftmp projects by adding explicit references to the NuGet cache. -->
  <ItemGroup>
    <!-- Prism.Wpf (prefer net8, fallback to net6) -->
    <Reference Include="Prism.Wpf" Condition="Exists('$(NuGetPackageRoot)prism.wpf/9.0.537/lib/net8.0-windows7.0/Prism.Wpf.dll')">
      <HintPath>$(NuGetPackageRoot)prism.wpf/9.0.537/lib/net8.0-windows7.0/Prism.Wpf.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="Prism.Wpf" Condition="!Exists('$(NuGetPackageRoot)prism.wpf/9.0.537/lib/net8.0-windows7.0/Prism.Wpf.dll') and Exists('$(NuGetPackageRoot)prism.wpf/9.0.537/lib/net6.0-windows7.0/Prism.Wpf.dll')">
      <HintPath>$(NuGetPackageRoot)prism.wpf/9.0.537/lib/net6.0-windows7.0/Prism.Wpf.dll</HintPath>
      <Private>true</Private>
    </Reference>

    <!-- Prism.Core -->
    <Reference Include="Prism" Condition="Exists('$(NuGetPackageRoot)prism.core/9.0.537/lib/net8.0/Prism.dll')">
      <HintPath>$(NuGetPackageRoot)prism.core/9.0.537/lib/net8.0/Prism.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="Prism" Condition="!Exists('$(NuGetPackageRoot)prism.core/9.0.537/lib/net8.0/Prism.dll') and Exists('$(NuGetPackageRoot)prism.core/9.0.537/lib/net6.0/Prism.dll')">
      <HintPath>$(NuGetPackageRoot)prism.core/9.0.537/lib/net6.0/Prism.dll</HintPath>
      <Private>true</Private>
    </Reference>

    <!-- Prism.Regions (split in Prism 9) -->
    <!-- Removed explicit references as Prism.Regions is part of Prism.Wpf -->
  </ItemGroup>

