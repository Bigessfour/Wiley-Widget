<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:syncfusion="http://schemas.syncfusion.com/wpf">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/WileyWidget;component/Resources/Brushes.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- âœ… DATAGRID STYLES - Syncfusion Control Customization -->
    <!-- Styles for Syncfusion DataGrid and related controls -->

    <!-- Budget Grid Styles - Used in BudgetPanelView and BudgetView -->
    <Style x:Key="BudgetFilterRowCellStyle" TargetType="syncfusion:GridFilterRowCell">
        <Setter Property="Background" Value="{StaticResource GridFilterRowBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource GridFilterRowForegroundBrush}" />
    </Style>

    <Style x:Key="BudgetGroupDropAreaStyle" TargetType="syncfusion:GroupDropArea">
        <Setter Property="Background" Value="{StaticResource GridGroupDropAreaBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource GridGroupDropAreaForegroundBrush}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="12,6" />
    </Style>

    <Style x:Key="BudgetSummaryCellStyle" TargetType="syncfusion:GridTableSummaryCell">
        <Setter Property="Background" Value="{StaticResource GridSummaryBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource GridSummaryForegroundBrush}" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style x:Key="BudgetRowHeaderStyle" TargetType="syncfusion:GridHeaderCellControl">
        <Setter Property="Background" Value="{StaticResource GridRowHeaderBackgroundColor}" />
        <Setter Property="Foreground" Value="{StaticResource GridRowHeaderForegroundBrush}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>

    <!-- General DataGrid Styles -->
    <Style x:Key="DataGridFilterRowCellStyle" TargetType="syncfusion:GridFilterRowCell" BasedOn="{StaticResource BudgetFilterRowCellStyle}" />
    <Style x:Key="DataGridGroupDropAreaStyle" TargetType="syncfusion:GroupDropArea" BasedOn="{StaticResource BudgetGroupDropAreaStyle}" />
    <Style x:Key="DataGridSummaryCellStyle" TargetType="syncfusion:GridTableSummaryCell" BasedOn="{StaticResource BudgetSummaryCellStyle}" />
    <Style x:Key="DataGridRowHeaderStyle" TargetType="syncfusion:GridHeaderCellControl" BasedOn="{StaticResource BudgetRowHeaderStyle}" />

</ResourceDictionary>