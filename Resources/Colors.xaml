<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- âœ… CENTRALIZED COLOR PALETTE -->
    <!-- Define all application colors here for consistency and easy theme switching -->

    <!-- Primary Colors -->
    <Color x:Key="PrimaryColor">#007ACC</Color>
    <Color x:Key="PrimaryColorLight">#4DA6E0</Color>
    <Color x:Key="PrimaryColorDark">#005A99</Color>

    <!-- Secondary Colors -->
    <Color x:Key="SecondaryColor">#E6E6E6</Color>
    <Color x:Key="SecondaryColorLight">#F5F5F5</Color>
    <Color x:Key="SecondaryColorDark">#CCCCCC</Color>

    <!-- Accent Colors -->
    <Color x:Key="AccentColor">#009688</Color>
    <Color x:Key="AccentColorLight">#4DB6AC</Color>
    <Color x:Key="AccentColorDark">#00695C</Color>

    <!-- Status Colors -->
    <Color x:Key="SuccessColor">#28a745</Color>
    <Color x:Key="WarningColor">#ffc107</Color>
    <Color x:Key="ErrorColor">#dc3545</Color>
    <Color x:Key="InfoColor">#17a2b8</Color>

    <!-- Text Colors -->
    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <Color x:Key="SecondaryTextColor">#FF666666</Color>
    <Color x:Key="MutedTextColor">#FF999999</Color>

    <!-- Background Colors -->
    <Color x:Key="CardBackgroundColor">#FF2D2D30</Color>
    <Color x:Key="CardBorderColor">#FF3F3F46</Color>

    <!-- Grid Colors -->
    <Color x:Key="GridFilterRowBackgroundColor">#FF1F2329</Color>
    <Color x:Key="GridFilterRowForegroundColor">#FFE9F3FF</Color>
    <Color x:Key="GridGroupDropAreaBackgroundColor">#FF1C1F26</Color>
    <Color x:Key="GridGroupDropAreaForegroundColor">#FFCBD6EA</Color>
    <Color x:Key="GridSummaryBackgroundColor">#FF20242F</Color>
    <Color x:Key="GridSummaryForegroundColor">#FFE0E6F0</Color>
    <Color x:Key="GridSelectionColor">#FF4F6BED</Color>
    <Color x:Key="GridSelectionForegroundColor">#FFFDFDFD</Color>
    <Color x:Key="GridHoverColor">#334F6BED</Color>
    <Color x:Key="GridSearchHighlightColor">#55FFE082</Color>
    <Color x:Key="GridRowHeaderBackgroundColor">#222832</Color>
    <Color x:Key="GridRowHeaderForegroundColor">#FFB0BCD6</Color>

    <!-- Navigation and UI Colors -->
    <Color x:Key="PanelBackgroundColor">#FF2D2D30</Color>
    <Color x:Key="BorderColor">#FF3F3F46</Color>
    <Color x:Key="SelectedColor">#009688</Color>
    <Color x:Key="HoverColor">#4DB6AC</Color>

</ResourceDictionary>