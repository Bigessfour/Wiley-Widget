<Window x:Class="WileyWidget.BudgetView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WileyWidget"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        Title="Budget Analysis &amp; Reporting" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <local:BalanceColorConverter x:Key="BalanceColorConverter" />
    </Window.Resources>

    <DockPanel>
        <!-- Ribbon Toolbar -->
        <syncfusion:Ribbon DockPanel.Dock="Top" x:Name="BudgetRibbon">
            <syncfusion:RibbonTab Caption="Budget Analysis">
                <syncfusion:RibbonBar Header="Data">
                    <syncfusion:RibbonButton Label="Refresh" SizeForm="Large" Command="{Binding RefreshBudgetDataCommand}" />
                    <syncfusion:RibbonButton Label="Export Report" Command="{Binding ExportReportCommand}" />
                </syncfusion:RibbonBar>
                <syncfusion:RibbonBar Header="Analysis">
                    <syncfusion:RibbonButton Label="Break-even Analysis" Command="{Binding BreakEvenAnalysisCommand}" />
                    <syncfusion:RibbonButton Label="Trend Analysis" Command="{Binding TrendAnalysisCommand}" />
                </syncfusion:RibbonBar>
            </syncfusion:RibbonTab>
        </syncfusion:Ribbon>

        <!-- Main Content Area -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="200" />
            </Grid.RowDefinitions>

            <!-- Budget Summary Cards -->
            <Grid Grid.Row="0" Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Summary Cards -->
                <WrapPanel Grid.Row="0" Margin="0,0,0,8">
                    <Border BorderBrush="LightBlue" BorderThickness="2" CornerRadius="4" Margin="4" Padding="8" Background="AliceBlue">
                        <StackPanel>
                            <TextBlock Text="Total Revenue" FontWeight="Bold" />
                            <TextBlock Text="{Binding TotalRevenue, StringFormat=C2}" FontSize="16" Foreground="Green" />
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="LightCoral" BorderThickness="2" CornerRadius="4" Margin="4" Padding="8" Background="MistyRose">
                        <StackPanel>
                            <TextBlock Text="Total Expenses" FontWeight="Bold" />
                            <TextBlock Text="{Binding TotalExpenses, StringFormat=C2}" FontSize="16" Foreground="Red" />
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="LightGreen" BorderThickness="2" CornerRadius="4" Margin="4" Padding="8" Background="Honeydew">
                        <StackPanel>
                            <TextBlock Text="Net Balance" FontWeight="Bold" />
                            <TextBlock Text="{Binding NetBalance, StringFormat=C2}" FontSize="16"
                                     Foreground="{Binding NetBalance, Converter={StaticResource BalanceColorConverter}}" />
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="LightGoldenrodYellow" BorderThickness="2" CornerRadius="4" Margin="4" Padding="8" Background="LightYellow">
                        <StackPanel>
                            <TextBlock Text="Citizens Served" FontWeight="Bold" />
                            <TextBlock Text="{Binding TotalCitizens}" FontSize="16" />
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="LightSteelBlue" BorderThickness="2" CornerRadius="4" Margin="4" Padding="8" Background="Azure">
                        <StackPanel>
                            <TextBlock Text="Avg Rate Increase" FontWeight="Bold" />
                            <TextBlock Text="{Binding AverageRateIncrease, StringFormat=P1}" FontSize="16" Foreground="Blue" />
                        </StackPanel>
                    </Border>
                </WrapPanel>

                <!-- Budget Details Grid -->
                <syncfusion:SfDataGrid
                    Grid.Row="1"
                    ItemsSource="{Binding BudgetDetails}"
                    AutoGenerateColumns="False"
                    AllowSorting="True"
                    AllowFiltering="True"
                    AllowResizingColumns="True"
                    GridLinesVisibility="Horizontal"
                    RowHeight="32"
                    AlternationCount="2"
                    Margin="0,8,0,0"
                    AutomationProperties.AutomationId="BudgetDetailsGrid"
                    AutomationProperties.Name="Budget Details Data Grid">

                    <syncfusion:SfDataGrid.Columns>
                        <syncfusion:GridTextColumn HeaderText="Enterprise" MappingName="EnterpriseName" Width="200" />
                        <syncfusion:GridNumericColumn HeaderText="Citizens" MappingName="CitizenCount" Width="100" />
                        <syncfusion:GridNumericColumn HeaderText="Rate" MappingName="CurrentRate" Width="100" />
                        <syncfusion:GridNumericColumn HeaderText="Revenue" MappingName="MonthlyRevenue" Width="120" />
                        <syncfusion:GridNumericColumn HeaderText="Expenses" MappingName="MonthlyExpenses" Width="120" />
                        <syncfusion:GridNumericColumn HeaderText="Balance" MappingName="MonthlyBalance" Width="120" />
                        <syncfusion:GridNumericColumn HeaderText="Break-even Rate" MappingName="BreakEvenRate" Width="130" />
                        <syncfusion:GridTextColumn HeaderText="Status" MappingName="Status" Width="100" />
                    </syncfusion:SfDataGrid.Columns>
                </syncfusion:SfDataGrid>
            </Grid>

            <!-- Analytics Charts Section -->
            <Grid Grid.Row="1" Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Rate Trend Chart -->
                <GroupBox Header="Rate Trends &amp; Projections" Margin="0,0,8,0" Padding="8">
                    <syncfusion:SfChart Height="250">
                        <syncfusion:SfChart.PrimaryAxis>
                            <syncfusion:CategoryAxis LabelPlacement="BetweenTicks" />
                        </syncfusion:SfChart.PrimaryAxis>
                        <syncfusion:SfChart.SecondaryAxis>
                            <syncfusion:NumericalAxis LabelFormat="C2" />
                        </syncfusion:SfChart.SecondaryAxis>
                        <syncfusion:LineSeries ItemsSource="{Binding RateTrendData}"
                                             XBindingPath="Period"
                                             YBindingPath="Rate"
                                             Interior="#2196F3"
                                             Label="Current Rate" />
                        <syncfusion:LineSeries ItemsSource="{Binding ProjectedRateData}"
                                             XBindingPath="Period"
                                             YBindingPath="Rate"
                                             Interior="#FF9800"
                                             Label="Projected Rate"
                                             StrokeDashArray="2,2" />
                    </syncfusion:SfChart>
                </GroupBox>

                <!-- Budget Performance Chart -->
                <GroupBox Header="Budget Performance Analysis" Margin="8,0,0,0" Padding="8">
                    <syncfusion:SfChart Height="250">
                        <syncfusion:SfChart.PrimaryAxis>
                            <syncfusion:CategoryAxis />
                        </syncfusion:SfChart.PrimaryAxis>
                        <syncfusion:SfChart.SecondaryAxis>
                            <syncfusion:NumericalAxis LabelFormat="C0" />
                        </syncfusion:SfChart.SecondaryAxis>
                        <syncfusion:ColumnSeries ItemsSource="{Binding BudgetPerformanceData}"
                                                XBindingPath="Enterprise"
                                                YBindingPath="Revenue"
                                                Interior="#4CAF50"
                                                Label="Revenue" />
                        <syncfusion:ColumnSeries ItemsSource="{Binding BudgetPerformanceData}"
                                                XBindingPath="Enterprise"
                                                YBindingPath="Expenses"
                                                Interior="#F44336"
                                                Label="Expenses" />
                    </syncfusion:SfChart>
                </GroupBox>
            </Grid>

            <!-- Analysis Panel -->
            <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="1" Margin="8,0,8,8" CornerRadius="4">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Advanced Analytics &amp; Forecasting" FontSize="14" FontWeight="Bold" Margin="8" />

                    <TabControl Margin="8,0,8,8">
                        <TabItem Header="Break-even Analysis">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="8">
                                    <TextBlock Text="{Binding BreakEvenAnalysisText}" TextWrapping="Wrap" Margin="0,0,0,8" />
                                    <GroupBox Header="Break-even Calculator" Margin="0,8,0,0">
                                        <Grid Margin="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Label Grid.Row="0" Grid.Column="0" Content="Fixed Costs:" Margin="0,0,8,4" />
                                            <syncfusion:DoubleTextBox Grid.Row="0" Grid.Column="1" Value="{Binding CalculatorFixedCosts, Mode=TwoWay}" Margin="0,0,8,4" />

                                            <Label Grid.Row="1" Grid.Column="0" Content="Variable Cost per Unit:" Margin="0,0,8,4" />
                                            <syncfusion:DoubleTextBox Grid.Row="1" Grid.Column="1" Value="{Binding CalculatorVariableCost, Mode=TwoWay}" Margin="0,0,8,4" />

                                            <Label Grid.Row="2" Grid.Column="0" Content="Price per Unit:" Margin="0,0,8,4" />
                                            <syncfusion:DoubleTextBox Grid.Row="2" Grid.Column="1" Value="{Binding CalculatorPricePerUnit, Mode=TwoWay}" Margin="0,0,8,4" />

                                            <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="3" Content="Calculate" Command="{Binding CalculateBreakEvenCommand}"
                                                  VerticalAlignment="Center" Margin="8,0,0,0" />
                                        </Grid>
                                    </GroupBox>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>

                        <TabItem Header="Trend Analysis">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="8">
                                    <TextBlock Text="{Binding TrendAnalysisText}" TextWrapping="Wrap" Margin="0,0,0,8" />
                                    <GroupBox Header="Trend Metrics" Margin="0,8,0,0">
                                        <Grid Margin="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Revenue Growth" FontWeight="Bold" />
                                                <TextBlock Text="{Binding RevenueGrowthRate, StringFormat=P2}" FontSize="16" Foreground="Green" />
                                            </StackPanel>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="Expense Growth" FontWeight="Bold" />
                                                <TextBlock Text="{Binding ExpenseGrowthRate, StringFormat=P2}" FontSize="16" Foreground="Red" />
                                            </StackPanel>

                                            <StackPanel Grid.Column="2">
                                                <TextBlock Text="Profit Margin" FontWeight="Bold" />
                                                <TextBlock Text="{Binding ProfitMargin, StringFormat=P2}" FontSize="16"
                                                         Foreground="{Binding ProfitMargin, Converter={StaticResource BalanceColorConverter}}" />
                                            </StackPanel>
                                        </Grid>
                                    </GroupBox>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>

                        <TabItem Header="Rate Forecasting">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="8">
                                    <TextBlock Text="Rate forecasting helps predict future service charge adjustments based on historical data and projected expenses."
                                             TextWrapping="Wrap" Margin="0,0,0,8" />

                                    <GroupBox Header="Forecasting Parameters" Margin="0,8,0,0">
                                        <Grid Margin="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Label Grid.Row="0" Grid.Column="0" Content="Forecast Period (months):" Margin="0,0,8,4" />
                                            <syncfusion:IntegerTextBox Grid.Row="0" Grid.Column="1" Value="{Binding ForecastPeriodMonths, Mode=TwoWay}" Margin="0,0,0,4" />

                                            <Label Grid.Row="1" Grid.Column="0" Content="Expected Inflation Rate:" Margin="0,0,8,4" />
                                            <syncfusion:DoubleTextBox Grid.Row="1" Grid.Column="1" Value="{Binding InflationRate, Mode=TwoWay}" Margin="0,0,0,4" />

                                            <Label Grid.Row="2" Grid.Column="0" Content="Population Growth Rate:" Margin="0,0,8,4" />
                                            <syncfusion:DoubleTextBox Grid.Row="2" Grid.Column="1" Value="{Binding PopulationGrowthRate, Mode=TwoWay}" Margin="0,0,0,4" />
                                        </Grid>
                                    </GroupBox>

                                    <Button Content="Generate Forecast" Command="{Binding GenerateForecastCommand}"
                                          Margin="0,8,0,0" HorizontalAlignment="Left" />
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>

                        <TabItem Header="Scenario Planning">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="8">
                                    <TextBlock Text="Explore different budget scenarios to understand potential outcomes and make informed decisions."
                                             TextWrapping="Wrap" Margin="0,0,0,8" />

                                    <GroupBox Header="Scenario Parameters" Margin="0,8,0,0">
                                        <Grid Margin="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Label Grid.Row="0" Grid.Column="0" Content="Rate Increase (%):" Margin="0,0,8,4" />
                                            <syncfusion:DoubleTextBox Grid.Row="0" Grid.Column="1" Value="{Binding ScenarioRateIncrease, Mode=TwoWay}" Margin="0,0,0,4" />

                                            <Label Grid.Row="1" Grid.Column="0" Content="Cost Reduction (%):" Margin="0,0,8,4" />
                                            <syncfusion:DoubleTextBox Grid.Row="1" Grid.Column="1" Value="{Binding ScenarioCostReduction, Mode=TwoWay}" Margin="0,0,0,4" />

                                            <Label Grid.Row="2" Grid.Column="0" Content="New Citizens:" Margin="0,0,8,4" />
                                            <syncfusion:IntegerTextBox Grid.Row="2" Grid.Column="1" Value="{Binding ScenarioNewCitizens, Mode=TwoWay}" Margin="0,0,0,4" />
                                        </Grid>
                                    </GroupBox>

                                    <Button Content="Run Scenario" Command="{Binding RunScenarioCommand}"
                                          Margin="0,8,0,0" HorizontalAlignment="Left" />
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>

                        <TabItem Header="Recommendations">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="8">
                                    <TextBlock Text="{Binding RecommendationsText}" TextWrapping="Wrap" />
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Background="Transparent">
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Last Updated: "/><Run Text="{Binding LastUpdated}" />
                </TextBlock>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Analysis Status: "/><Run Text="{Binding AnalysisStatus}" />
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>