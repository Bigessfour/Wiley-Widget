{
  "ConnectionStrings": {
    "AzureConnection": "Server=tcp:${AZURE_SQL_SERVER}.database.windows.net,1433;Database=${AZURE_SQL_DATABASE};Authentication=Active Directory Default;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;MaxPoolSize=100;MinPoolSize=5;Pooling=True;MultipleActiveResultSets=True;ApplicationName=WileyWidget-Enterprise;"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async",
      "Serilog.Sinks.Console",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Process",
      "Serilog.Enrichers.Thread"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning",
        "WileyWidget": "Debug"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      "WithEnvironmentName"
    ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/wiley-widget-.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 30,
                "fileSizeLimitBytes": 104857600,
                "rollOnFileSizeLimit": true,
                "shared": true,
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {MachineName} {ProcessId}:{ThreadId} {SourceContext} {CorrelationId} {Message:lj}{NewLine}{Exception}"
              }
            },
            {
              "Name": "File",
              "Args": {
                "path": "logs/errors-.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 90,
                "restrictedToMinimumLevel": "Warning",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {MachineName} {ProcessId}:{ThreadId} {SourceContext} {CorrelationId} {Message:lj}{NewLine}{Exception}"
              }
            }
          ]
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {ProcessId}:{ThreadId} {SourceContext} {Message:lj}{NewLine}{Exception}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/console-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {ProcessId}:{ThreadId} {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Database": {
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false,
    "CommandTimeout": 30,
    "MaxRetryCount": "${AZURE_SQL_RETRY_ATTEMPTS:3}",
    "MaxRetryDelay": "${AZURE_SQL_RETRY_DELAY:00:00:30}",
    "ConnectionTimeout": 30,
    "ConnectionPooling": {
      "Enabled": true,
      "MinPoolSize": 0,
      "MaxPoolSize": 100,
      "ConnectionLifetime": "00:05:00",
      "ConnectionIdleTimeout": "00:02:00"
    },
    "Resilience": {
      "RetryOnFailure": {
        "Enabled": true,
        "MaxRetryCount": 3,
        "MaxRetryDelay": "00:00:30",
        "ErrorNumbersToAdd": [
          4060, 40197, 40501, 40613, 49918, 49919, 49920, 11001
        ]
      }
    }
  },
  "HealthChecks": {
    "DefaultTimeout": "00:00:45",
    "DatabaseTimeout": "00:00:30",
    "ExternalServiceTimeout": "00:00:20",
    "MaxRetries": 3,
    "RetryDelay": "00:00:02",
    "CircuitBreakerThreshold": 5,
    "CircuitBreakerTimeout": "00:05:00",
    "ContinueOnFailure": true,
    "SkipServices": []
  },
  "Azure": {
    "SubscriptionId": "89c2076a-8c6f-41fe-b03c-850d46a57abf",
    "TenantId": "cb097857-10d5-410b-8e09-6073de3ab035",
    "SqlServer": "${AZURE_SQL_SERVER}",
    "Database": "${AZURE_SQL_DATABASE}",
    "KeyVaultName": "wiley-widget-secrets",
    "KeyVault": {
      "Url": "https://wiley-widget-secrets.vault.azure.net/"
    }
  },
  "ApplicationInsights": {
    "ConnectionString": "${APPLICATIONINSIGHTS_CONNECTION_STRING}"
  },
  "AzureAI": {
    "Endpoint": "https://wileywidget-ai.openai.azure.com",
    "ApiKey": "${AZURE_OPENAI_API_KEY}",
    "DeploymentName": "gpt-4"
  },
  "QuickBooks": {
    "ClientId": "${QBO_CLIENT_ID}",
    "ClientSecret": "${QBO_CLIENT_SECRET}",
    "RedirectUri": "${QBO_REDIRECT_URI}",
    "Environment": "${QBO_ENVIRONMENT}"
  },
  "Syncfusion": {
    "LicenseKey": "${SYNCFUSION_LICENSE_KEY}",
    "KeyVaultSecretName": "Syncfusion-LicenseKey"
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "cb097857-10d5-410b-8e09-6073de3ab035",
    "ClientId": "a1a89a7e-c615-4e76-93d2-d4173700db88",
    "ClientSecret": "${AZURE_AD_CLIENT_SECRET}",
    "Authority": "https://login.microsoftonline.com/cb097857-10d5-410b-8e09-6073de3ab035",
    "CallbackPath": "/signin-oidc",
    "SignedOutCallbackPath": "/signout-oidc"
  }
}
