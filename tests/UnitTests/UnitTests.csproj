<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
  <TargetFramework>net9.0-windows10.0.19041</TargetFramework>
    <IsPackable>false</IsPackable>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
  <PackageReference Include="Microsoft.EntityFrameworkCore.InMemory" />
  <PackageReference Include="xunit" />
  <PackageReference Include="xunit.runner.visualstudio" />
  <PackageReference Include="Microsoft.NET.Test.Sdk" />
  </ItemGroup>

  <ItemGroup>
  <!-- Removed project references to avoid building unrelated UI projects during fast unit tests.
       Tests are self-contained and use the TestPolicyFactory helper. Add project references back
       if you need integration tests that depend on application projects. -->
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Polly" />
  </ItemGroup>

  <ItemGroup>
    <!-- Only include the quick resilience tests and their helpers to keep this test run fast and isolated -->
    <Compile Include="..\Unit\Resilience\**\*.cs" />
    <Compile Include="..\Unit\TestHelpers\**\*.cs" />
  </ItemGroup>

</Project>
