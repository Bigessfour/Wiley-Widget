<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0-windows10.0.26100.0</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
    <NoWarn>$(NoWarn);MSB3277</NoWarn>
    <!-- Disable xUnit test collection parallelization to avoid static/service races in UI tests -->
    <xUnitParallelizeTestCollections>false</xUnitParallelizeTestCollections>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="xunit" />
    <PackageReference Include="xunit.runner.visualstudio" />
    <PackageReference Include="Xunit.StaFact" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
    <PackageReference Include="Moq" />
    <PackageReference Include="FluentAssertions" />
    <PackageReference Include="coverlet.collector" />
    <PackageReference Include="Syncfusion.Tools.Windows" />
    <PackageReference Include="FlaUI.Core" />
    <PackageReference Include="FlaUI.UIA3" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Unit\Startup\StartupOrchestratorTests.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\WileyWidget.WinForms\WileyWidget.WinForms.csproj" />
    <ProjectReference Include="..\..\src\WileyWidget.Business\WileyWidget.Business.csproj" />
    <ProjectReference Include="..\..\src\WileyWidget.Services\WileyWidget.Services.csproj" />
    <ProjectReference Include="..\..\src\WileyWidget.Data\WileyWidget.Data.csproj" />
    <ProjectReference Include="..\..\src\WileyWidget.Models\WileyWidget.Models.csproj" />
    <!-- Temporarily removed to avoid tools build failures when running unit tests. Re-add when WileyWidgetMcpServer
    compiles. -->
    <!-- <ProjectReference
    Include="..\..\tools\SyncfusionMcpServer\tools\WileyWidgetMcpServer\WileyWidgetMcpServer.csproj" /> -->
  </ItemGroup>

</Project>