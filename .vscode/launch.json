{
  "$schema": "https://raw.githubusercontent.com/microsoft/vscode/main/src/vs/workbench/contrib/debug/common/debugger.schema.json",
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch WileyWidget (Local)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-clean",
      "program": "${workspaceFolder}/bin/Debug/net9.0-windows10.0.19041.0/win-x64/WileyWidget.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "postDebugTask": "kill-dotnet",
      "stopAtEntry": false,
      "symbolOptions": {
        "searchMicrosoftSymbolServer": false,
        "searchNuGetOrgSymbolServer": false,
        "moduleFilter": {
          "mode": "loadAllButExcluded",
          "excludedModules": [
            "System.*",
            "Microsoft.*",
            "WindowsBase",
            "PresentationCore",
            "PresentationFramework",
            "WindowsFormsIntegration",
            "System.Xaml",
            "mscorlib",
            "netstandard"
          ]
        }
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Launch WileyWidget (Debug Exceptions)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net9.0-windows10.0.19041.0/win-x64/WileyWidget.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "postDebugTask": "kill-dotnet",
      "justMyCode": false,
      "stopAtEntry": false,
      "symbolOptions": {
        "searchMicrosoftSymbolServer": false,
        "searchNuGetOrgSymbolServer": false,
        "moduleFilter": {
          "mode": "loadAllButExcluded",
          "excludedModules": [
            "System.*",
            "Microsoft.*",
            "WindowsBase",
            "PresentationCore",
            "PresentationFramework",
            "WindowsFormsIntegration",
            "System.Xaml",
            "mscorlib",
            "netstandard"
          ]
        }
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "SYNCFUSION_LICENSE_KEY": "${env:SYNCFUSION_LICENSE_KEY}",
        "COREHOST_TRACE": "1"
      },
      "envFile": "${workspaceFolder}/.env"
    },
    // 'Launch WileyWidget (Azure)' configuration removed â€” project no longer uses Azure.
    // If you need an Azure-specific launch configuration in future, add it back here and
    // ensure required AZURE_* env vars are set in your environment (not checked into .env).
    {
      "name": "Attach to Process",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "Launch WileyWidget (Build Diagnostics)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net9.0-windows10.0.19041.0/win-x64/WileyWidget.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "postDebugTask": "kill-dotnet",
      "stopAtEntry": false,
      "justMyCode": false,
      "symbolOptions": {
        "searchMicrosoftSymbolServer": false,
        "searchNuGetOrgSymbolServer": false,
        "moduleFilter": {
          "mode": "loadAllButExcluded",
          "excludedModules": [
            "System.*",
            "Microsoft.*",
            "WindowsBase",
            "PresentationCore",
            "PresentationFramework",
            "WindowsFormsIntegration",
            "System.Xaml",
            "mscorlib",
            "netstandard"
          ]
        }
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "SYNCFUSION_LICENSE_KEY": "${env:SYNCFUSION_LICENSE_KEY}",
        "DEBUG_XAML": "true",
        "ENABLE_XAML_DIAGNOSTICS": "true",
        "WPF_TRACE_SETTINGS": "DataBinding:Warning,ResourceDictionary:Warning,DependencyProperty:Warning,Animation:Warning",
        "COREHOST_TRACE": "1",
        "DEBUG_WPF_STARTUP": "true",
        "WILEY_WIDGET_XAML_DEBUG": "true"
      },
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Launch WileyWidget (Enhanced XAML Debug)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net9.0-windows10.0.19041.0/win-x64/WileyWidget.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "postDebugTask": "kill-dotnet",
      "stopAtEntry": false,
      "justMyCode": false,
      "symbolOptions": {
        "searchMicrosoftSymbolServer": true,
        "searchNuGetOrgSymbolServer": true,
        "moduleFilter": {
          "mode": "loadAllButExcluded",
          "excludedModules": [
            "System.*",
            "Microsoft.*",
            "WindowsBase",
            "PresentationCore",
            "PresentationFramework",
            "WindowsFormsIntegration",
            "System.Xaml",
            "mscorlib",
            "netstandard"
          ]
        }
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "SYNCFUSION_LICENSE_KEY": "${env:SYNCFUSION_LICENSE_KEY}",
        "DEBUG_XAML": "true",
        "ENABLE_XAML_DIAGNOSTICS": "true",
        "WPF_TRACE_SETTINGS": "DataBinding:All,ResourceDictionary:All,DependencyProperty:All,Animation:All,RoutingStrategy:All",
        "COREHOST_TRACE": "1",
        "DEBUG_WPF_STARTUP": "true",
        "WILEY_WIDGET_XAML_DEBUG": "true",
        "XAML_DIAGNOSTICS_ENABLED": "true",
        "ENABLE_XAML_DEBUGGING": "true",
        "WPF_DIAGNOSTICS": "true"
      },
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Launch WileyWidget (Release - XAML Debug)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "publish",
      "program": "${workspaceFolder}/publish/WileyWidget.exe",
      "args": [],
      "cwd": "${workspaceFolder}/publish",
      "console": "internalConsole",
      "postDebugTask": "kill-dotnet",
      "stopAtEntry": false,
      "justMyCode": false,
      "symbolOptions": {
        "searchMicrosoftSymbolServer": true,
        "searchNuGetOrgSymbolServer": true,
        "moduleFilter": {
          "mode": "loadAllButExcluded",
          "excludedModules": [
            "System.*",
            "Microsoft.*",
            "WindowsBase",
            "PresentationCore",
            "PresentationFramework",
            "WindowsFormsIntegration",
            "System.Xaml",
            "mscorlib",
            "netstandard"
          ]
        }
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Production",
        "SYNCFUSION_LICENSE_KEY": "${env:SYNCFUSION_LICENSE_KEY}",
        "DEBUG_XAML": "true",
        "ENABLE_XAML_DIAGNOSTICS": "true",
        "WPF_TRACE_SETTINGS": "DataBinding:Warning,ResourceDictionary:Warning,DependencyProperty:Warning",
        "COREHOST_TRACE": "1",
        "DEBUG_WPF_STARTUP": "true",
        "WILEY_WIDGET_XAML_DEBUG": "true"
      },
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Debug Python Startup Script",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/dev-start-debug.py",
      "python": "${workspaceFolder}/.venv/Scripts/python.exe",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "DEBUG_STARTUP": "true",
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": ["--verbose"]
    },
    {
      "name": "Debug Python Startup (Clean Only)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/dev-start-debug.py",
      "python": "${workspaceFolder}/.venv/Scripts/python.exe",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "DEBUG_STARTUP": "true",
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": ["--clean-only", "--verbose"]
    },
    {
      "name": "Debug Python Environment Loader",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/load-env.py",
      "python": "${workspaceFolder}/.venv/Scripts/python.exe",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": ["--status"]
    },
    {
      "name": "Debug Python Cleanup Script",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/cleanup-dotnet.py",
      "python": "${workspaceFolder}/.venv/Scripts/python.exe",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": ["--dry-run"]
    },
    {
      "name": "Debug All Python Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "unittest",
      "python": "${workspaceFolder}/.venv/Scripts/python.exe",
      "args": ["discover", "-v", "-s", "${workspaceFolder}"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Debug Python Tests with Coverage",
      "type": "debugpy",
      "request": "launch",
      "module": "coverage",
      "python": "${workspaceFolder}/.venv/Scripts/python.exe",
      "args": [
        "run",
        "--source=${workspaceFolder}",
        "-m",
        "unittest",
        "discover",
        "-v",
        "-s",
        "${workspaceFolder}"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Debug Current Python Test File",
      "type": "debugpy",
      "request": "launch",
      "module": "unittest",
      "python": "${workspaceFolder}/.venv/Scripts/python.exe",
      "args": ["-v", "${file}"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Debug C# Tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/WileyWidget.Tests/bin/Debug/net9.0/WileyWidget.Tests.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false,
      "symbolOptions": {
        "searchMicrosoftSymbolServer": false,
        "searchNuGetOrgSymbolServer": false,
        "moduleFilter": {
          "mode": "loadAllButExcluded",
          "excludedModules": [
            "System.*",
            "Microsoft.*",
            "WindowsBase",
            "PresentationCore",
            "PresentationFramework",
            "WindowsFormsIntegration",
            "System.Xaml",
            "mscorlib",
            "netstandard"
          ]
        }
      }
    },
    {
      "name": "Debug C# UI Tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/WileyWidget.UiTests/bin/Debug/net9.0/WileyWidget.UiTests.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false,
      "symbolOptions": {
        "searchMicrosoftSymbolServer": false,
        "searchNuGetOrgSymbolServer": false,
        "moduleFilter": {
          "mode": "loadAllButExcluded",
          "excludedModules": [
            "System.*",
            "Microsoft.*",
            "WindowsBase",
            "PresentationCore",
            "PresentationFramework",
            "WindowsFormsIntegration",
            "System.Xaml",
            "mscorlib",
            "netstandard"
          ]
        }
      }
    },
    {
      "name": "Debug C# Tests with Coverage",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/WileyWidget.Tests/bin/Debug/net9.0/WileyWidget.Tests.dll",
      "args": [
        "--collect:\"XPlat Code Coverage\"",
        "--results-directory:${workspaceFolder}/TestResults/Coverage"
      ],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false,
      "symbolOptions": {
        "searchMicrosoftSymbolServer": false,
        "searchNuGetOrgSymbolServer": false,
        "moduleFilter": {
          "mode": "loadAllButExcluded",
          "excludedModules": [
            "System.*",
            "Microsoft.*",
            "WindowsBase",
            "PresentationCore",
            "PresentationFramework",
            "WindowsFormsIntegration",
            "System.Xaml",
            "mscorlib",
            "netstandard"
          ]
        }
      },
      "env": {
        "COVERAGE_FILE": "${workspaceFolder}/TestResults/Coverage/coverage.cobertura.xml"
      }
    },
    {
      "name": "Python: Attach to debugpy",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "${workspaceFolder}"
        }
      ],
      "justMyCode": false
    },
    {
      "name": "Debug Startup with debugpy",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/dev-start-debugpy.py",
      "python": "${workspaceFolder}/.venv/Scripts/python.exe",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": ["--debug-port", "5678", "--timing"],
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "DEBUG_STARTUP": "true"
      },
      "justMyCode": false,
      "stopOnEntry": false
    },
    {
      "name": "Debug Startup (No Wait)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/dev-start-debugpy.py",
      "python": "${workspaceFolder}/.venv/Scripts/python.exe",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": ["--debug-port", "5678", "--no-wait", "--timing"],
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "DEBUG_STARTUP": "true"
      },
      "justMyCode": false,
      "stopOnEntry": false
    },
    {
      "name": "Debug WPF Threading Script",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/debug-wpf-thread.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": ["--verbose", "--timeout=90"],
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "DEBUG_STARTUP": "true"
      }
    },
    {
      "name": "Debug DI Threading Script",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/test-di-thread.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": ["--verbose"],
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Debug Test Thread Monitor",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/monitor-test-thread.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": ["--verbose", "--timeout=90"],
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Debug Test Resource Monitor",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/monitor-test-resources.py",
      "python": "${workspaceFolder}/.venv/Scripts/python.exe",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": ["--report", "--timeout=60"],
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Debug WPF Threading Script",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/debug-wpf-thread.py",
      "args": ["--verbose", "--timeout=90"],
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "DEBUG_STARTUP": "true"
      },
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug DI Threading Script",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/test-di-thread.py",
      "args": ["--verbose"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Debug Test Thread Monitor",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/monitor-test-thread.py",
      "args": ["--verbose", "--timeout=90"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Launch Wiley-Widget with Copilot Debug",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/bin/Debug/net9.0-windows/WileyWidget.exe",
      "preLaunchTask": "build",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "symbolOptions": {
        "searchMicrosoftSymbolServer": false,
        "searchNuGetOrgSymbolServer": false,
        "moduleFilter": {
          "mode": "loadAllButExcluded",
          "excludedModules": [
            "System.*",
            "Microsoft.*",
            "WindowsBase",
            "PresentationCore",
            "PresentationFramework",
            "WindowsFormsIntegration",
            "System.Xaml",
            "mscorlib",
            "netstandard"
          ]
        }
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "SYNCFUSION_LICENSE_KEY": "${env:SYNCFUSION_LICENSE_KEY}",
        "DEBUG_XAML": "true",
        "ENABLE_XAML_DIAGNOSTICS": "true"
      },
      "envFile": "${workspaceFolder}/.env"
    }
    ,
    {
      "name": "Run WileyWidget.Tests (dotnet test)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/WileyWidget.Tests/WileyWidget.Tests.csproj",
        "--no-restore",
        "--verbosity",
        "minimal"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopAtEntry": false
    }
  ]
}
