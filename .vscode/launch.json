{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch WileyWidget (Local)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net9.0-windows/WileyWidget.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Launch WileyWidget (Azure)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net9.0-windows/WileyWidget.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Production",
        "AZURE_SQL_SERVER": "${env:AZURE_SQL_SERVER}",
        "AZURE_SQL_DATABASE": "${env:AZURE_SQL_DATABASE}",
        "AZURE_SQL_USER": "${env:AZURE_SQL_USER}",
        "AZURE_SQL_PASSWORD": "${env:AZURE_SQL_PASSWORD}"
      },
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Attach to Process",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "Debug Syncfusion WPF Form",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net9.0-windows/WileyWidget.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "SYNCFUSION_LICENSE_KEY": "${env:SYNCFUSION_LICENSE_KEY}"
      },
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Debug Python Startup Script",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/dev-start-debug.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "DEBUG_STARTUP": "true",
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": ["--verbose"]
    },
    {
      "name": "Debug Python Startup (Clean Only)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/dev-start-debug.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "DEBUG_STARTUP": "true",
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": ["--clean-only", "--verbose"]
    },
    {
      "name": "Debug Python Environment Loader",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/load-env.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": ["--status"]
    },
    {
      "name": "Debug Python Cleanup Script",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/cleanup-dotnet.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": ["--dry-run"]
    },
    {
      "name": "Debug All Python Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-v",
        "--tb=short",
        "--maxfail=5",
        "-m",
        "not slow",
        "${workspaceFolder}/tests"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Debug Python Tests with Coverage",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-v",
        "--tb=short",
        "--maxfail=5",
        "--cov=${workspaceFolder}",
        "--cov-report=html",
        "--cov-report=term",
        "${workspaceFolder}/tests"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Debug Current Python Test File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-v",
        "--tb=short",
        "${file}"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Debug C# Tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/WileyWidget.Tests/bin/Debug/net9.0/WileyWidget.Tests.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": "Debug C# UI Tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/WileyWidget.UiTests/bin/Debug/net9.0/WileyWidget.UiTests.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": "Debug C# Tests with Coverage",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/WileyWidget.Tests/bin/Debug/net9.0/WileyWidget.Tests.dll",
      "args": [
        "--collect:\"XPlat Code Coverage\"",
        "--results-directory:${workspaceFolder}/TestResults/Coverage"
      ],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false,
      "env": {
        "COVERAGE_FILE": "${workspaceFolder}/TestResults/Coverage/coverage.cobertura.xml"
      }
    }
  ]
}
