{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch WileyWidget (Local)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net8.0-windows/WileyWidget.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Launch WileyWidget (Azure)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net8.0-windows/WileyWidget.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Production",
        "AZURE_SQL_SERVER": "${env:AZURE_SQL_SERVER}",
        "AZURE_SQL_DATABASE": "${env:AZURE_SQL_DATABASE}",
        "AZURE_SQL_USER": "${env:AZURE_SQL_USER}",
        "AZURE_SQL_PASSWORD": "${env:AZURE_SQL_PASSWORD}"
      },
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Attach to Process",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ]
}
