{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/WileyWidget.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/WileyWidget.csproj",
        "-c",
        "Release",
        "-o",
        "${workspaceFolder}/publish"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/WileyWidget.csproj"
      ],
      "problemMatcher": "$msCompile",
      "isBackground": true,
      "group": "build"
    },
    {
      "label": "cleanup-dotnet",
      "type": "shell",
      "command": "python",
      "args": [
        "${workspaceFolder}/scripts/cleanup-dotnet.py",
        "--force"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "dev-start",
      "type": "shell",
      "command": "python",
      "args": [
        "${workspaceFolder}/scripts/dev-start.py"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "load-env",
      "type": "shell",
      "command": "python",
      "args": [
        "${workspaceFolder}/scripts/load-env.py",
        "--load"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "azure-setup",
      "type": "shell",
      "command": "python",
      "args": [
        "${workspaceFolder}/scripts/azure-setup.py"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "azure-test-connection",
      "type": "shell",
      "command": "python",
      "args": [
        "${workspaceFolder}/scripts/azure-setup.py",
        "--test-connection"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "test-fast",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "pytest",
        "-m",
        "unit or smoke",
        "--tb=short",
        "--maxfail=5"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "ef-migrations",
      "command": "dotnet",
      "type": "process",
      "args": ["ef", "migrations", "add", "${input:migrationName}"],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "ef-update",
      "command": "dotnet",
      "type": "process",
      "args": ["ef", "database", "update"],
      "problemMatcher": "$msCompile",
      "group": "build"
    }
  ],
  "inputs": [
    {
      "id": "migrationName",
      "description": "Name of the migration",
      "default": "NewMigration",
      "type": "promptString"
    }
  ]
}
