<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <!-- Test execution settings -->
  <RunConfiguration>
    <MaxCpuCount>1</MaxCpuCount>
    <ResultsDirectory>./TestResults</ResultsDirectory>
    <TestSessionTimeout>300000</TestSessionTimeout> <!-- 5 minutes -->
    <TreatNoTestsAsError>false</TreatNoTestsAsError>
    <TargetFrameworkVersion>net9.0</TargetFrameworkVersion>
    
    <!-- Detailed logging configuration -->
    <EnvironmentVariables>
      <TEST_LOG_LEVEL>Debug</TEST_LOG_LEVEL>
      <TEST_ERROR_LOG_PATH>./test-logs/ui-test-errors.log</TEST_ERROR_LOG_PATH>
      <UI_TEST_DIAGNOSTICS>true</UI_TEST_DIAGNOSTICS>
    </EnvironmentVariables>
  </RunConfiguration>

  <!-- Test filtering - uncomment to skip problematic tests -->
  <!--
  <TestRunParameters>
    <Parameter name="TestCategory" value="Stable" />
  </TestRunParameters>
  -->

  <!-- Data collectors for coverage and diagnostics -->
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat Code Coverage">
        <Configuration>
          <Format>cobertura</Format>
          <Exclude>[WileyWidget.UiTests]*</Exclude>
          <ExcludeByAttribute>Obsolete,GeneratedCodeAttribute,CompilerGeneratedAttribute</ExcludeByAttribute>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
</RunSettings>