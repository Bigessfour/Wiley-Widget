<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>
  <ShadowCopy>true</ShadowCopy>
  <!-- Suppress spurious file in use warnings during UI automation tear-down -->
  <NoWarn>$(NoWarn);MSB3026;MSB3027;MSB3021</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\WileyWidget\WileyWidget.csproj" />
  <PackageReference Include="FlaUI.Core" Version="3.1.0" />
  <PackageReference Include="FlaUI.UIA3" Version="3.1.0" />
  <PackageReference Include="NUnit" Version="4.2.2" />
  <PackageReference Include="NUnit3TestAdapter" Version="4.6.0" />
  <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.10.0" />
  <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="9.0.0" PrivateAssets="all" />
  </ItemGroup>

</Project>
