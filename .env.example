# Azure Environment Configuration
# Copy this file to .env and fill in your actual values

# Azure Subscription and Authentication
AZURE_SUBSCRIPTION_ID=89c2076a-8c6f-41fe-b03c-850d46a57abf
AZURE_TENANT_ID=cb097857-10d5-410b-8e09-6073de3ab035
AZURE_AD_CLIENT_ID=your-azure-ad-app-client-id
AZURE_AD_TENANT_ID=cb097857-10d5-410b-8e09-6073de3ab035

# Azure SQL Database Configuration
AZURE_SQL_SERVER=your-sql-server.database.windows.net
AZURE_SQL_DATABASE=WileyWidgetDb
AZURE_SQL_USER=your-admin-user
AZURE_SQL_PASSWORD=your-secure-password
AZURE_SQL_RETRY_ATTEMPTS=3

# QuickBooks Configuration (if needed)
QBO_CLIENT_ID=your-quickbooks-client-id
QBO_CLIENT_SECRET=your-quickbooks-client-secret
QBO_REDIRECT_URI=https://localhost:5001/callback
QBO_ENVIRONMENT=sandbox

# Development Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=https://localhost:5001;http://localhost:5000

# AI Service API Keys
XAI_API_KEY=your-xai-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Font Configuration for Multi-Machine Development
# Use Docker fonts if running in containerized environment
DOCKER_FONTS_ENABLED=true
FONT_FAMILY_FALLBACK=Segoe UI, Tahoma, Arial
SYNC_FONT_CACHE_PATH=/tmp/syncfusion-font-cache
ENABLE_FONT_PRELOADING=true

# WPF Rendering Configuration
WPF_DISABLE_HW_ACCELERATION=false
WPF_FORCE_SOFTWARE_RENDERING=false
ENABLE_WPF_TRACING=true

# Syncfusion License Configuration
SYNCFUSION_LICENSE_KEY=your-syncfusion-license-key-here

# QuickBooks Configuration (if needed)
QBO_CLIENT_ID=your-quickbooks-client-id
QBO_CLIENT_SECRET=your-quickbooks-client-secret
QBO_REDIRECT_URI=https://localhost:5001/callback
QBO_ENVIRONMENT=sandbox
